<script src="<!--{{asset('/static/js/ueditor/ueditor.all.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/lang/zh-cn/zh-cn.js')}}-->"></script>
<script src="<!--{{asset('/static/js/plugins/tagsinput/jquery.tagsinput.min.js')}}-->"></script>
<script src="<!--{{asset('/static/js/plugins/jquery-ui/jquery-ui-1.9.2.custom.min.js')}}-->"></script>
<script src="/static/js/laydate1.1/laydate.js"></script>
<script src="/static/js/ajaxfileupload.js"></script>
<script>
    var img_path;
$(function(){

    $(".tijiao").click(function(){
        var configKey = $(this).attr("did");
        var configValue = $("input[name='"+configKey+"']").val();
        if(!configValue){
            alert("不能传空");
        }
        $.post('<!--{{url('v4alotteryproduct/bigwheel/ajax-do')}}-->',{configKey:configKey,configValue:configValue},function(data){
            if(data.success=="true"){
                alert("修改成功！");
            }else{
                alert(data.data);
            }
        },"json")
    })

});
$('input').iCheck({
    checkboxClass: 'icheckbox_square-orange',
    radioClass: 'iradio_square-orange',
    increaseArea: '20%' // optional
});
$('.switchbox').bootstrapSwitch();
</script>
