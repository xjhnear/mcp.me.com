<!--{%extends "../sub-layout-giftbag.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					中奖名单
				</h3>
				<div class="actions">
					<form action="<!--{{url('/v4alotteryproduct/bigwheel/users')}}-->">
						<table class="table-filter">
							<tr>
                                <td><span class="label label-blue">总数：<!--{{totle}}--></span>
                                </td>
                                <td><span class="label label-blue">开始时间</span>
                                    <div class="input-append date " >
                                        <input name="recordTimeBegin" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{search.recordTimeBegin}}-->" readonly>
                                        <span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </td>
                                <td><span class="label label-blue">结束时间</span>
                                    <div class="input-append date "  data-date="">
                                        <input name="recordTimeEnd" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker"  value="<!--{{search.recordTimeEnd}}-->" id="date_timepicker_end" readonly>
                                        <span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </td>
                                <td>
                                    <span class="label label-blue"></span>
                                    <div class="input-append date " >
                                        <!--{{form_select('detailId',details,search.detailId,{'class':'sel_prize'})}}-->
                                    </div>

                                </td>
								<td>
									<input name="mobile"  placeholder="手机号" style="width:177px;" type="text" class="input-small" value="<!--{{search.mobile}}-->" >
								</td>
								<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
                                <td><a class="btn btn-teal" href="<!--{{search.url}}-->?recordTimeBegin=<!--{{search.recordTimeBegin}}-->&recordTimeEnd=<!--{{search.recordTimeEnd}}-->&detailId=<!--{{search.detailId}}-->&uid=<!--{{search.uid}}-->&schemeId=<!--{{search.schemeId}}-->">导出</a></td>
							</tr>
							
						</table>
					</form>
				</div>
			</div>

			<div class="box-content nopadding">
				<table class="table table-hover table-nomargin">
					<thead>
					<tr>
						<th >序列</th>
						<th >中奖物品</th>
						<th >中奖时间</th>
						<th >中奖方案名</th>
						<th >用户</th>
						<!-- <th >添加用户列表</th> -->
					</tr>
					</thead>
					<tbody>
						<!--{% for key,item in datalist%}-->
							<tr>
								<td><!--{{item.schemeId}}--></td>
								<td><!--{{item.prizeName}}--></td>
								<td><!--{{item.recordTime}}--></td>
								<td><!--{{item.schemeName}}--></td>
								<td>
                                    <span class="badge badge-info"><!--{{item.uid}}--></span>
                                    <br/>
                                    <a href="<!--{{url('user/users/edit',{'id':item.uid})}}-->" target="_blank">
                                        <!--{{userinfo[item.uid]['nickname']}}--><br>
                                        <!--{{userinfo[item.uid]['mobile']}}-->
                                    </a>
								<!--<td><a href="javascript:void(0);" class="select-uid-ajax" data-uid="<!--{{item.uid}}-->" data-nickname="<!--{{userinfo[item.uid].nickname}}-->">选定</a></td> -->
							</tr>
						<!--{%endfor%}-->
					</tbody>
				</table>
				<div class="pagelink">
					<!--{{pagelinks}}-->
				</div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script src="/static/js/laydate/laydate.js"></script>
<script>
	$(function(){
	 	$('a.select-uid-ajax').bind('click',function(){
	        var uid = $(this).attr('data-uid');
	        var nickname = $(this).attr('data-nickname');
	        $.get('<!--{{url('user/users/add-select-user')}}-->',{'uid':uid,'nickname':nickname},function(data){
	            var html = '<li style="float:left;width:150px;"><a href="javascript:void(0)" data-uid="'+uid+'" class="delete-selected-uid-ajax">获奖人员-'+nickname+'<i class="icon-trash"></i></a>';
	            $('#selected-pop-ul').prepend(html);
	            $('#selected-uids-count').text($('.delete-selected-uid-ajax').length);
	        });
	    });
    }); 
</script>
<!--{%endblock%}-->