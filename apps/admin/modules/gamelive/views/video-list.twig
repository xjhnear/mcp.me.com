                    <tr>
                        <td><!--{{item.id}}--></td>
                        <td>
                            <!--{{item.title}}-->
                        </td>
                        <td class="table-list-img"><a href="#bigimg" data-toggle="modal"><img src="<!--{{item.titlePic}}-->" /></a></td>
                        <td><!--{{item.publishTime|date('Y-m-d H:i')}}--></td>
                        <td></td>
                        <td>
                            <a href="<!--{{url('gamelive/video/edit')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">编辑</a>
                            <a href="<!--{{url('gamelive/video/delete')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary ajax-del">删除</a>
