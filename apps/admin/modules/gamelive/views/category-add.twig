<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<link rel="stylesheet" href="/static/css/plugins/tagsinput/jquery.tagsinput.css">
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>TAG信息</h3>
                <div class="actions">
                    <a href="javascript:void(0)" class="btn btn-teal top-submit"><i class="icon-ok"></i>保存</a>
                </div>
            </div>
            <div class="box-content">
                <form action="<!--{{url('gamelive/category/edit')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
                    <input name="channel" type="hidden" value="<!--{{ channel }}-->" />
                    <div class="control-group">
                        <label class="control-label">TAG<i class="tip-star">*</i></label>
                        <div class="controls">
                            <div class=" input-append">
                                <input type="text" name="tag" class="input-xlarge" value="<!--{{category.tag}}-->" />
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">排序</label>
                        <div class="controls">
                            <div class=" input-append">
                                <input type="text" name="idx" class="input-xlarge" value="<!--{{category.idx}}-->" />
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="<!--{{asset('/static/js/plugins/tagsinput/jquery.tagsinput.min.js')}}-->"></script>
<script src="<!--{{asset('/static/js/plugins/jquery-ui/jquery-ui-1.9.2.custom.min.js')}}-->"></script>
<script>

    $(function(){
        $('.top-submit').bind('click',function(){
            $('form').submit();
        });
    });
</script>
<!--{%endblock%}-->