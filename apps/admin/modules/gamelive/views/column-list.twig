<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    栏目列表
                </h3>
                <div class="actions">
                    <form action="<!--{{url('gamelive/column/list')}}-->" class="">
                        <table class="table-filter">
                            <tr>
                                <td><a href="<!--{{url('gamelive/column/edit')}}-->" class="btn btn-teal"><i class="icon-plus"></i>添加栏目</a></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-60">ID</th>
                        <th>标题</th>
                        <th>图片</th>
                        <th class="col-150">摘要</th>
                        <th class="table-btn-group">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{%for item in datalist%}-->
                    <tr>
                        <td><!--{{item.id}}--></td>
                        <td>
                            <!--{{item.name}}-->
                        </td>
                        <td class="table-list-img"><a href="#bigimg" data-toggle="modal"><img src="<!--{{item.picUrl}}-->" /></a></td>
                        <td><!--{{item.summary}}--></td>
                        <td>
                            <a href="<!--{{url('gamelive/column/edit')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">编辑</a>
                            <a href="<!--{{url('gamelive/column/delete')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary ajax-del">删除</a>
                        </td>
                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
    $(function(){
        $('a.ajax-del').bind('click',function(){
            if(!confirm('确定要删除数据吗？')){
                return false;
            }
        });
    });
</script>
<!--{%endblock%}-->