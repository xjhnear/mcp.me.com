<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>首页轮播图
				</h3>
				<div class="actions">
				    <table class="table-filter">
				        <tr>				            
							<td><a href="<!--{{url('gamelive/home/slide-edit')}}-->" class="btn btn-teal"><i class="icon-plus"></i>添加首页轮播图</a></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">位置顺序</th>
							<th>标题</th>
							<th class="col-150">缩略图</th>
							<th class="col-150">大图</th>
