						<tr>
							<td><!--{{item.idx}}--></td>
							<td>
								<!--{{item.summary}}-->
							</td>
							<td class="table-list-img"><a href="#bigimg" data-toggle="modal"><img src="<!--{{item.picMin}}-->" /></a></td>
							<td class="table-list-img"><a href="#bigimg" data-toggle="modal"><img src="<!--{{item.picUrl}}-->" /></a></td>
							<td>
							    <a href="<!--{{url('gamelive/home/slide-edit')}}-->?idx=<!--{{item.idx}}-->" class="btn btn-primary">编辑</a>
								<a href="<!--{{url('gamelive/home/slide-delete')}}-->?idx=<!--{{item.idx}}-->" class="btn btn-primary">删除</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			</div>
		</div>
	</div>
</div>
