<!--{%extends "../sub-layout-giftbag.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>编辑礼包信息</h3>
			</div>
			<div class="box-content">
				<form id="gift-info-form" action="<!--{{url('v4giftbag/gift/edit')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
					<input type="hidden" name="product_code" value="<!--{{ giftbag.productCode }}-->">
					<input type="hidden" name="product_id" value="<!--{{ giftbag.productId }}-->">
					<input type="hidden" name="freeContent" value="<!--{{ freeContent }}-->">
                    <div class="control-group app_sel" style="display: none" >
                        <label class="control-label">*平台</label>
                        <div class="controls">
                            <!--{{form_select('appname',appnames,giftbag.appname,{'class':'app_sel'})}}-->
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label"></label>
                                <div class="controls">
                                    <input name="currencyType" type="radio" value="1"
                                    <!--{{ giftbag.currencyType == 1 ? 'checked' : '' }}--> <!--{% if giftbag.currencyType != 1 %}--> disabled="disabled" <!--{% endif %}--> />钻石礼包
                                </div>
                            </div>
                        </div>
                        <div class="span3">
                            <div class="controls">
                                <input  name="currencyType" type="radio" value="0" <!--{% if giftbag.currencyType != 0 %}--> disabled="disabled" <!--{% endif %}-->
                                <!--{{ giftbag.currencyType == 0 ? 'checked' : '' }}-->/>游币礼包
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="span4">
                            <label class="control-label">名称</label>
                            <div class="controls">
                                <input type="text" name="title" class="input-large" value="<!--{{ giftbag.productName }}-->" data-rule-required="true" data-msg-required="请填写名称"/>
                            </div>
                        </div>
                        <div class="span4">
                            <label class="control-label" style="color: red">测试礼包码</label>
                            <div class="controls">
                                <input type="text" name="testCode" class="input-large" value="<!--{{ giftbag.extraReq.testCode }}-->" />
                            </div>
                        </div>
					</div>
                    <div class="control-group">
                        <label class="control-label">所属游戏</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="selected_game_id" name="game_id" type="hidden" value="<!--{{giftbag.gid}}-->"  data-rule-required="true" data-msg-required="请填写游戏名称"  />
                                <input type="hidden" id="icon" name="icon" value="<!--{{ giftbag.img.listPic}}-->">
                                <input name="downurl" type="hidden" value="<!--{{ giftbag.extraReq.freeContent.downurl}}-->">
                                <input name="downurl_linkType" type="hidden" value="<!--{{ giftbag.extraReq.freeContent.downurl_linkType}}-->">
                                <img id="selected_game_icon" name="icon" class="add-on" src="<!--{{ giftbag.img.listPic|default('/static/img/wu_ss.gif') }}-->"/>
                                <input type="text" id="selected_game_name" name="game_name" class="input-medium" value="<!--{{ giftbag.gname }}-->"/>
                                <span class="add-on select-pop-game">选择游戏</span>
                            </div>
                        </div>
                    </div>
                    <!--{% if giftbag.isOnshelf != 'true' %}-->
                        <div class="row-fluid">
                            <div class="span5">
                                <div class="control-group" id="select_cardCode">
                                    <label for="textfield" class="control-label">发布礼包库</label>
                                    <div class="controls">
                                        <div class="input-append">
                                            <input id="selected_cardCode" name="card_code" value="<!--{{ card_info.cardCode}}-->" type="hidden"/>
                                            <input type="text" id="selected_card_name" readonly class="input-small" name="card_des" value="<!--{{card_info.cardDesc}}-->" data-rule-required="true" data-msg-required="请选择卡密" />
                                            <span class="add-on select-card-code">选择</span>
                                            <span class="add-on can-use">可上架礼包<span class="text-error"><!--{{card_info.cardStock - card_info.cardQuota}}--></span>个</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="span3" id="fzsl" style="display: none" >
                                <div class="control-group">
                                    <label for="textfield" class="control-label">发布数量</label>
                                    <div class="controls">
                                        <input type="text" name="card_stock" class="input-small" value="" data-rule-digits="true" data-msg-digits="请填写整数">
                                    </div>
                                </div>
                            </div>
                        </div>
                    <!--{% endif %}-->

                    <div class="row-fluid">
						<div class="span4">
							<div class="control-group">
								<label class="control-label">开始时间</label>
								<div class="controls">
									<div class="input-append date " >
										<input name="start_time" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{giftbag.startTimeStr}}-->" readonly>
										<span class="add-on"><i class="icon-calendar"></i></span>
									</div>
								</div>
							</div>
						</div>
						<div class="span4">
							<div class="control-group">
								<label class="control-label">结束时间</label>
								<div class="controls">
									<div class="input-append date " >
										<input name="end_time" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{giftbag.endTimeStr}}-->" readonly>
										<span class="add-on"><i class="icon-calendar"></i></span>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span5">
							<div class="control-group">
								<label class="control-label">属性</label>
								<label class="checkbox inline">
									<!--{{form_checkbox('is_top',1,giftbag.isTop,{'class':'checkbox'})}}-->置顶
								</label>

						</div>
						</div>
						<div class="span3">
							<div class="control-group">
								<label  id="gift_type" class="control-label">
                                    <!--{{ giftbag.currencyType == 1?'钻石': '游币'}}-->
								</label>
								<div class="controls">
									<input id="coin" type="text" name="coin" placeholder="请填写数量"   value="<!--{{ giftbag.productGamePrice }}-->"
										   class="input-small" data-rule-digits="true" data-msg-digits="请填写整数"/>
								</div>
							</div>
						</div>

					</div>

                    <div class="control-group append">
                        <label class="control-label">热门礼包</label>
                        <div class="controls">
                            <input id="isHot" name="isHot" <!--{{ giftbag.isHot ? 'checked' : '' }}--> data-on-color="success" data-on-text="热门"
                            data-off-color="danger" data-off-text="不热门" class="switchbox" type="checkbox"/>
                        </div>
                    </div>


					<div class="row-fluid">
						<div class="span3">
							<div class="control-group">
								<label class="control-label">领取设定</label>
								<div class="controls">
									<input name="type_set" type="radio" value="1"
									<!--{% if giftbag.isExclusive %}--><!--{% elseif giftbag.isNewUser %}-->
									<!--{% else %}-->checked<!--{% endif %}-->/>普通领取
								</div>
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<input name="type_set" type="radio" value="2"
										<!--{{ giftbag.isExclusive ? 'checked' : '' }}-->/>授权领取
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<input name="type_set" type="radio" value="3"
										<!--{{ giftbag.isNewUser ? 'checked' : '' }}-->/>新手礼包(注册前三天的用户可领取)
							</div>
						</div>
                        <div class="span3">
                            <div class="controls">
                                <input name="type_set" type="radio" value="4"
                                <!--{{ giftbag.inventedType ? 'checked' : '' }}-->/>礼品码
                            </div>
                        </div>
					</div>
					<div id="exclusive" style="display: none;">
                        <!--
                        <div class="control-group">
                            <label for="textfield" class="control-label">选择用户</label>
                            <div class="controls">
                                <div class="input-append">
                                    <a href="javascript:void(0);" id="users" class="btn btn-primary select-unames">请选择用户</a>
                                </div>555
                            </div>
                        </div>

                        <div class="control-group" >
                            <label class="control-label">授权用户</label>
                            <div class="controls">
                                <textarea id="uid" readonly name="account_ids"
                                          class=""><!--{{  giftbag.accountList }}--></textarea>

                            </div>
                        </div>
                        -->
                        <div class="row-fluid">
                            <div class="span3">
                                <div class="control-group">
                                    <label class="control-label">活动显示页面</label>
                                    <div class="controls">
                                        <input name="linkType" type="radio" value="0"
                                        <!--{{ giftbag.linkType==0?'checked':'' }}-->      />帖子
                                    </div>
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <input  name="linkType" type="radio" <!--{{ giftbag.linkType==1?'checked':'' }}--> value="1"/>
                                    内部HTML
                                </div>
                            </div>
                            <div class="span3">
                                <div class="controls">
                                    <input name="linkType" type="radio" <!--{{ giftbag.linkType==2?'checked':'' }}--> value="2"/>外部HTML
                                </div>
                            </div>
							<div class="span3">
								<div class="controls">
									<input name="linkType" type="radio"<!--{{ giftbag.linkType==3?'checked':'' }}--> value="3"/>活动
								</div>

							</div>
							<div class="span3">
								<div class="controls">
									<input name="linkType" type="radio"<!--{{ giftbag.linkType==4?'checked':'' }}--> value="4"/>任务
								</div>

							</div>
                        </div>
                        <div class="control-group">
                            <label class="control-label" id="linkType">
                                <!--{% if giftbag.linkType==1 %}-->
                                内部HTML
                                <!--{% elseif giftbag.linkType==0 %}-->
                                帖子ID
                                <!--{% elseif giftbag.linkType==2 %}-->
                                外部HTML
								<!--{% elseif giftbag.linkType==3 %}-->
			    活动
								<!--{% elseif giftbag.linkType==4 %}-->
			    任务
                                <!--{% else  %}-->
                                帖子ID
                                <!--{% endif  %}-->
                            </label>
                            <div class="controls">

                                <input type="text" name="linkId" data-rule-required="true" data-msg-required="请填写相关选择内容" class="input-large"  value="<!--{{ giftbag.linkId}}-->" />
                            </div>
                        </div>
					</div>
					<div class="row-fluid">
						<div class="span3">
							<div class="control-group">
								<div class="controls">
									<!--{{form_radio('limit_type',-1,giftbag.limitType == -1)}}-->限领一个
								</div>
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<!--{{form_radio('limit_type',0,giftbag.limitType == 0)}}-->不限领取
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<!--{{form_radio('limit_type',1,giftbag.limitType == 1,{'id':'limit'})}}-->按规则限领
							</div>
						</div>
					</div>

					<div class="control-group limit">
						<label class="control-label">限购规则设定</label>
						<div class="controls">
							<input name="limit[]" type="checkbox" id="mr-count"  value="1" <!--{{ giftbag.singleLimit ? 'checked' : '' }}-->/> 限制每人可领取总数
							<input type="text"  name="single_limit" class="validate[condRequired[mr-count]]" data-rule-min="2" data-msg-min="总数至少为2"
								   id="single-limit" style="width:50px" value="<!--{{ giftbag.singleLimit }}-->"> 个
						</div>
					</div>
                    <!--
                        data-rule-digits="true"
								   data-msg-digits="请填写整数"
                    -->
					<div class="row-fluid">
						<div class="span5 limit">
							<div class="control-group">
								<div class="controls">
									<input name="limit[]" type="checkbox" id="mt-count" value="2" <!--{{ giftbag.timeType ? 'checked' : '' }}-->/> 限制每人每

									<input type="text" id="time_value" name="time_value"  data-rule-min="1" data-msg-min="最小为1"
										 class="daily-limit-1 validate[condRequired[mt-count]]"  style="width:30px" value="<!--{{ giftbag.timeValue }}-->">
									<select id="time_type" name="time_type" style="width:80px" >
										<option value="day">天</option>
										<option value="hour">小时</option>
									</select>
								</div>
							</div>
						</div>
						<div class="span4 limit">
							<div class="control-group">
								<div class="controls">
								可领取数 <input type="text" id="rule_limit" name="rule_limit" data-rule-min="1" data-msg-min="最小为1"
									class="daily-limit-2 validate[condRequired[mt-count]] input-small" value="<!--{{ giftbag.ruleLimit }}-->" style="width:30px;"> 个
								</div>
							</div>
						</div>
					</div>

					<div class="control-group append">
						<label class="control-label">追加发布设定</label>
						<div class="controls">
							<input  id="is-append" name="is_append" <!--{{ giftbag.extraReq.addType == '0' ? '' : 'checked' }}-->
							data-on-color="success" data-on-text="追加" data-off-color="danger" data-off-text="不追加" class="switchbox" type="checkbox"/>
						</div>
					</div>
        <!--
					<div class="row-fluid append-file">
						<div class="span4">
							<div class="control-group">
								<label for="textfield" class="control-label">补充礼包库</label>
								<div class="controls">
									<div data-provides="fileupload" class="fileupload fileupload-new">
										<span class="btn btn-file"><span class="fileupload-new">选择</span>
											<span class="fileupload-exists">重选</span>
											<input type="file" name="append_file"></span>
										<span class="fileupload-preview"></span>
										<a style="float: none" data-dismiss="fileupload" class="close fileupload-exists" href="#">×</a>
									</div>
								</div>
							</div>
						</div>
					</div>
            -->
					<div class="control-group appends">
						<div class="controls">
							<!--{{form_radio('append',1,giftbag.extraReq.addType == 'addByTime',{'id':'append-1','class':'r-append validate[condRequired[is-append]]'})}}--> 按时间追加
							每 <input type="text" name="add_period" data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1"
								id="add-period" class="validate[condRequired[append-1]]" data-msg-digits="请填写整数" style="width:30px" value="<!--{{ giftbag.extraReq.addType == 'addByTime' ? giftbag.extraReq.addPeriod : '' }}-->">
							<select name="add_period_type" style="width:80px" >
								<option value="day" <!--{{ giftbag.extraReq.addPeriodType == 'day' ? 'selected' : '' }}-->>天</option>
								<option value="hour" <!--{{ giftbag.extraReq.addPeriodType == 'hour' ? 'selected' : '' }}-->>小时</option>
							</select>
							追加 <input id="add-num-1" name="add_num_1" class="input-small validate[condRequired[append-1]]" type="text"
									data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1" data-msg-digits="请填写整数"
									value="<!--{{ giftbag.extraReq.addType == 'addByTime' ? giftbag.extraReq.addNum : '' }}-->">
							追加上限 <input id="add-num-max-1" name="add_num_max_1" class="input-small validate[condRequired[append-1]]" type="text"
									data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1" data-msg-digits="请填写整数"
									value="<!--{{ giftbag.extraReq.addType == 'addByTime' ? giftbag.extraReq.addNumMax : '' }}-->">
						</div>
					</div>
					<div class="control-group appends">
						<div class="controls">
							<!--{{form_radio('append',2,giftbag.extraReq.addType == 'addByNum',{'id':'append-2','class':'r-append validate[condRequired[is-append]]'})}}--> 按剩余数追加
							当剩余礼包数小于 <input type="text" id="condition-num-1" name="condition_num_1" data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1"
								 class="validate[condRequired[append-2]]" data-msg-digits="请填写整数" style="width:30px" value="<!--{{ giftbag.extraReq.addType == 'addByNum' ? giftbag.extraReq.conditionNum : '' }}-->">
							追加 <input id="add-num-2" name="add_num_2" class="input-small validate[condRequired[append-2]]" type="text"
									data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1" data-msg-digits="请填写整数"
									value="<!--{{ giftbag.extraReq.addType == 'addByNum' ? giftbag.extraReq.addNum : '' }}-->">
							追加上限 <input id="add-num-max-2" name="add_num_max_2" class="input-small validate[condRequired[append-2]]" type="text"
									data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1" data-msg-digits="请填写整数"
									value="<!--{{ giftbag.extraReq.addType == 'addByNum' ? giftbag.extraReq.addNumMax : '' }}-->">
						</div>
					</div>
					<div class="control-group appends">
						<div class="controls">
							<!--{{form_radio('append',3,giftbag.extraReq.addType == 'addByPer',{'id':'append-3','class':'r-append validate[condRequired[is-append]]'})}}--> 按剩余率追加
							当剩余礼包比小于 <input type="text" id="condition-num-2" name="condition_num_2" data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1"
								 class="validate[condRequired[append-3]]" data-msg-digits="请填写整数" style="width:30px" value="<!--{{ giftbag.extraReq.addType == 'addByPer' ? giftbag.extraReq.conditionNum : '' }}-->"> %
							追加 <input id="add-num-3" name="add_num_3" class="input-small validate[condRequired[append-3]]" type="text"
									data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1" data-msg-digits="请填写整数"
									value="<!--{{ giftbag.extraReq.addType == 'addByPer' ? giftbag.extraReq.addNum : '' }}-->">
							追加上限 <input id="add-num-max-3" name="add_num_max_3" class="input-small validate[condRequired[append-3]]" type="text"
									data-rule-digits="true" data-rule-min="1" data-msg-min="最小为1" data-msg-digits="请填写整数"
									value="<!--{{ giftbag.extraReq.addType == 'addByPer' ? giftbag.extraReq.addNumMax : '' }}-->">
						</div>
					</div>

					<div class="row-fluid">
						<div class="span4">
							<div class="control-group">
								<label class="control-label">排序</label>
								<div class="controls">
									<input type="text" name="sort" class="input-small" value="<!--{{ giftbag.productSort }}-->"
											data-rule-digits="true" data-rule-min="0" data-msg-min="最小为0" data-msg-digits="请填写整数"/>
									<span class="add-on text-warning">越大越靠前</span>
								</div>
							</div>
						</div>
					</div>
					<div class="control-group">
						<label for="textfield" class="control-label">礼包简介</label>
						<div class="controls">
							<!-- <script id="summary" name="summary" type="text/plain"><!--{{ giftbag.productSummary }}--></script> -->
							<textarea id="summary_ta" name="summary" rows="4" style="width:536px;"><!--{{ giftbag.productSummary }}--></textarea>
						</div>
					</div>
					<div class="control-group">
						<label for="textfield" class="control-label">礼包说明</label>
						<div class="controls">
							<script id="intro" name="intro" type="text/plain"><!--{{ giftbag.productInstruction }}--></script>
						</div>
					</div>
					<div class="control-group">
						<label for="textfield" class="control-label">礼包备注</label>
						<div class="controls">
							<!-- <script id="des_ta" name="des" type="text/plain"><!--{{ giftbag.productDesc }}--></script> -->
							<textarea id="des_ta" name="des" rows="4" style="width:536px;"><!--{{ giftbag.productDesc }}--></textarea>
						</div>
					</div>

					<div class="control-group" id="productPrice">
						<label class="control-label">是否发完自动下架</label>
						<div class="controls">
							<input id="discount" name="off_together" data-on-color="success" data-on-text="是" data-off-color="danger" data-off-text="否"
							       class="switchbox" type="checkbox" <!--{{ giftbag.isOffTogether ? 'checked' : '' }}-->/>
						</div>
					</div>

					<div class="row-fluid">
						<div class="span3">
							<div class="control-group">
								<label class="control-label">上架设定</label>
								<div class="controls">
									<input name="shelf_set" type="radio" value="1"
											<!--{{ giftbag.isOnshelf ? 'checked' : '' }}-->/>上架
								</div>
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<input name="shelf_set" type="radio" value="2"
										<!--{{ giftbag.isOnshelf ? '' : 'checked' }}-->/>下架
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<input name="shelf_set" type="radio" value="3"
										<!--{{ giftbag.extraReq.onshelfAtBegin == 'true' ? 'checked' : '' }}-->/>自动上架（礼包开始时间）
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<input name="shelf_set" type="radio" value="4"
										<!--{{ giftbag.isOffTogether == 'true' ? 'checked' : '' }}-->/>自动下架（礼包结束时间）
							</div>
						</div>
					</div>

					<div class="form-actions">
						<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
