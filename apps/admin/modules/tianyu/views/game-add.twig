<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<link rel="stylesheet" href="/static/css/plugins/tagsinput/jquery.tagsinput.css">
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i> 游戏新建/编辑</h3>
            </div>
            <div class="box-content">
                <form id="form-topic" action="<!--{{url('tianyu/game/add')}}-->" method="POST" class="form-horizontal form-validate" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<!--{{ data.id }}-->"/>
                    <div class="control-group">
                        <label class="control-label">奖项ID</label>
                        <div class="controls">
                            <input type="text" name="priceId" value="<!--{{ data.priceId }}-->"/>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">投票数</label>
                        <div class="controls">
                            <input type="text" name="num" value="<!--{{ data.num }}-->"/>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">状态</label>
                        <div class="controls">
                            <input type="text" name="type"  value="<!--{{ data.type }}-->"/>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label">游戏图片</label>
                                <div class="controls">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="fileupload-new thumbnail" style="max-width: 120px; max-height: 120px;">
                                            <img style="width:80px;height:80px;" src="<!--{{item.gamePic|default('/static/img/nopic.gif')}}-->" />
                                        </div>
                                        <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 120px; max-height: 120px; line-height: 20px;"></div>
                                        <div>
                                            <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择图片</span><span class="fileupload-exists">重新选择</span><input type="file" data-rule-required="true"  data-msg-required="请选择图片" name='gamePic' /></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">游戏名称</label>
                        <div class="controls">
                            <input type="text" name="gameTitle"  value="<!--{{ data.gameTitle }}-->"/>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label">礼物图片</label>
                                <div class="controls">
                                    <div class="fileupload fileupload-new" data-provides="fileupload">
                                        <div class="fileupload-new thumbnail" style="max-width: 120px; max-height: 120px;">
                                            <img style="width:80px;height:80px;" src="<!--{{item.giftPic|default('/static/img/nopic.gif')}}-->" />
                                        </div>
                                        <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 120px; max-height: 120px; line-height: 20px;"></div>
                                        <div>
                                            <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择图片</span><span class="fileupload-exists">重新选择</span><input type="file" data-rule-required="true"  data-msg-required="请选择图片" name='giftPic' /></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                        <div class="control-group">
                            <label class="control-label">游戏简介</label>
                            <div class="controls">
                                <script id="container" name="gameDescribe" type="text/plain"><!--{{ data.gameDescribe }}--></script>
                            </div>
                        </div>

                    <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-primary">保存</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="<!--{{asset('/static/js/ueditor/ueditor.config.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/ueditor.all.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/lang/zh-cn/zh-cn.js')}}-->"></script>
<script>
    var editor = UE.getEditor('container',{initialFrameWidth:800});

</script>
<!--{%endblock%}-->