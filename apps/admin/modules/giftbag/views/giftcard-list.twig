<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					礼包卡列表				
				</h3>
			</div>
            <div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">卡号</th>
							<th class="col-80">是否领取</th>
							<th class="col-150">领取人</th>
							<th class="col-80">领取时间</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.cardno}}--></td>
							<td><!--{%if item.is_get%}--><i class="icon-yes"></i>是<!--{%else%}--><i class="icon-unlock"></i>否<!--{%endif%}--></td>
							<td><!--{%if item.uid%}--><span class="label label-success"><!--{{item.uid}}--></span><!--{%endif%}--></td>
							<td><!--{%if item.gettime%}--><!--{{item.gettime|date('Y-m-d H:i:s')}}--><!--{%endif%}--></td>							
							<td>
							    <a href="<!--{{url('giftbag/giftcard/delete',{id:item.id})}}-->" class="btn btn-primary">删除</a>							    						   
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
