    function type_fade(check_val){
        switch(check_val){
            case '4' :
                $('#normal').fadeOut();
                $('#share').fadeOut();
                $('#task').fadeIn();
                $(".app_sel").show().removeAttr("disabled");
                $(".app_inp").attr("disabled","disabled");
                break;
            case '3' :
                $('#normal').fadeOut();
                $('#task').fadeOut();
                $('#share').fadeIn();
                $(".app_sel").hide().attr("disabled","disabled");
                $(".app_inp").removeAttr("disabled");
                break;
            default:
                $('#share').fadeOut();
