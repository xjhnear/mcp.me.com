<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					<!--{{menu_name}}-->管理
				</h3>
				<div class="actions">	
				    <form action="<!--{{url('a_activity/atask/tlist')}}-->" method="GET">	
				    <input name="action_type" type="hidden" value="<!--{{action_type}}-->" />		
				    <table class="table-filter">				        
				        <tr>		
				            <!--{%if action_type==1%}-->
				            <td><!--{{form_select('complete_type',conditions,complete_type,{'id':'complete_type','style':'margin-top:10px;width:80px'})}}--></td>
				            <!--{%endif%}-->		    
				            <td><input name="title" type="text" class="input-xlarge" value="<!--{{title}}-->" /></td>
				            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <td><a href="<!--{{url('a_activity/atask/do-statistic')}}-->" class="btn btn-teal">手动统计</a></td>        
				            <td><a href="<!--{{url('a_activity/atask/do-task')}}-->?action_type=<!--{{action_type}}-->" class="btn btn-teal">新建任务</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <!--{%if action_type==1%}-->
						    <th class="col-80">试玩类型</th>
						    <!--{%endif%}-->
							<th class="col-150">活动标题</th>
                            <th class="col-100">游戏</th>
							<th class="col-80">开始时间</th>
							<th class="col-80">结束时间</th>
							<th class="col-100">待/完成/总数</th>
							<th class="col-60">属性</th>
							<th class="col-60">奖励</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<!--{%if action_type==1%}-->
						    <td><!--{{conditions[item.complete_type]}}--></td>
						    <!--{%endif%}-->
							<td>
								<!--{{item.title}}-->
							</td>
							<td><!--{{games[item.gid]['shortgname']}}--></td>
							<td><!--{{item.start_time|date('Y-m-d')}}--></td>
							<td><!--{{item.end_time|date('Y-m-d')}}--></td>
							<td>
							<!--{%if item.status_wait_num>0 %}-->
							<span class="badge badge-warning"><!--{{item.status_wait_num}}--></span>
							<!--{%else%}-->
							<span class="badge"><!--{{item.status_wait_num}}--></span>
							<!--{%endif%}-->							
							<span class="badge badge-success"><!--{{item.status_success_num}}--></span>
							<span class="badge badge-info"><!--{{item.status_all_num}}--></span>							    
							</td>
							<td>
							    <!--{%if item.is_top==1%}--><span class="badge badge-info">置顶</span><!--{%endif%}-->
							    <!--{%if item.is_show==1%}--><span class="badge badge-success">显示</span><!--{%else%}--><span class="badge badge-important">隐藏</span><!--{%endif%}-->
							</td>
							<td><!--{{item.money}}--></td>
							<td>
							    <a href="<!--{{url('a_activity/atask/do-task')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">编辑</a>
							    <a href="<!--{{url('a_activity/atask/query-task-user')}}-->?atid=<!--{{item.id}}-->" class="btn btn-primary">查看参与用户</a>
							    <!--{#<a href="#" class="btn" rel="popover" data-trigger="hover" data-placement="left" title="参与用户统计" data-content="">查看统计</a>#}-->
							    <a href="<!--{{url('a_activity/atask/do-del',{'id':item.id})}}-->" class="btn btn-drop ajax-del">删除</a>							    							    								
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    gameselect('#gameselect');    
    
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});    
</script>
<!--{%endblock%}-->