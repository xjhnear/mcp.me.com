<script type="text/javascript">
searchActivity = function()
{
    var keytype = $("input[name='keytype']:checked").val();
    var keyword = $('#keyword').val();
    $.ajax({
        url:'/a_activity/activity/pop-search/<!--{{no}}-->',
        data:{keytype:keytype,keyword:keyword},
        dataType:'json',
        success:function(json){
            var html = '';
            html = json.html;
            $.dialog.list['pop-data-list'].content(html);		                
        }
    });
    return false;
};
    
function init_data_page()
{
    //
    $('.select-activity-id').each(function(){
        $(this).click(function(){
            var aid = $(this).attr('data-id');
            var title = $('#title_'+aid).text();
            //
            set_selected_activity(aid,title);
            $.dialog.list['pop-data-list'].close();
        });
    });
    //
    $('.pagelink a').each(function(){
        var url = $(this).attr('href');            
        $(this).attr('href','javascript:void(0);');
        $(this).click(function(){
            $.ajax({
                url:url,
                dataType:'json',
	            success:function(json){
	                var html = '';
	                html = json.html;
	                $.dialog.list['pop-data-list'].content(html);		                
	            }
            });
        });
        
    });
    $('#btn-activity-search').bind('click',searchActivity);
}
init_data_page();
</script>