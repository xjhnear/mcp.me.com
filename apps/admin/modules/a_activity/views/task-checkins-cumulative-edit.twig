<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>累计签到</h3>
			</div>
			<div class="box-content">
			    <form action="<!--{{url('a_activity/atask/do-checkins')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
			    <input name="id" type="hidden" value="<!--{{info.id}}-->" />
			    <input name="type" type="hidden" value="cumulative" />
				<div class="control-group">
					<label class="control-label">标题</label>
					<div class="controls">
						<input type="text" name="title" class="input-xlarge" value="<!--{{info.title}}-->" />
					</div>
				</div>
		
				<div class="control-group">
					<label class="control-label">开始时间</label>
					<div class="controls">
						<div class="input-append date">
							<input name="start_time" type="text" class="input-medium datetimepicker" value="<!--{{info.start_time|date('Y-m-d')}}-->" readonly="">
							<span class="add-on"><i class="icon-calendar"></i></span>
						</div>
					</div>
				</div>					
				<div class="control-group">
					<label class="control-label">结束时间</label>
					<div class="controls">
						<div class="input-append date">
							<input name="end_time" type="text" class="input-medium datetimepicker" value="<!--{{info.end_time|date('Y-m-d')}}-->" readonly="">
							<span class="add-on"><i class="icon-calendar"></i></span>
						</div>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">属性</label>
					<div class="controls">					    
				        <label class="checkbox inline">
				        <!--{{form_checkbox('is_show',1,info.is_show==1)}}-->显示					        					        
				        </label>				        				      
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">奖项</label>
					<div class="controls">	
					    <div class="input-append">
							<div class="fileupload fileupload-new" data-provides="fileupload">
							    <input name="reward_img" type="hidden" value="<!--{{info.reward_img}}-->" />
								<div class="fileupload-new thumbnail btn-file" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if info.reward_img%}--><!--{{config('app.img_url')}}--><!--{%endif%}--><!--{{info.reward_img|default('/static/img/nopic.gif')}}-->" /><input type="file" name='filedata' /></div>
							</div>
						</div>				    					
						<div class="input-append">
						    <span class="add-on">连续</span>
							<input type="text" id="reward_days" name="reward_days" class="input-min" value="<!--{{info.reward_days}}-->" />
							<span class="add-on">天</span>
						</div>
						<div class="input-append">
						    <!--{{form_select('reward_type',reward_types,info.reward_type,{'id':'reward_type','style':'width:80px;'})}}-->						   
				        </div>
				        <div class="input-append">
				            <input type="text" id="reward_value" name="reward_value" class="input-min" value="<!--{{info.reward_value}}-->" />
				        </div>
					</div>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div> 
			    </form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
$(function(){
    $('input.datetimepicker').datetimepicker({format:'Y-m-d',lang:'ch'});
});
</script>
<!--{%endblock%}-->