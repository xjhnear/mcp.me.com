<!--{%block footer_js%}-->
<script>
	$(function(){
        gameselect('#gameselect');
        $('input').iCheck({
			checkboxClass: 'icheckbox_square-orange',
			radioClass: 'iradio_square-orange',
			increaseArea: '20%' // optional
		});
		$('.ajax-del').bind('click',function(){
			var fid = $(this).attr('data');
			alertify.confirm('是否删除该论坛？',function(e){
				if(e){
					$.get('/webt_forum/forum/ajax-del/'+ fid,function(resp){
						if(resp.state){
							alertify.success(resp.msg);
							setTimeout(function(){
								location.reload();
							},1000);
						}else{
							alertify.error(resp.msg);
						}
					},'json')
				}
			});
		});
        $(".set_hot").click(function(){
            obj = $(this);
            if(confirm('确定要设为吗？')){
                var id = obj.attr('fid');
                var html = obj.html();
                var type = '-1';
                if(html == "设为热门"){
                    type = '1';
                }
                $.post('<!--{{url('webt_forum/forum/set-hot')}}-->',{id:id,type:type},function(data){
                    if(data.success=="true"){
                        alert(data.mess);
                        window.location.reload();
                    }else{
                        alert(data.mess);
                    }
                },"json")
            }
        })
	});
</script>
