                                    <!--{%endif%}-->
                                    <li><a href="<!--{{url('webt_forum/forum/bbs-relation-game')}}-->?linkId=<!--{{item.gameLinkId}}-->&game=<!--{{item.gname|default("")}}-->&fid=<!--{{item.fid}}-->&gid=<!--{{item.gid}}-->" >关联游戏</a></li>
                                    <!--{%if item.place!="0" %}-->
