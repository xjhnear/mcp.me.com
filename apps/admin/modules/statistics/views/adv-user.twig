<!--{%extends "sub-layout-statistics.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					广告效果报表
				</h3>
				<div class="actions">
				    <form action="<!--{{url('statistics/adv/user')}}-->" method="POST">
				    <table class="table-filter">
				        <tr>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="startdate" type="text" class="input-small" value="" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="enddate" type="text" class="input-small" value="" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
							<td>广告标识<input name="aid" type="text" class="input-xlarge" value="<!--{{aid}}-->" ></td>
							<td>数量<input name="pageSize" type="text" class="input-small" value="<!--{{pageSize|default(100)}}-->" ></td>
							<td><input name="export" checked data-on-color="success" data-on-text="查看" data-off-color="danger" data-off-text="导出" class="switchbox" value="1" type="checkbox"/></td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>操作</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">IDFA</th>						    
							<th class="col-150">OPENUDID</th>
							<th class="col-80">点击量</th>
							<th class="table-btn-group">时间</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.idfa}}--></td>							
							<td><!--{{item.openudid}}--></td>
							<td><!--{{item.number}}--></td>							
							<td><!--{{item.addtime}}--></td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>						
	    </div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->

<script src="/static/js/plugins/multiselect/bootstrap-multiselect.js"></script>
<script>
$(function(){
    $('.switchbox').bootstrapSwitch();
});
</script>
<!--{%endblock%}-->