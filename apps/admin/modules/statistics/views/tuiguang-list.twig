<!--{%extends "sub-layout-statistics.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					推广统计
				</h3>
			</div>
			<div class="box-content nopadding">
			    <form action="<!--{{url('statistics/tuiguang/day')}}-->">
				    <table class="table-filter">
				        <tr>
				            <td>按日期查询</td>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="startdate" type="text" class="input-small" value="<!--{{search.startdate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>				            
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="enddate" type="text" class="input-small" value="<!--{{search.enddate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>			            
				            <td><button class="btn btn-teal"><i class="icon-search"></i>查询</button></td>
				        </tr>
				    </table>
				</form>
				<form action="<!--{{url('statistics/tuiguang/week')}}-->">
				    <table class="table-filter">
				        <tr>
				            <td>按周查询</td>
				            <td>
				                <!--{{form_select('week',weeks,week)}}-->				                
				            </td>			            				           
				            <td><button class="btn btn-teal"><i class="icon-search"></i>查询</button></td>
				        </tr>
				    </table>
				</form>
				<form action="<!--{{url('statistics/tuiguang/month')}}-->">
				    <table class="table-filter">
				        <tr>
				            <td>按月查询</td>
				            <td>
				                <!--{{form_select('month',months,month)}}-->	
				            </td>				            				           
				            <td><button class="btn btn-teal"><i class="icon-search"></i>查询</button></td>
				        </tr>
				    </table>
				</form>
				 <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-40">
						        
							</th>
						    <th class="col-50">ID</th>
							<th class="col-100">用户名</th>
							<th class="col-60">头像</th>
							<th class="col-80">用户组</th>							
							<th class="col-120">推广总人数</th>
							<th class="col-60">获取游币</th>
							<th class="table-btn-group">操作</th>
						</tr>
					 </thead>
					 <tbody>
					    <!--{%for item in datalist%}-->
						<tr>
						    <td></td>
							<td><!--{{item.uid}}--></td>
							<td><!--{{item.nickname}}--></td>
							<td class="user-avatar"><img src="<!--{{item.avatar|default('/userdirs/common/avatar@2x.png?v=3')}}-->" /></td>
							<td><!--{{item.group_name}}--></td>							
							<td><!--{{item.totol_users}}--></td>
							<td><!--{{item.totol_credit}}--></td>
							<td>
							    <a href="<!--{{url('statistics/tuiguang/list',{'uid':item.uid})}}-->" class="btn btn-primary">查看详情</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
				 </table>
				  <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->