<div class="box">
    <div class="actions">
        <table class="table-filter">
	        <tr>				            
	            <td>
	                <div class="controls">

				        <label class="radio inline">
				        名称
				        </label>
					</div>				                
	            </td>
	            <td>
					<input id="keyword" type="text" class="input-medium" placeholder="" value="<!--{{keyword}}-->">								
				</td>
				<td>
				    <a href="javascript:search();" class="btn btn-teal">按条件搜索</a>
				</td>
			</tr>
		</table>
    </div>
    <table class="table table-hover table-nomargin">
        <thead>
			<tr>
                <th class="col-60">标题</th>
                <th style="width:60px">库存</th>
                <th style="width:60px">可用量</th>
                <th style="width:60px">游戏</th>
				<th class="table-btn-group">操作</th>
			</tr>
		</thead>
		<tbody>
		    <!--{%for item in list%}-->
			<tr>
				<td><!--{{item.productName}}--></td>
                <td id="card_stock_<!--{{item.id}}-->"><!--{{item.totalCount}}--></td>
                <td id="can_use_<!--{{item.id}}-->"><!--{{item.restCount}}--></td>
                <td id=""><!--{{item.gname}}--></td>
				<td>
				    <a href="javascript:void(0);" data-id="<!--{{item.productCode}}-->" data-title="<!--{{item.productName}}-->"  class="btn btn-primary select-id">选择</a>
				</td>
			</tr>
			<!--{%endfor%}-->
		</tbody>
    </table>
    <div class="pagelink">
        <!--{{pagelinks}}-->
    </div>
</div>
    <script>
    function search()
    {
        var keyword = $('#keyword').val();
        $.ajax({
            url:'/v4agiftbag/gift/gift-select',
            data:{keyword:keyword},
            dataType:'json',
            success:function(json){
                var html = '';
                html = json.html;
                $.dialog.list['pop-list'].content(html);
            }
        });
    }
    function init_page()
    {
        //
        $('.select-id').each(function(){
            $(this).click(function(){
                var activity_id = $(this).attr('data-id');
                var title = $(this).attr('data-title');
                set_selected_task(activity_id,title);
                $.dialog.list['pop-list'].close();
            });
        });
        //
        $('.pagelink a').each(function(){
            var url = $(this).attr('href');            
            $(this).attr('href','javascript:void(0);');
            $(this).click(function(){
                $.ajax({
                    url:url,
                    dataType:'json',
		            success:function(json){
		                var html = '';
		                html = json.html;
		                $.dialog.list['pop-list'].content(html);
		            }
                });
            });
            
        });
    }
    init_page();
    </script>