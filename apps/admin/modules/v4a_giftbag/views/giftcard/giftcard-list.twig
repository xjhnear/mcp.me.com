<!--{%extends "sub-layout-giftbag.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    礼包卡列表
                </h3>
                <div class="actions">
                    <form id="myForm" action="<!--{{url('v4agiftbag/giftcard/list/')}}-->">
                        <table class="table-filter">
                            <input type="hidden" name="cardCode" value="<!--{{inputinfo.cardCode}}-->">
                            <td>
                                <input type="text" name="useTimeBegin" id="datetime" class="input-small datetime" placeholder="开始时间" value="<!--{{inputinfo.useTimeBegin}}-->"/>
                            </td>
                            <td>
                                <input type="text" name="useTimeEnd" id="datetime2" class="input-small datetime" placeholder="结束时间" value="<!--{{inputinfo.useTimeEnd}}-->"/>
                            </td>
                            <td>
                                是否领取<!--{{form_select('cardStatus',cardStatusList,inputinfo.cardStatus,{'style':'margin-bottom:0px','class':'input-small','id':'cardStatus'})}}-->
                            </td>


                            <td>用户ID<input type="text" name="usedBy" id="" class="input-small" placeholder="uid" value="<!--{{inputinfo.usedBy}}-->"/></td>
                            <td>
                                <button class="btn btn-teal"><i class="icon-search"></i>搜索</button>
                            </td>
                            <td >
                                <a id="daochu" href="javascript:;"  class="btn btn-primary">导出</a>
                            </td>

                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-60">ID</th>
                        <th class="col-150">卡号</th>
                        <th class="col-80">是否领取</th>
                        <th class="col-150">领取人</th>
                        <th class="col-80">领取时间</th>
                        <th class="table-btn-group">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{%for item in datalist%}-->
                    <tr>
                        <td><!--{{item.id}}--></td>
                        <td><!--{{item.cardInfo}}--></td>
                        <td><!--{%if item.cardStatus==2%}--><i class="icon-yes"></i>是<!--{%else%}--><i class="icon-unlock"></i>否<!--{%endif%}--></td>
                        <td><!--{{userinfo[item.usedBy].nickname}}--></td>
                        <td><!--{%if item.useTime%}--><!--{{item.useTime|date('Y-m-d H:i:s')}}--><!--{%endif%}--></td>
                        <td>
                            <a href="<!--{{url('v4agiftbag/giftcard/delect',{cardinfoId:item.id})}}-->" class="btn btn-primary">删除</a>
                        </td>
                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="<!--{{asset('/static/js/laydate/laydate.js')}}-->"></script>
<script src="<!--{{asset('/static/js/MyHelp.js')}}-->"></script>
<script>
    var setting= {
        elem:'#datetime'
    };
    getLaydate(setting);
    var setting= {
        elem:'#datetime2'
    };
    getLaydate(setting);
    $("#daochu").bind('click',function(){
       <!--{% if inputinfo.cardStatus == 2 %}-->
          window.location.href="<!--{{url('v4agiftbag/giftcard/download')}}-->?"+$("#myForm").serialize();
       <!--{% else %}-->
          alertify.error('只有已分配的才能导出');
       <!--{% endif %}-->
    });
</script>
<!--{%endblock%}-->