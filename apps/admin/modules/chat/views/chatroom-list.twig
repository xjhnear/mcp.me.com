<!--{%extends "sub-layout-chat.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					聊天室列表		
				</h3>
				<div class="actions">
				    <form action="<!--{{url('chat/chatroom/chatroom-list')}}-->" class="">
				    <table class="table-filter">
				        <tr>				            
				            <td>
								<label class="radio inline"><b style="margin-right:10px;color:#fff;">聊天室名称</b></label>
				            </td>
				            <td>
								<input name="name" type="text" class="input-medium" placeholder="" value="<!--{{search.name}}-->">								
							</td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
							<th class="col-120"></th>
							<th>聊天室名称</th>
                            <th>消息数量</th>
							<th>创建时间</th>
							<th class="table-btn-group col-80">操作</th>
						</tr>
					</thead>
					<tbody>
					<!--{%if chatrooms%}-->
						<!--{%for room in chatrooms%}-->
						<tr>
							<td></td>
							<td><!--{{room.groupName}}--></td>
							<td><!--{{room.msgNum}}--></td>
							<td><!--{{room.createTime}}--></td>
							<td><a href="/chat/chatroom/chat-record/<!--{{room.gid}}-->" class="btn btn-primary">查看</a></td>
						</tr>
						<!--{%endfor%}-->
					<!--{%else%}-->
						<tr>
							<td colspan="4" style="text-align:center;color:red;">暂无数据</td>
						</tr>
					<!--{%endif%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelink}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

