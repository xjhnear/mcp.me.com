<!--{%extends "sub-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i><!--{%if result.id == ''%}-->添加<!--{%else%}-->修改<!--{%endif%}-->游戏对应关系</h3>
			</div>
			<div class="box-content">
				<form id="admin-add" action="<!--{{url('zhibo/guest/save')}}-->" method="POST" enctype="multipart/form-data" class='form-horizontal form-validate'>
				<input id="id" type="hidden" name="id"  value="<!--{{result.id}}-->">
				<div class="control-group">
					<label for="username" class="control-label">姓名</label>
					<div class="controls">
						<input id="gamename" type="text" name="name" class="input-normal" data-rule-required="true" value="<!--{{result.name}}-->" data-msg-required="不能为空">
						<span for="gamename" class="help-inline error">名称最多13个汉字</span>
					</div>
				</div>

                <div class="control-group">
                    <label class="control-label">Web照片</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if result.webpic%}--><!--{%endif%}--><!--{{result.webpic|default('/static/img/nopic.gif')}}-->" /></div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div>
                            <div>
                                <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">重新选择</span><input type="file" name='webpic' /></span>
                            </div>
                        </div>
                        <span class="help-inline">大图最佳尺寸：177*130</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">H5照片</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if result.h5pic%}--><!--{%endif%}--><!--{{result.h5pic|default('/static/img/nopic.gif')}}-->" /></div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div>
                            <div>
                                <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">重新选择</span><input type="file" name='h5pic' /></span>
                            </div>
                        </div>
                        <span class="help-inline">大图最佳尺寸：87*71</span>
                    </div>
                </div>
				<div class="control-group">
					<label class="control-label">介绍</label>
					<div class="controls">
                        <textarea name="introduction" class="input-xxlarge" data-rule-required="true" data-msg-required="不能为空"><!--{{result.introduction}}--></textarea>
                        <span for="qid" class="help-inline error"></span>
                    </div>
				</div>



				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>完成</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$("[class='my-checkbox']").bootstrapSwitch();
</script>

<!--{%endblock%}-->