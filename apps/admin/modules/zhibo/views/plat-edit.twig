<!--{%extends "sub-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i><!--{%if result.id == ''%}-->添加<!--{%else%}-->修改<!--{%endif%}-->游戏对应关系</h3>
			</div>
			<div class="box-content">
				<form id="admin-add" action="<!--{{url('zhibo/plat/save')}}-->" method="POST" enctype="multipart/form-data" class='form-horizontal form-validate'>
				<input id="id" type="hidden" name="id"  value="<!--{{result.id}}-->">
				<div class="control-group">
					<label for="username" class="control-label">平台名</label>
					<div class="controls">
						<input id="gamename" type="text" name="title" class="input-normal" data-rule-required="true" value="<!--{{result.title}}-->" data-msg-required="不能为空">
						<span for="gamename" class="help-inline error">名称最多13个汉字</span>
					</div>
				</div>

                <div class="control-group">
                    <label class="control-label">Web Icon</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if result.icon%}--><!--{%endif%}--><!--{{result.icon|default('/static/img/nopic.gif')}}-->" /></div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div>
                            <div>
                                <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">重新选择</span><input type="file" name='icon' /></span>
                            </div>
                        </div>
                        <span class="help-inline">大图最佳尺寸：181*102</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Web Icon Hover</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if result.icon_hover%}--><!--{%endif%}--><!--{{result.icon_hover|default('/static/img/nopic.gif')}}-->" /></div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div>
                            <div>
                                <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">重新选择</span><input type="file" name='icon_hover' /></span>
                            </div>
                        </div>
                        <span class="help-inline">大图最佳尺寸：181*102</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">H5 Icon</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if result.h5_icon%}--><!--{%endif%}--><!--{{result.h5_icon|default('/static/img/nopic.gif')}}-->" /></div>
                            <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div>
                            <div>
                                <span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">重新选择</span><input type="file" name='h5_icon' /></span>
                            </div>
                        </div>
                        <span class="help-inline">大图最佳尺寸：57*32</span>
                    </div>
                </div>

                <div class="control-group">
                    <label for="username" class="control-label">链接地址</label>
                    <div class="controls">
                        <input id="url" type="text" name="url" class="input-xlarge"  data-rule-required="true" data-msg-required="不能为空" data-rule-url="true" data-msg-url="链接格式不正确，必须带协议头。如：http://www.youxiduo.com" value="<!--{{result.url}}-->" />
                        <span for="url" class="help-inline error">如：http://www.youxiduo.com</span>
                    </div>
                </div>



				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>完成</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$("[class='my-checkbox']").bootstrapSwitch();
</script>

<!--{%endblock%}-->