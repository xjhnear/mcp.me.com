<!--{%extends "sub-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					主播/嘉宾管理
				</h3>
				<div class="actions">
                    <form action="<!--{{url('zhibo/guest/list')}}-->" class="">
                        <table class="table-filter">
                            <tr>
                                <td>
                                  游戏名  <input name="keyword" type="text" class="input-medium" placeholder="" value="<!--{{cond.keyword}}-->">
                                </td>
                                <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
                                <td><a class="btn btn-teal" href="<!--{{url('zhibo/guest/edit')}}-->">增加</a></td>
                            </tr>
                        </table>
                    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">姓名</th>
							<th class="col-120">Web照片</th>
                            <th class="col-120">H5照片</th>
							<th class="col-160">描述</th>
							<th class="col-150 table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in result%}-->
						<tr>
							<td><!--{{item.name}}--></td>
                            <td><!--{%if item.webpic%}--><img width="100" src="<!--{{item.webpic}}-->" /><!--{%endif%}--></td>
                            <td><!--{%if item.h5pic%}--><img width="100" src="<!--{{item.h5pic}}-->" /><!--{%endif%}--></td>
                            <td><!--{{item.introduction}}--></td>
							<td>
                                <a href="<!--{{url('zhibo/guest/edit',{'id':item.id})}}-->" class="btn btn-primary">编辑</a>
                                <a href="<!--{{url('zhibo/guest/show',{'id':item.id,'is_show':item.is_show})}}-->" class="btn btn-primary"><!--{%if item.is_show == 1%}-->隐藏<!--{%else%}-->显示<!--{%endif%}--></a>
                                <a href="<!--{{url('zhibo/guest/del',{'id':item.id})}}-->" class="btn btn-primary ajax-del">删除</a>
                            </td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
    $(function() {
        $('a.ajax-del').bind('click', function () {
            if (!confirm('确定要删除数据吗？')) {
                return false;
            }
        });
    });
</script>
<!--{%endblock%}-->