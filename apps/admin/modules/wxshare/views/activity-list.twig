<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					活动管理				
				</h3>
				<div class="actions">
				    <table class="table-filter">
				        <tr>				            
				            <td>
				            <a href="<!--{{url('wxshare/activity/edit')}}-->" class="btn btn-teal">添加活动</a></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">活动标题</th>
                            <th class="col-150">开始时间</th>
							<th class="col-150">结束时间</th>
							<th class="col-150">发布时间</th>
							<th class="col-80">状态</th>
							<th class="col-80">类型</th>
							<th class="col-80">限制</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td>
								<!--{{item.title}}-->
							</td>
							<td><!--{{item.starttime|date('Y-m-d H:i')}}--></td>							
							<td><!--{{item.endtime|date('Y-m-d H:i')}}--></td>
							<td><!--{{item.addtime|date('Y-m-d H:i')}}--></td>
							<td><!--{%if item.is_show==1%}--><span class="badge badge-success">显示</span><!--{%else%}--><span class="badge badge-important">隐藏</span><!--{%endif%}--></td>
							<td><!--{%if item.share_times==0%}--><span class="badge badge-success">抢小米</span><!--{%else%}--><span class="badge badge-important">送Q币</span><!--{%endif%}--></td>
							<td><!--{{item.need_click_times}}--></td>
							<td>
							    <a href="<!--{{url('wxshare/activity/edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>
							    <button class="btn btn-primary btn-sm share_btn" share-url="http://share.youxiduo.com/activity/home?hashcode=<!--{{item.hashcode}}-->" data-target="#share_modal" data-toggle="modal">分享URL</button>							    
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			    
			    <div class="modal fade" id="share_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				  <div class="modal-dialog">
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
				        <h4 class="modal-title" id="myModalLabel">分享的URL</h4>
				      </div>
				      <div class="modal-body">
				      	  <span id="share_url"></span>
				      </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				      </div>
				    </div>
				  </div>
				</div>
			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $(".share_btn").click(function(){
        $('#share_url').html($(this).attr('share-url'));
    });
});
</script>
<!--{%endblock%}-->