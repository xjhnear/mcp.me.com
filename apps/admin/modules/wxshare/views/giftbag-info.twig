<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>活动信息</h3>
			</div>
			<div class="box-content">
			    <form id="form-activity" action="<!--{{url('wxshare/giftbag/edit')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
			    <input id="id" name="id" type="hidden" value="<!--{{giftbag.id}}-->" />
			    <div class="control-group">
					<label class="control-label">所属活动</label>
					<div class="controls">
						<!--{{form_select('activity_id',activitys,giftbag.activity_id)}}-->
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">标题</label>
					<div class="controls">
						<input type="text" name="title" class="input-xxlarge" value="<!--{{giftbag.title}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">所属游戏</label>
					<div class="controls">
					    <input id="gameselect" name="game_id" data-from="ios" type="hidden" value="<!--{{giftbag.game_id}}-->" class="bigdrop select2-offscreen" style="width:200px" tabindex="-1">
					</div>					
				</div>
				<div class="control-group">
					<label class="control-label">排序</label>
					<div class="controls">
						<input type="text" name="sort" class="input-small" value="<!--{{giftbag.sort|default('50')}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">属性</label>
					<div class="controls">					    				        
				        <label class="checkbox inline">
				        <!--{{form_checkbox('is_show',1,giftbag.is_show==1)}}-->显示					        					        
				        </label>					        			        	        				     
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">适用平台</label>
					<div class="controls">					    				        	
				        <label class="checkbox inline">
				        <!--{{form_checkbox('support_ios',1,giftbag.support_ios==1)}}-->支持IOS			        					        
				        </label>
				        <label class="checkbox inline">
				        <!--{{form_checkbox('support_android',1,giftbag.support_android==1)}}-->支持Android			        					        
				        </label>			        	        				      
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">价格</label>
					<div class="controls">
						<input type="text" name="price" class="input-small" value="<!--{{giftbag.price|default('0')}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label for="textfield" class="control-label">内容</label>
					<div class="controls">
					    <script id="container" name="summary" type="text/plain"><!--{{giftbag.summary}}--></script>
					</div>
				</div>
				
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div> 
			    </form>
			</div>
		</div>
    </div>
</div>			
<!--{%endblock%}-->

