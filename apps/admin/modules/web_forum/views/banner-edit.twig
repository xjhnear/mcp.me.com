<!--{%extends "sub-layout-forum.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					编辑社区轮播
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('web_forum/bbs/edit-banner',banner.bbs_banner_id)}}-->" method="POST" class="form-horizontal form-validate" enctype="multipart/form-data">
					<div class="control-group">
						<label class="control-label">轮播图片</label>
						<div class="controls">
							<div data-provides="fileupload" class="fileupload fileupload-new">
								<div style="max-width: 60px; max-height: 60px;" class="fileupload-new thumbnail"><img src="<!--{{ banner.img_path }}-->"></div>
								<div style="max-width: 60px; max-height: 60px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
								<div>
									<span class="btn btn-file"><i class="icon-picture"></i>
										<span class="fileupload-new">选择照片</span><span class="fileupload-exists">Change</span>
										<input type="file" name="banner">
									</span>
									<a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
								</div>
							</div>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">地址</label>
						<div class="controls">
							<input type="text" name="path" class="input" value="<!--{{ banner.url_path }}-->"/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">排序</label>
						<div class="controls">
							<input type="text" name="sort" class="input" value="<!--{{ banner.sort }}-->" data-rule-digits="true" data-msg-digits="请填写整数" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">是否显示</label>
						<div class="controls">
							<input name="show" data-on-color="success" data-on-text="显示" data-off-color="danger" data-off-text="不显示" class="my-checkbox" type="checkbox" <!--{% if banner.is_show %}-->checked<!--{% endif %}-->/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="保存" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$('input').iCheck({
	checkboxClass: 'icheckbox_square-orange',
	radioClass: 'iradio_square-orange',
	increaseArea: '20%' // optional
});
$("[class='my-checkbox']").bootstrapSwitch();
var set_selected_game = function(game_id,game_name,icon){
	$.get('/web_forum/bbs/check-game-has-bbs',{'gid':game_id},function(resp){
		if(resp.state){
			$('#selected_game_id').val(game_id);
			$('#selected_game_icon').attr('src',icon);
			$('#selected_game_name').val(game_name);
		}else{
			alertify.error(resp.msg);
		}
	},'json');

};
$(function(){
    $('.select-pop-game').bind('click',function(){
        $.ajax({
            url:'/game/api/game-search',
            dataType:'json',
            success:function(json){
                var html = '';
                html = json.html;
                $.dialog({id:'pop-game-list',title:'提示',padding:2,content:html,width:600,height:580});
            }
        });
    });
});
</script>
<!--{%endblock%}-->