<!--{%extends "sub-layout-forum.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					热门游戏推荐社区
				</h3>
				<div class="actions">
					<table class="table-filter">
					<tbody><tr>
						<td><a class="btn btn-teal" href="/web_forum/bbs/add-hotlist">新增</a></td>
					</tr>
					</tbody></table>
				</div>
			</div>
			<div class="box-content nopadding">
				<table class="table table-hover table-nomargin">
					<thead>
					<tr>
						<th class="col-40">
							<input type="checkbox" value="" name="all">
							<div class="btn-group">
								<a class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
								<ul class="dropdown-menu">
									<li><a class="ajax-del" data-act="del" href="javascript:void(0);">删除</a></li>
								</ul>
							</div>
						</th>
						<th class="col-60">ID</th>
						<th class="col-60">游戏</th>
						<th class="col-60">游戏名称</th>
						<th class="col-150">论坛ID</th>
						<th class="col-100">添加时间</th>
						<th class="col-100">类型</th>
						<th class="col-80">排序</th>
						<th class="col-100">是否显示</th>
						<th class="table-btn-group">操作</th>
					</tr>
					</thead>
					<tbody>
					<!--{%for item in games%}-->
					<tr>
						<td><input name="hid" type="checkbox" value="<!--{{ item.bbs_home_id }}-->"></td>
						<td><!--{{item.bbs_home_id}}--></td>
						<td class="user-avatar"><img src="<!--{{item.icon}}-->" class="" /></td>
						<td><!--{{ item.gname }}--></td>
						<td><!--{{ item.fid }}--></td>
						<td><!--{{ item.add_time }}--></td>
						<td><!--{% if item.type == 1 %}-->热门游戏<!--{% else %}-->推荐社区<!--{% endif %}--></td>
						<td><!--{{ item.sort }}--></td>
						<td><!--{% if item.show == 1 %}--><span class="badge badge-success">显示</span><!--{% else %}--><span class="badge badge-error">隐藏</span><!--{% endif %}--></td>
						<td>
							<a href="<!--{{url('web_forum/bbs/edit-hotlist',item.bbs_home_id)}}-->" class="btn btn-primary">编辑</a>
							<a href="javascript:void(0);" data="<!--{{ item.bbs_home_id }}-->" class="btn btn-primary ajax-del">删除</a>
						</td>
					</tr>
					<!--{%endfor%}-->
					</tbody>
				</table>
				<div class="pagelink">
					<!--{{ pagination }}-->
				</div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
	$(function(){
		$('a.ajax-del').bind('click',function(){
			alertify.confirm('确定删除数据么？',function(e){
				if(e){
					var hids = [];
					$('input[name="hid"]:checked').each(function(){
						hids.push($(this).val());
					})
					if(hids.lenght == 0) return false;
					$.get('/web_forum/bbs/del-hotlist/',{'hids':hids},function(resp){
						if(resp.state){
							alertify.success(resp.msg);
							setTimeout(function(){
								location.reload();
							},2000);
						}else{
							alertify.error(resp.msg);
						}
					},'json')
				}
			});
		});

		$('input[name="all"]').bind('click',function(){
			if($(this).prop('checked')==true){
				$('input[name="hid"]').prop('checked',true);
			}else{
				$('input[name="hid"]').prop('checked',false);
			}
		});
	});
</script>
<!--{%endblock%}-->