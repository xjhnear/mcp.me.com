<!--{%extends "sub-layout-forum.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					添加web社区首页礼包
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('web_forum/bbs/add-home-giftbag')}}-->" method="POST" class="form-horizontal form-validate">
					<div class="control-group">
						<label class="control-label">标题</label>
						<div class="controls">
							<input type="text" name="title" class="input" data-rule-required="true" data-msg-required="标题不能为空" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">剩余数</label>
						<div class="controls">
							<input type="text" name="last" class="input" data-rule-required="true" data-msg-required="剩余数不能为空" data-rule-digits="true" data-msg-digits="请填写整数" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">价格（游币）</label>
						<div class="controls">
							<input type="text" name="price" class="input" data-rule-required="true" data-msg-required="价格不能为空" data-rule-digits="true" data-msg-digits="请填写整数" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">是否显示</label>
						<div class="controls">
							<input name="show" data-on-color="success" data-on-text="显示" data-off-color="danger" data-off-text="不显示" class="my-checkbox" type="checkbox" checked/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="确认添加" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$("[class='my-checkbox']").bootstrapSwitch();
</script>
<!--{%endblock%}-->