<!--{%extends "sub-layout-forum.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					论坛列表
					<span class="badge badge-warning"><!--{{totalcount}}--></span>
				</h3>
				<div class="actions">
					<form action="<!--{{url('web_forum/replylimit/list')}}-->">
						<table class="table-filter">
							<tr>
								<td>
									<input name="targetId" type="text" type="text" class="input-medium" placeholder="帖子ID" value="<!--{{targetId}}-->" >
								</td>
								
								<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
								
							</tr>
						</table>
					</form>
					
				</div>
			</div>
			<div class="box-content nopadding">
				<table id="bbstable" class="table table-hover table-nomargin">
					<thead>
					<tr>
						<th class="col-100">限制ID</th>
						<th class="col-100">目标ID</th>
						<th class="col-150">目标类型</th>
						<th class="col-150">限制条数</th>
						<th class="col-150">限制时间</th>
						<th class="col-150">截止时间限制</th>
						<th class="col-150">频率限制（秒）</th>
						<th class="col-150">是否禁言</th>
						<th class="table-btn-group">操作</th>
					</tr>
					</thead>
					<tbody>
					<!--{% for key,item in datalist%}--> 
					<tr>
						<td><!--{{item.id}}--></td>
						<td><!--{{item.targetId}}--></td>
						<td><!--{% if item.targetType == 'TOPIC' %}-->帖子<!--{% endif %}--></td>
						<td><!--{{item.limitNum}}--></td>
						<td><!--{{item.createTime}}--></td>
						<td><!--{{item.limitDeadline}}--></td>
						<td><!--{{item.limitRate}}--></td>
						<td><!--{% if item.limitStatus == 1 %}-->禁言<!--{% else %}-->没禁言<!--{% endif %}--></td>
						<td>
							<a href="<!--{{url('web_forum/replylimit/del',{id:item.id})}}-->" class="btn btn-primary">删除限制</a>
						</td>
					</tr>
					<!--{%endfor%}-->
					</tbody>
				</table>
				<div class="pagelink">
					<!--{{pagelinks}}-->
				</div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

