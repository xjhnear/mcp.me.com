							            <!--{%if allow_ban==true%}--><li><a href="<!--{{url('user/users/ban',{'uid':item.uid,'time':3600*24})}}-->">禁言24小时</a></li><!--{%endif%}-->
							            <!--{%if allow_ban==true%}--><li><a href="<!--{{url('user/users/ban',{'uid':item.uid,'time':0})}}-->">永久禁言</a></li><!--{%endif%}-->
							            <!--{%if allow_ban==true%}--><li><a href="<!--{{url('user/users/unban',{'uid':item.uid})}}-->">解除禁言</a></li><!--{%endif%}-->
							            <!--{%if allow_clear==true%}--><li><a href="<!--{{url('user/users/clear-post',{'uid':item.uid})}}-->">删除用户所有发言</a></li><!--{%endif%}-->
