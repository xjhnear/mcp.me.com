							<td><!--{{item.experience}}--></td>
							<!--{%endif%}-->
							<!--{%if allow_android_money==true%}-->

                            <td><a href="<!--{{url('user/users/money-history',{'uid':item.uid})}}-->"><!--{{android_money[item['uid']]['balance']}}--></a></td>

                            <td><!--{{item.experience}}-->/Lv.<!--{{item.level_name}}--></td>
							<!--{%endif%}-->
