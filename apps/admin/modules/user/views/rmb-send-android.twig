<!--{%extends "sub-layout-user.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>用户信息</h3>
			</div>
			<div class="box-content">
				<form id="user-edit" action="<!--{{url('user/users/rmb-send-android')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
				<div class="control-group">
					<label for="textfield" class="control-label">人民币</label>
					<div class="controls">
						<input id="rmb" type="text" name="rmb" class="input-small" value="<!--{{input_old('rmb')}}-->">
					</div>
				</div>
				<div class="control-group">
					<label for="textfield" class="control-label">备注（人民币）</label>
					<div class="controls">
						<input id="rmb_info" type="text" name="rmb_info" class="input-xlarge validate[condRequired[rmb]]" value="<!--{{input_old('rmb_info')}}-->">
					</div>
				</div>				
				<div class="control-group">
					<label for="textfield" class="control-label">用户 UID</label>
					<div class="controls">
						<textarea rows="3" cols="" class="input-xlarge" name="uids"><!--{{input_old('uids')}}--></textarea>
						<span class="help-inline">此处填写用户的UID,多个用户之间用符号<b style="color:red">逗号(英文)</b> 分割</span>
					</div>
				</div>
				<div class="form-actions">
					<button id="submit-btn" type="submit" class="btn btn-primary"><i class="icon-ok"></i>确定</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->