<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>管理工具</h3>
			</div>
			<div class="box-content">
			    <form action="<!--{{url('user/users/tools')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
			    <input name="tool" type="hidden" value="clear-login-limit"/>
			    <div class="box box-bordered">
					<div class="box-title">
						<h3>
							<i class="icon-reorder"></i>
							清除登录设备限制
						</h3>						
					</div>
					<div class="box-content">	
						<div class="control-group">
							<label class="control-label">手机号</label>
							<div class="controls">
							    <div class="input-append">
							        <input name="mobile" type="text" class="input-xlarge" />
							        <button type="submit" class="btn"><i class="icon-ok"></i>清除</button>
							    </div>
							</div>
						</div>				 					
					</div>
				</div>				
			    </form>
			    <form action="<!--{{url('user/users/tools')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
			    <input name="tool" type="hidden" value="clear-sms-limit"/>
			    <div class="box box-bordered">
					<div class="box-title">
						<h3>
							<i class="icon-reorder"></i>
							清除短信/语音短信发送限制
						</h3>						
					</div>
					<div class="box-content">	
						<div class="control-group">
							<label class="control-label">手机号</label>
							<div class="controls">
							    <div class="input-append">
							        <input name="mobile" type="text" class="input-xlarge" />
							        <button type="submit" class="btn"><i class="icon-ok"></i>清除</button>
							    </div>
							</div>
						</div>				 					
					</div>
				</div>				
			    </form>
			    <form action="<!--{{url('user/users/tools')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
			    <input name="tool" type="hidden" value="verifycode"/>
			    <div class="box box-bordered">
					<div class="box-title">
						<h3>
							<i class="icon-reorder"></i>
							测试验证码
						</h3>						
					</div>
					<div class="box-content">	
						<div class="control-group">
							<label class="control-label">验证码</label>
							<div class="controls">
							    <div class="input-append">
							        <input name="mobile" type="text" class="input-xlarge" />
							        <img src="http://open.youxiduo.com/account/verifycode?hashcode=1234567890" />
							        <button type="submit" class="btn"><i class="icon-ok"></i>验证</button>
							    </div>
							</div>
						</div>				 					
					</div>
				</div>				
			    </form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
