<!--{%extends "sub-layout-comment.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					评论列表
					<span class="badge badge-warning"><!--{{totalcount}}--></span>
				</h3>
				<div class="actions">
				    <form>
				    <table class="table-filter">
				        <tr>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="startdate" type="text" class="input-small" value="<!--{{search.startdate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="enddate" type="text" class="input-small" value="<!--{{search.enddate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
				            <td>
				                <input type="text" name="keyword" id="" class="input-medium" placeholder="关键词" value="<!--{{search.keyword}}-->"/>
				            </td>
				            <td>
				                <input id="userselect" name="uid" type="hidden" value="<!--{{uid}}-->" class="bigdrop select2-offscreen" style="width:200px" tabindex="-1">
				            </td>
				            <td><!--{{form_select('target_table',types,search.target_table,{'style':'margin-top:10px;width:100px;'})}}--></td>
				            <td><label class="checkbox inline"><!--{{form_checkbox('recycle',1,search.recycle==1)}}-->回收站</label></td>
				            <td><input name="target_id" type="hidden" value="<!--{{search.target_id}}-->" /></td>				            	
				            			           
				            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <!--{%if show_post==true%}--><td><a href="<!--{{url('comment/comments/add',{'target_table':search.target_table,'target_id':search.target_id})}}-->" class="btn">点评</a></td><!--{%endif%}-->
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-40">
						        <input type="checkbox" name="all" value="" /><div class="btn-group">
							        <a data-toggle="dropdown" class="btn dropdown-toggle"><span class="caret"></span></a>
							        <ul class="dropdown-menu">
							            <li><a href="javascript:void(0);" data-act="del" class="ajax-del">删除</a></li>
							        </ul>
							    </div>
							</th>
						    <th class="col-40">ID</th>
							<th class="col-100">版块</th>
							<th class="col-150">内容</th>
							<th class="col-100">评论人</th>
							<th class="col-100">发布时间</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in commentlist%}-->
						<tr>
						    <td><input type="checkbox" name="ids" value="<!--{{item.id}}-->" /></td>
						    <td><!--{{item.id}}--></td>
							<td><!--{{types[item.target_table]}}--></td>
							<td><!--{%if item.content[0]['img']%}--><a href="http://img.youxiduo.com<!--{{item.content[0]['img']}}-->">图</a><!--{%endif%}--><!--{%if item.is_admin%}--><!--{{item.format_content}}--><!--{%else%}--><!--{{item.content[0]['text']}}--><!--{%endif%}--></td>
							<td><span class="badge badge-info"><!--{{item.uid}}--></span><a href="<!--{{url('user/users/edit',{'id':item.uid})}}-->" target="_blank"><!--{{users[item.uid]['nickname']}}--></a></td>							
							<td><!--{{item.addtime|date('Y-m-d H:i')}}--></td>
							<td>
							    <!--{%if search.recycle==1%}-->
							    <a href="<!--{{url('comment/comments/restore',{'id':item.id})}}-->" class="btn btn-primary">恢复</a>
							    <!--{%else%}-->
							    <a href="<!--{{url('comment/comments/del',{'id':item.id})}}-->" class="btn btn-primary ajax-del">删除</a>
							    <!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
$(function(){
    userselect('#userselect');
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
        if($(this).attr('data-act')=='del'){
            var ids = [];
            $('input[name="ids"]:checked').each(function(){
                ids.push($(this).val());
            });
            if(ids.length==0) return false;
            $.ajax({
                url:'<!--{{url('comment/comments/del')}}-->',
                type:'POST',
                data:{'ids':ids},
                dataType:'json',
                success:function(data){
                    if(data.status==200){
                        window.location.href = window.location.href;
                    }else{
                        
                    }
                }
            });
        }
    });


    $('input[name="all"]').bind('click',function(){
        if($(this).prop('checked')==true){
            $('input[name="ids"]').prop('checked',true);
        }else{
            $('input[name="ids"]').prop('checked',false);
        }
    });
});
</script>
<!--{%endblock%}-->    