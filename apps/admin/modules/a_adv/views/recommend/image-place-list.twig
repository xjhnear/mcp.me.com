<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					推荐位管理
				</h3>
				<div class="actions">
				    <form id="adv-list-form" action="<!--{{url('a_adv/recommend/image-place-list')}}-->" class="">
				    <table class="table-filter">
				        <tr>
							<td><!--{{form_select('place_type',place_type_list,place_type,{'id':'filter_form','style':'margin-bottom:0px'}) }}--></td>
							<td><a id="btn-add-adv" href="<!--{{url('a_adv/recommend/image-place-edit',{'id':0,'place_type':place_type})}}-->" class="btn btn-teal">新建推荐位</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">标题</th>
							<th class="col-150">位置</th>
							<th class="col-80">开始时间</th>
							<th class="col-80">结束时间</th>
							<th class="col-60">显示</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td>
								<!--{{item.title}}-->
							</td>
							<td><!--{{place_id_list[item.place_id]}}--></td>
							<td><!--{{item.start_time|date('Y-m-d H:i')}}--></td>
							<td><!--{{item.end_time|date('Y-m-d H:i')}}--></td>
							<td>
							    <!--{%if item.is_show==1%}--><span class="badge badge-success">显示</span><!--{%else%}--><span class="badge badge-important">隐藏</span><!--{%endif%}-->
							</td>							
							<td>
							    <a href="<!--{{url('a_adv/recommend/image-place-edit',{id:item.id,place_type:item.place_type})}}-->" class="btn btn-primary">编辑</a>							    							    								
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });

	$('#filter_form').change(function(){
		$('#adv-list-form').submit();
	});
});    
</script>
<!--{%endblock%}-->