<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>推荐位信息</h3>
            </div>
            <div class="box-content">
                <form action="<!--{{url('a_adv/recommend/location-edit')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
                    <input name="id" type="hidden" value="<!--{{position.id}}-->" />
                    <div class="control-group">
                        <label class="control-label">调用标识</label>
                        <div class="controls">
                            <input type="text" name="identify" class="input-xxlarge" value="<!--{{position.location_identify}}-->" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">名称</label>
                        <div class="controls">
                            <input type="text" name="name" class="input-xxlarge" value="<!--{{position.location_name}}-->" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">简述</label>
                        <div class="controls">
                            <input type="text" name="desc" class="input-xxlarge" value="<!--{{position.location_desc}}-->" />
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
