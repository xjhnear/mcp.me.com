<!--{%extends "../sub-layout-giftbag.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>添加猜你喜欢</h3>
            </div>

            <div class="box-content">
                <form id="gift-info-form" action="<!--{{url('/v4adv/guessyoulike/edit')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
                    <input name="id" type="hidden" value="<!--{{data.id}}-->"  />
                    <div class="control-group">
                        <label class="control-label">游戏</label>
                        <div class="controls">
                            <div class="input-append">
                                <input id="selected_game_id" name="game_id" type="hidden" value="<!--{{ data.game_id}}-->"/>
                                <input type="text" readonly id="selected_game_name" name="name" class="input-medium" data-rule-required="true"  data-msg-required="请填写游戏" value="<!--{{ data.name }}-->" />
                                <span class="add-on select-pop-game">选择游戏</span>
                            </div>
                        </div>
                    </div>
                    <!-- <div class="control-group" >
                        <label class="control-label">广告名称:</label>
                        <div class="controls">
                            <input type="text" name="adv_name"   data-rule-required="true"  data-msg-required="请填写广告名称" class="input-large" value="<!--{{ data.adv_name}}-->" />
                        </div>
                    </div> -->


                    <div class="row-fluid">
                        <div class="span4">
                            <div class="control-group">
                                <label class="control-label">*开始时间</label>
                                <div class="controls">
                                    <input name="startTime" id="StartDate" type="text" class="input-medium laydate-icon" value="<!--{{ data.startTime }}-->" data-rule-required="true"  data-msg-required="请填写开始时间"  readonly>


                                </div>
                            </div>
                        </div>
                        <div class="span4">
                            <div class="control-group">
                                <label class="control-label">*结束时间</label>
                                <div class="controls">
                                    <input name="endTime" id="EndDate" type="text" class="input-medium laydate-icon" value="<!--{{data.endTime }}-->" data-rule-required="true"  data-msg-required="请填写结束时间" readonly>

                                </div>
                            </div>
                        </div>
                        <span style = "color:red;">* 开始结束时间不填写默认无限长 </span>
                    </div>

                    <div class="row-fluid" id="radio">
                        <div class="span3">
                            <div class="control-group">
                                <label class="control-label">属性：</label>
                                <div class="controls">
                                    <input name="attribute" type="radio" value="1" <!--{{ data.attribute == 1 ? 'checked' : 'checked' }}--> />上架
                                </div>
                            </div>
                        </div>

                        <div class="span3">
                            <div class="controls">
                                <input name="attribute" type="radio" value="4" <!--{{ data.attribute== 4 ? 'checked' : '' }}--> />下架
                            </div>
                        </div>
                    </div>


                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->

