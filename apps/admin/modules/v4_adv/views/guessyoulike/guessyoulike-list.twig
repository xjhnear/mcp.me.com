<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    猜你喜欢列表
                </h3>
                <div class="actions">
                    <form action="<!--{{url('/v4adv/guessyoulike/list/')}}-->">
                        <table class="table-filter">

                            <td>
                                <input type="text" name="name" id="" class="input-small" placeholder="游戏名称" value="<!--{{inputinfo.name}}-->"/>
                            </td>
                            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>

                            <td><a href="<!--{{url('/v4adv/guessyoulike/add')}}-->" class="btn btn-teal">添加</a></td>
                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <!-- <th class="col-60">广告名称</th> -->
                        <th class="col-60">关联游戏</th>
                        <th class="col-80">开始时间-结束时间</th>
                        <th class="col-60">状态</th>
                        <th class="table-btn-group">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{%for item in datalist%}-->
                    <tr>
                        <!-- <td><!--{{ item.adv_name }}--></td> -->
                        <td><!--{{ item.name }}--></td>
                        <td><!--{{ item.startTime }}--></br><!--{{ item.endTime }}--></td>
                        <td><!--{{ item.attribute==1?'上架':'下架' }}--></td>
                        <td>
                            <a href="<!--{{url('/v4adv/guessyoulike/edit',{id:item.id,type:'id'})}}-->" class="btn btn-primary">编辑</a>
                            <!--{% if item.attribute == 1  %}-->
                            <a href="<!--{{url('/v4adv/guessyoulike/isshow',{id:item.id,is_show:0,attr:4})}}-->" class="btn btn-primary">下架</a>
                            <!--{% else %}-->
                            <a href="<!--{{url('/v4adv/guessyoulike/isshow',{id:item.id,is_show:1,attr:1,enddate:item.endTime})}}-->" class="btn btn-primary">上架</a>
                            <!--{% endif %}-->
                            <a href="javascript:void(0);" data="<!--{{ item.id }}-->" class="btn btn-primary ajax-del">删除</a>
                        </td>

                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
    $(function(){
		$('.ajax-del').bind('click',function(){
			var id = $(this).attr('data');
			alertify.confirm('是否删除该广告？',function(e){
				if(e){
					$.get('/v4adv/guessyoulike/off/'+ id,function(resp){
						if(resp.state){
							alertify.success(resp.msg);
							setTimeout(function(){
								location.reload();
							},1000);
						}else{
							alertify.error(resp.msg);
						}
					},'json')
				}
			});
		});
    });
</script>
<!--{%endblock%}-->