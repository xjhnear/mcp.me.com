<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    首页Banner广告列表
                </h3>
                <div class="actions">
                    <form action="<!--{{url('/v4adv/indexbanner/list/')}}-->">
                        <table class="table-filter">
                            <td>
                                <div class="input-append date "  data-date="">
                                    <input name="startTime" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" placeholder="开始时间" type="text" class="input-medium datetimepicker"  value="<!--{{inputinfo.startTime}}-->" id="datetime" >
                                    <span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            <td>
                                <div class="input-append date " >
                                    <input name="endTime" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" placeholder="结束时间" type="text" class="input-medium datetimepicker" id="datetime2" value="<!--{{inputinfo.endTime}}-->" >
                                    <span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            </td>
                            <td>
                                <input type="text" name="name" id="" class="input-small" placeholder="广告名称" value="<!--{{inputinfo.name}}-->"/>
                            </td>
                            <td><!--{{form_select('platform',platformlist,inputinfo.platform,{'id':'complete_type','style':'margin-top:10px;width:100px'})}}--></td>
                            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>

                            <td><a href="<!--{{url('/v4adv/indexbanner/add')}}-->" class="btn btn-teal">添加</a></td>
                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-80">广告名</th>
                        <th class="col-60">广告图</th>
                        <th class="col-120">开始时间-结束时间</th>
                        <th class="col-60">平台</th>
                        <th class="col-60">状态</th>
                        <th class="table-btn-group">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{%for item in datalist%}-->
                    <tr>
                        <td><!--{{ item.name }}--></td>
                        <td class="user-avatar"><img src="<!--{{ item.adv_img }}-->" ></td>
                        <td><!--{{ item.startTime }}--></br><!--{{ item.endTime }}--></td>
                        <td><!--{{ platformlist[item.platform] }}--></td>
                        <td><!--{{ item.attribute==1?'上架':'下架' }}--></td>
                        <td>
                            <a href="<!--{{url('/v4adv/indexbanner/edit',{id:item.id,type:'id'})}}-->" class="btn btn-primary">编辑</a>
                            <!--{% if item.attribute == 1  %}-->
                            <a href="<!--{{url('/v4adv/indexbanner/isshow',{id:item.id,is_show:0,attr:4})}}-->" class="btn btn-primary">下架</a>
                            <!--{% else %}-->
                            <a href="<!--{{url('/v4adv/indexbanner/isshow',{id:item.id,is_show:1,attr:1,enddate:item.endTime})}}-->" class="btn btn-primary">上架</a>
                            <!--{% endif %}-->
                            <a href="javascript:void(0);" data="<!--{{ item.id }}-->" class="btn btn-primary ajax-del">删除</a>
                        </td>
                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="<!--{{asset('/static/js/laydate/laydate.js')}}-->"></script>
<script src="<!--{{asset('/static/js/MyHelp.js')}}-->"></script>
<script>
    var setting= {
        elem:'#datetime'
    };
    getLaydate(setting);
    var setting= {
        elem:'#datetime2'
    };
    //file:///Users/fujiajun/Downloads/4.0%E7%AE%A1%E7%90%86%E5%90%8E%E5%8F%B01207%202/index.html#p=%E9%A6%96%E9%A1%B5%E5%BC%B9%E7%AA%97%E5%B9%BF%E5%91%8A
    //http://admin.youxiduo.dev/v4adv/popup/list
    getLaydate(setting);
    
    $(function(){
		$('.ajax-del').bind('click',function(){
			var id = $(this).attr('data');
			alertify.confirm('是否删除该广告？',function(e){
				if(e){
					$.get('/v4adv/indexbanner/off/'+ id,function(resp){
						if(resp.state){
							alertify.success(resp.msg);
							setTimeout(function(){
								location.reload();
							},1000);
						}else{
							alertify.error(resp.msg);
						}
					},'json')
				}
			});
		});
    });
</script>
<!--{%endblock%}-->