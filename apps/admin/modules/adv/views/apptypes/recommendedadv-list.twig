<!--{%extends "sub-layout-adv.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					推荐发布管理		
				</h3>
				<div class="actions">
				   <form action="<!--{{url('adv/recommendedadv/list')}}-->">
				    <table class="table-filter">
				        <tr>
				        	<td>
				        		<select id="recommend_type" name="=recommend_type" style="width:120px;margin-bottom:0px" >
				        			<option ></option> 
									<option value="推荐位">推荐位</option> 
                            		<option value="热门推荐">热门推荐</option>
									<option value="热门推荐位">热门推荐位</option> 
									<option value="游戏圈-热门推荐">游戏圈-热门推荐</option> 
									<option value="游戏详情-猜你喜欢">游戏详情-猜你喜欢</option> 
								</select>
				        	</td>
				        	<td>
								<button class="btn btn-teal"><i class="icon-search"></i>搜索</button>
							</td>
				            <td><a href="<!--{{url('adv/recommendedadv/recommendedadv-add-edit')}}-->" class="btn btn-teal">添加推荐</a></td>
				        </tr>
				    </table>
				   </form> 
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">Id</th>
						    <th class="col-80">广告类型</th>
						    <th class="col-80">推荐对应类型</th>
						    <th class="col-60">系统</th>
						    <th class="col-60">关联游戏</th>
							<th class="col-150">推荐位标题</th>
							<th class="col-80">添加时间</th>
							<th class="table-btn-group-mini">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
							<tr>
								<td><!--{{item.Id}}--></td>
								<td><!--{{item.nature_name}}--></td>
								<td><!--{{item.recommend_type}}--></td>
								<td><!--{{item.versionform}}--></td>
								<td><!--{{item.gamename}}--></td>
								<td><!--{{item.title}}--></td>
								<td><!--{{item.createdatetime}}--></td>
								<td>
									<a href="<!--{{url('adv/recommendedadv/recommendedadv-add-edit',{'Id':item.Id})}}-->" class="btn btn-primary">编辑</a>
									<a href="<!--{{url('adv/recommendedadv/recommendedadv-delect',{'Id':item.Id})}}-->" class="btn btn-primary">删除</a>
								</td>
							</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

