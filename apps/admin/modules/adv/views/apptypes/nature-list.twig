<!--{%extends "sub-layout-adv.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					广告类型列表		
				</h3>
				<div class="actions">
				  <form action="<!--{{url('adv/nature/list')}}-->">
				    <table class="table-filter">
				        <tr>
				        	<td>
				        		<input type="text" name="%natureName"  placeholder="广告类型" value="<!--{{search.natureName}}-->"/>
				        	</td>
				        	<td>
				        	  <select name="=is_recommend" id='is_recommend' style="width:120px;margin-bottom:0px" >
				        			<option value=""></option>
				        			<option value="推荐">推荐</option>
				        			<option value="广告模式">广告模式</option> 
				        		</select>
				        	</td>
							<td>
								<button class="btn btn-teal"><i class="icon-search"></i>搜索</button>
							</td>
				            <td>
				            	<a href="<!--{{url('adv/nature/nature-add-edit')}}-->" class="btn btn-teal">添加</a>
				            </td>
				        </tr>
				    </table>
				  </from>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <th class="col-150">广告类型</th>
						    <th class="col-80">模式</th>
							<th class="col-150">添加时间</th>
							<th class="table-btn-group-mini">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
							<tr>
								<td><!--{{item.Id}}--></td>
								<td><!--{{item.natureName}}--></td>
								<td><!--{{item.is_recommend}}--></td>
								<td><!--{{item.createdatetime}}--></td>
								<td>
								    <a href="<!--{{url('adv/nature/nature-add-edit',{'Id':item.Id})}}-->" class="btn btn-primary">编辑</a>
									 <a href="<!--{{url('adv/nature/nature-delect',{'Id':item.Id,'is_recommend':item.is_recommend})}}-->" class="btn btn-primary">删除</a>
								</td>
							</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
