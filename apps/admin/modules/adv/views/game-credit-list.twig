<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					游戏下载游币奖励				
				</h3>
				<div class="actions">
				    <table class="table-filter">
				        <tr>
				            <td><a href="<!--{{url('adv/credit/add')}}-->" class="btn btn-teal">添加奖励</button></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <th class="col-60">图标</th>
							<th class="col-150">游戏</th>
							<th class="col-80">奖励</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td class="user-avatar"><img src="<!--{{imgurl}}--><!--{{item.game.ico}}-->" class="" /></td>
							<td><!--{{item.game.shortgname}}--></td>
							<td><!--{{item.score}}--></td>					
							<td>							    						   
							    <a href="<!--{{url('adv/credit/edit',{'id':item.id})}}-->" class="btn btn-primary">编辑</a>							    							    
							    <a href="<!--{{url('adv/credit/delete',{'id':item.id})}}-->" class="btn btn-primary">删除</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

