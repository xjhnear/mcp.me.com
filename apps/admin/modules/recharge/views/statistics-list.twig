<!--{%extends 'base-layout.twig'%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <span class="icon-table"></span>
                    充值统计
                </h3>
                <div class="actions">
                    <form action="<!--{{url('recharge/statistics/list')}}-->" class="">
                        <table class="table-filter">
                            <tr>
                                <td><span class="label label-blue">开始时间</span>
                                    <div class="input-append date " >
                                        <input name="startDate" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{search.startDate}}-->" readonly>
                                        <span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </td>
                                <td>结束时间
                                    <div class="input-append date "  data-date="">
                                        <input name="endDate" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" type="text" class="input-medium datetimepicker"  value="<!--{{search.endDate}}-->" id="date_timepicker_end" readonly>
                                        <span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </td>
                                <td><button class="btn btn-teal"><i class="icon-search"></i>查询</button></td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-120">日期</th>
                        <th class="col-120">充值金额</th>
                        <th class="col-120">支付金额</th>
                        <th class="col-120">支付人数</th>
                        <th class="col-120">支付次数</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{%for key,item in list%}-->
                    <tr>
                        <td><!--{{item.date}}--></td>
                        <td><!--{{item.rawPrice}}--></td>
                        <td><!--{{item.payPrice}}--></td>
                        <td><!--{{item.userCount}}--></td>
                        <td><!--{{item.orderCount}}--></td>
                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="/static/js/laydate/laydate.js"></script>

<!--{%endblock%}-->