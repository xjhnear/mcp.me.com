<!--{%extends "sub-layout-activity.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					活动管理				
				</h3>
				<div class="actions">
				    <form action="<!--{{url('activity/event/list')}}-->" class="">
				    <table class="table-filter">
				        <tr>				            
				            <td><input name="type" type="hidden" value="<!--{{search.type}}-->" /></td>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="startdate" type="text" class="input-small" value="<!--{{search.startdate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="enddate" type="text" class="input-small" value="<!--{{search.enddate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
				            <td><input type="text" name="keyword" id="" class="input-small" placeholder="关键词" value="<!--{{search.keyword}}-->"/></td>						
							<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>							
				            <td><a href="<!--{{url('activity/event/add',{'type':search.type})}}-->" class="btn btn-teal">添加活动</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">活动标题</th>
							<th class="col-80">开始时间</th>
							<th class="col-80">结束时间</th>
							<th class="col-80">类型</th>
							<th class="col-80">进度</th>
							<th class="col-40">排序</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.title}}--></td>
							<td><!--{{item.startdate|date('Y-m-d')}}--></td>
							<td><!--{{item.enddate|date('Y-m-d')}}--></td>
							<td><!--{{typelist[item.type]}}--></td>
							<td>
							    <!--{%if item.type==1%}-->
							        <!--{%if in_array(item.id,process.prize_ids)==true%}-->
							        <span class="badge badge-success">奖</span>
							        <!--{%else%}-->
							        <span class="badge badge-important">奖</span>
							        <!--{%endif%}-->
							        <!--{%if in_array(item.id,process.ask_ids)==true%}-->
							        <span class="badge badge-success">题</span>
							        <!--{%else%}-->
							        <span class="badge badge-important">题</span>
							        <!--{%endif%}-->
							    <!--{%else%}-->
							        <!--{%if item.rule_id%}-->
							        <span class="badge badge-success">帖</span>
							        <!--{%else%}-->
							        <span class="badge badge-important">帖</span>
							        <!--{%endif%}-->
							    <!--{%endif%}-->
							    <!--{%if item.status==1%}-->
						        <span class="badge badge-success">开</span>
						        <!--{%else%}-->
						        <span class="badge badge-important">闭</span>
						        <!--{%endif%}-->
							</td>
							<td><!--{{item.sort}}--></td>
							<td>
							    <a href="<!--{{url('activity/event/edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>
							    <!--{%if item.type==1%}-->
							    <a href="<!--{{url('activity/gameask/question-list',{id:item.id})}}-->" class="btn btn-primary">问题</a>	
							    <a href="<!--{{url('activity/gameask/prize',{id:item.id})}}-->" class="btn btn-primary">奖品</a>							    						    							    							   
							    <div class="btn-group">
							        <a data-toggle="dropdown" class="btn  btn-primary dropdown-toggle">规则<span class="caret"></span></a>
							        <ul class="dropdown-menu dropdown-primary">
							            <li><a href="<!--{{url('activity/rule/edit',{'type':'ask','id':item.id,'rule_id':item.rule_id})}}-->">编辑规则帖</a></li>
							            <li><a href="<!--{{url('forum/topic/info',{'tid':item.rule_id})}}-->" target="_blank">查看帖子</a></li>
							            <li><a href="<!--{{url('activity/gameask/report',{id:item.id})}}-->">报表</a></li>
							            <li><a href="<!--{{url('activity/gameask/full-mark',{id:item.id})}}-->">满分</a></li>
							        </ul>							        
							    </div>							    							    							    							    
							    <!--{%endif%}-->
							    <!--{%if item.type==2%}-->							    							    							    
							    <div class="btn-group">
							        <a data-toggle="dropdown" class="btn  btn-primary dropdown-toggle">活动帖<span class="caret"></span></a>
							        <ul class="dropdown-menu dropdown-primary">
							            <!--{#<li><a href="<!--{{url('forum/topic/edit',{'tid':item.rule_id})}}-->">编辑活动帖</a></li>#}-->
							            <li><a href="<!--{{url('forum/topic/info',{'tid':item.rule_id})}}-->" target="_blank">查看帖子</a></li>
							        </ul>
							    </div>
							    <!--{%endif%}-->
							    <!--{%if item.status==1%}-->
						        <a href="<!--{{url('activity/event/close',{'id':item.id})}}-->" class="btn btn-primary">关闭</a>
						        <!--{%else%}-->
						        <a href="<!--{{url('activity/event/open',{'id':item.id})}}-->" class="btn btn-primary">开启</a>
						        <!--{%endif%}-->							    						   
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});
</script>
<!--{%endblock%}-->