<!--{%extends "sub-layout-activity.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					激活报表
					<span class="badge badge-warning"><!--{{totalcount}}--></span>
				</h3>
				<div class="actions">
				    <form action="<!--{{url('activity/report/export')}}-->" method="POST">
				    <table class="table-filter">
				        <tr>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="startdate" type="text" class="input-small" value="" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="enddate" type="text" class="input-small" value="" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
							<td>数量<input name="pageSize" type="text" class="input-small" value="100" ></td>
							<td><input name="export" checked data-on-color="success" data-on-text="查看" data-off-color="danger" data-off-text="导出" class="switchbox" value="1" type="checkbox"/></td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>操作</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">用户UID</th>						    
							<th class="col-150">用户昵称</th>
							<th class="col-80">激活量</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.uid}}--></td>							
							<td><!--{{users[item['uid']]['nickname']}}--></td>
							<td><!--{{item.total}}--></td>							
							<td>
							    <a href="<!--{{url('activity/report/list',{id:item.config_id})}}-->" class="btn btn-primary">详情</a>							    							   
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>						
	    </div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->

<script src="/static/js/plugins/multiselect/bootstrap-multiselect.js"></script>
<script>
$(function(){
    $('.switchbox').bootstrapSwitch();
});
</script>
<!--{%endblock%}-->