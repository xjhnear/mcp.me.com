<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>公会信息</h3>
			</div>
			<div class="box-content">
			    <form id="form-club" action="<!--{{url('activity/club/edit')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
			    <input id="id" name="id" type="hidden" value="<!--{{club.id}}-->" />
				<div class="control-group">
					<label class="control-label">公会名称</label>
					<div class="controls">
						<input type="text" name="name" class="input-xlarge" value="<!--{{club.name}}-->" data-rule-required="true" data-msg-required="名称不能为空" />
						<span class="help-inline">公会名称不要超过15个汉字</span>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">公告信息</label>
					<div class="controls">
						<input type="text" name="prompt" class="input-xxlarge" value="<!--{{club.prompt}}-->" data-rule-required="true" data-msg-required="公告信息不能为空" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">联系QQ</label>
					<div class="controls">
						<input type="text" name="qq" class="input-xlarge" value="<!--{{club.qq}}-->" data-rule-required="true" data-msg-required="联系QQ不能为空" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">企业QQ</label>
					<div class="controls">
						<input type="text" name="comqq" class="input-xlarge" value="<!--{{club.comqq}}-->" data-rule-required="true" data-msg-required="联系QQ不能为空" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">联系微信号</label>
					<div class="controls">
						<input type="text" name="weixin" class="input-xlarge" value="<!--{{club.weixin}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">访问标识</label>
					<div class="controls">
						<input type="text" name="ename" class="input-xlarge" value="<!--{{club.ename}}-->" data-rule-required="true" data-msg-required="访问标识不能为空" />
					</div>
				</div>				
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div> 
			    </form>
			</div>
		</div>
    </div>
</div>			
<!--{%endblock%}-->

