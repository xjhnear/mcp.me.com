<!--{%extends "sub-layout-activity.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					游戏问答管理				
				</h3>
				<div class="actions">
				    <form action="<!--{{url('activity/gameask/list')}}-->" class="">
				    <table class="table-filter">
				        <tr>				            
				            <td>
				                <div class="controls">
								    <label class="radio inline">
							        <!--{{form_radio('keytype','id',keytype=='id')}}-->ID					        					        
							        </label>
							        <label class="radio inline">
							        <!--{{form_radio('keytype','name',keytype=='name')}}-->名称					        					        
							        </label>
								</div>				                
				            </td>
				            <td>
								<input name="keyword" type="text" class="input-medium" placeholder="" value="<!--{{keyword}}-->">								
							</td>							
							<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>							
				            <td><a href="<!--{{url('activity/gameask/add')}}-->" class="btn btn-teal">添加游戏问答</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">活动标题</th>
							<th class="col-80">开始时间</th>
							<th class="col-80">结束时间</th>
							<th class="col-80">奖品</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in gameasks%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.title}}--></td>
							<td><!--{{item.startdate|date('Y-m-d')}}--></td>
							<td><!--{{item.enddate|date('Y-m-d')}}--></td>
							<td></td>
							<td>
							    <a href="<!--{{url('activity/gameask/edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>							    							    
							    <a href="<!--{{url('activity/gameask/question-list',{id:item.id})}}-->" class="btn btn-primary">问题管理</a>
							    <div class="btn-group">
							        <a data-toggle="dropdown" class="btn  btn-primary dropdown-toggle">规则<span class="caret"></span></a>
							        <ul class="dropdown-menu dropdown-primary">
							            <li><a href="<!--{{url('activity/rule/edit',{'type':'ask','id':item.id,'rule_id':item.rule_id})}}-->">编辑规则帖</a></li>
							            <li><a href="<!--{{url('forum/topic/info',{'tid':item.rule_id})}}-->" target="_blank">查看帖子</a></li>
							        </ul>
							    </div>							    						   
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});
</script>
<!--{%endblock%}-->