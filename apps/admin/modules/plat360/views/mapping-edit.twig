<!--{%extends "sub-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i><!--{%if result.id == ''%}-->添加<!--{%else%}-->修改<!--{%endif%}-->游戏对应关系</h3>
			</div>
			<div class="box-content">
				<form id="admin-add" action="<!--{{url('plat360/mapping/save/')}}-->" method="POST" enctype="multipart/form-data" class='form-horizontal form-validate'>
				<input id="id" type="hidden" name="id"  value="<!--{{result.id}}-->">
				<div class="control-group">
					<label for="username" class="control-label">游戏名称</label>
					<div class="controls">
						<input id="gamename" type="text" name="gname" class="input-normal" data-rule-required="true" value="<!--{{result.gname}}-->" data-msg-required="不能为空">
						<span for="gamename" class="help-inline error">名称最多13个汉字</span>
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">Android ID</label>
					<div class="controls">
						<input id="wid" type="text" name="wid" class="input-normal" data-rule-number="true" data-rule-required="true" value="<!--{{result.wid}}-->" data-msg-required="不能为空" data-msg-number="只能填数字">
						<span for="wid" class="help-inline error">必须为数字</span>
					</div>
				</div>

				<div class="control-group">
					<label for="mid" class="control-label">Web站游戏ID</label>
					<div class="controls">
						<input id="mid" type="text" name="mid" class="input-normal" data-rule-number="true" data-rule-required="true" value="<!--{{result.mid}}-->" data-msg-required="不能为空" data-msg-number="只能填数字">
                        <span for="mid" class="help-inline error">必须为数字</span>
                    </div>
				</div>
				<div class="control-group">
					<label class="control-label">360平台游戏ID</label>
					<div class="controls">
						<input id="qid" type="text" name="qid" class="input-normal" data-rule-number="true" data-rule-required="true" value="<!--{{result.qid}}-->" data-msg-required="不能为空" data-msg-number="只能填数字">
                        <span for="qid" class="help-inline error">必须为数字</span>
                    </div>
				</div>

                <div class="control-group">
                    <label for="realname" class="control-label">是否同步</label>
                    <div class="controls">

                        <!--{%if result.isSync == 0%}-->
                        <input data-on-color="danger" data-on-text="是" name="isSync" data-off-color="success" data-off-text="否" class="my-checkbox" type="checkbox" checked/>
                        <!--{%else%}-->
                        <input data-on-color="danger" data-on-text="是" name="isSync" data-off-color="success" data-off-text="否" class="my-checkbox" type="checkbox"/>
                        <!--{%endif%}-->
                    </div>
                </div>

				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>完成</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$("[class='my-checkbox']").bootstrapSwitch();
</script>

<!--{%endblock%}-->