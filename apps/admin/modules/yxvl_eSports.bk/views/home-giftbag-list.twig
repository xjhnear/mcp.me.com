<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
				</h3>
				<div class="actions">
				    <form action="<!--{{url('wcms/home/game-list')}}-->" class="">
				    <table class="table-filter">
				        <tr>				            
							<td><a href="<!--{{url('wcms/home/add-game')}}-->" class="btn btn-teal">添加游戏</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th>游戏名称</th>
							<th class="col-150">游戏图片</th>
							<th class="col-120">编辑者</th>
							<th class="col-120">属性</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td>
								<!--{{item.title}}-->
							</td>
							<td><!--{{item.createTime|date('Y-m-d H:i')}}--></td>
							<td><!--{{item.author}}--></td>
							<td></td>
							<td>
							    <a href="<!--{{url('wcms/article/edit')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">编辑</a>	
							    <a href="<!--{{url('wcms/article/delete')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary ajax-del">删除</a>
							    <a href="<!--{{url('wcms/article/view')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">查看</a>						    							    								
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

