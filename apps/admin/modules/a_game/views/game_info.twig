<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<link rel="stylesheet" href="/static/css/plugins/multiselect/bootstrap-multiselect.css">
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>游戏信息</h3>
			</div>
			<div class="box-content">
			    
			    <form action="<!--{{url('a_game/games/game-edit-do')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
			    <input name="id" type="hidden" value="<!--{{game.id}}-->" />
			    <div class="control-group">
					<label class="control-label">选项</label>
					<div class="controls">
					    <label class="checkbox inline">
				        <!--{{form_checkbox('flag',1,game.flag==1,{'id':'flag'})}}-->主页推荐					        					        
				        </label>
				        <label class="checkbox inline">
				        <!--{{form_checkbox('mustplay',1,mustplay==1)}}-->经典必玩					        					        
				        </label>				        
				        <label class="checkbox inline">
				        <!--{{form_checkbox('isup',1,game.isup==1)}}-->上架					        					        
				        </label>
				        <span id="flag-sp" class="<!--{{input_old('flag')==1 ? 'none':'hide'}}-->">				        	
							<label class="label">短评<span class="nes-star">* </span><input type="text" name="shortcomt" class="input" value="<!--{{game.shortcomt}}-->"></label>
							<!--{{ errors.first('shortcomt','<span class="text-error">:message</span>') }}-->
				        </span>
					</div>
				</div>
			    <div class="row-fluid">			    
			    <div class="span6">
			    	<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
						</div>
					</div>
				    <div class="control-group">
						<label class="control-label">游戏名称<span class="nes-star">* </span></label>
						<div class="controls">
							<input type="text" name="gname" id="gname" class="input-xlarge" value="<!--{{game.gname}}-->" />
							<!--{{ errors.first('gname','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">游戏简称<span class="nes-star">*</span></label>
						<div class="controls">
							<input type="text" name="shortgname" id="shortgname" class="input-xlarge" value="<!--{{game.shortgname}}-->" />
							<!--{{ errors.first('shortgname','<span class="text-error">:message</span>') }}-->
						</div>
					</div>					
					
					<div class="control-group">
						<label class="control-label">付费类型<span class="nes-star">*</span></label>
						<div class="controls">
						    <label class="radio inline">
					        <!--{{form_radio('pricetype',1,game.pricetype==1)}}-->免费					        					        
					        </label>
					        <label class="radio inline">
					        <!--{{form_radio('pricetype',2,game.pricetype==2)}}-->限免					        					        
					        </label>
					        <label class="radio inline">
					        <!--{{form_radio('pricetype',3,game.pricetype==3)}}-->收费					        					        
					        </label>
					        <!--{{ errors.first('pricetype','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">关联的IOS游戏</label>
						<div class="controls">
						    <input type="text" name="price" id="price" class="input-xlarge" value="<!--{{game.price}}-->" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">关联的工具</label>
						<div class="controls">
						    <input type="text" name="oldprice" id="oldprice" class="input-xlarge" value="<!--{{game.oldprice}}-->" />
						</div>
					</div>
					<div class="control-group">
					<!--{{dump(gametype)}}-->
						<label class="control-label">游戏类型</label>
						<div class="controls">
						    <!--{{form_select('type',gametype,game.type,{'id':'gtype','class':'input-mediue'})}}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">游戏标签</label>
						<div class="controls">
							<select id="tags-muselect" multiple="multiple" name="tags[]">
								<!--{%for tag in alltags%}-->
									<!--{%if in_array(tag,gtags)%}-->
										<option value="<!--{{tag}}-->" selected><!--{{tag}}--></option>
									<!--{%else%}-->
										<option value="<!--{{tag}}-->"><!--{{tag}}--></option>
									<!--{%endif%}-->
								<!--{%endfor%}-->
							</select>
						</div>
					</div>
				    <div class="control-group">
						<label class="control-label">游戏简介<span class="nes-star">*</span></label>
						<div class="controls">
						    <input type="text" name="editorcomt" id="editorcomt" class="input-xlarge" value="<!--{{game.editorcomt}}-->" />
						    <!--{{ errors.first('editorcomt','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label for="textfield" class="control-label">游戏图标<span class="nes-star">*</span></label>
						<div class="controls">
							<div class="fileupload fileupload-new" data-provides="fileupload">
								<div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{%if game.ico%}--><!--{{config_get('ueditor.imageUrlPrefix')}}--><!--{%endif%}--><!--{{game.ico|default('/static/img/common/avatar.gif')}}-->" /></div>
								<div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div><!--{{ errors.first('ico','<span class="text-error">:message</span>') }}-->
								<div>
									<span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">Change</span><input type="file" name='ico' /></span>
									<a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="span6">
					<div class="control-group">
						<label class="control-label">版本<span class="nes-star">*</span></label>
						<div class="controls">
						    <input type="text" name="version" id="version" class="input-xlarge" value="<!--{{game.version}}-->" />
						    <!--{{ errors.first('version','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">大小<span class="nes-star">*</span></label>
						<div class="controls">
						    <input type="text" name="size" id="size" class="input-xlarge" value="<!--{{game.size}}-->" />
						    <!--{{ errors.first('size','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">语言<span class="nes-star">*</span></label>
						<div class="controls">
						    <label class="radio inline">
					        <!--{{form_radio('language',1,game.language==1)}}-->中文					        					        
					        </label>
					        <label class="radio inline">
					        <!--{{form_radio('language',2,game.language==2)}}-->英文					        					        
					        </label>
					        <label class="radio inline">
					        <!--{{form_radio('language',3,game.language==3)}}-->其他					        					        
					        </label>
					        <!--{{ errors.first('language','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">评分<span class="nes-star">*</span></label>
						<div class="controls">
						    <div id="star"></div><div id="target"></div>
						    <!--{{ errors.first('score','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">画面<span class="nes-star">*</span></label>
						<div class="controls">
						    <div id="view_star"></div><div id="target"></div>
						     <!--{{ errors.first('viewscore','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">趣味性<span class="nes-star">*</span></label>
						<div class="controls">
						    <div id="funny_star"></div><div id="target"></div>
						    <!--{{ errors.first('funny','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">流畅性<span class="nes-star">*</span></label>
						<div class="controls">
						    <div id="smooth_star"></div><div id="target"></div>
						    <!--{{ errors.first('smoothscore','<span class="text-error">:message</span>') }}-->
						</div>
					</div>					
					<div class="control-group">
						<label class="control-label">兼容平台<span class="nes-star">*</span></label>
						<div class="controls">
						    <input type="text" name="platform" id="platform" class="input-xlarge" value="<!--{{game.platform}}-->" />
						    <!--{{ errors.first('platform','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">开发商<span class="nes-star">*</span></label>
						<div class="controls">
						    <input type="text" name="company" id="company" class="input-xlarge" value="<!--{{game.company}}-->" />
						    <!--{{ errors.first('company','<span class="text-error">:message</span>') }}-->
						</div>
					</div>
					<!--{%if game.id%}-->
					<div class="control-group">
						<label class="control-label">
							<a class="btn btn-primary" href="<!--{{url('a_game/games/add-game-list-pic',{'gid':game.id})}}-->">添加游戏图片</a>
						</label>						
					</div>
					<!--{%endif%}-->
				</div>
				</div>
			
			    <div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
					<a type="submit" class="btn btn-primary" style="margin-left: 100px" href="/game/games/search">返回</a>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>			
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="/static/js/plugins/raty/js/jquery.raty.js"></script>
<script src="/static/js/plugins/multiselect/bootstrap-multiselect.js"></script>
<script>
$(function(){
	if($('#flag').attr('checked')){$('#flag-sp').attr('class','none');};
	$('#flag').change(function(){
		if($('#flag').attr('checked')){
			$('#flag-sp').attr('class','none');
		}else{
			$('#flag-sp').attr('class','hide');
		}
	});
	$('#tags-muselect').multiselect({
        includeSelectAllOption: true
    });
	$('#gtype').change(function(){
		$.get("/game/games/ajax-taglist",{'typeid':$('#gtype').val()},function(data){
			$("#tags-muselect").multiselect('dataprovider', data);
		});
	});
    $('#star').raty({
		scoreName : 'score',
		  half  : true, 
		  score : <!--{{game.score|default("3.5")}}-->,
		  size      : 24,
		  starHalf  : '/static/js/plugins/raty/img/star-half-big.png',
		  starOff   : '/static/js/plugins/raty/img/star-off-big.png',
		  starOn    : '/static/js/plugins/raty/img/star-on-big.png'
	});
	$('#view_star').raty({
		scoreName : 'viewscore',
		  half  : true, 
		  score : <!--{{game.viewscore|default("3.5")}}-->,
		  size      : 24,
		  starHalf  : '/static/js/plugins/raty/img/star-half-big.png',
		  starOff   : '/static/js/plugins/raty/img/star-off-big.png',
		  starOn    : '/static/js/plugins/raty/img/star-on-big.png'
	});
	$('#funny_star').raty({
		scoreName : 'funnyscore',
		  half  : true, 
		  score : <!--{{game.funnyscore|default("3.5")}}-->,
		  size      : 24,
		  starHalf  : '/static/js/plugins/raty/img/star-half-big.png',
		  starOff   : '/static/js/plugins/raty/img/star-off-big.png',
		  starOn    : '/static/js/plugins/raty/img/star-on-big.png'
	});
	$('#smooth_star').raty({
		scoreName : 'smoothscore',
		  half  : true, 
		  score : <!--{{game.smoothscore|default("3.5")}}-->,
		  size      : 24,
		  starHalf  : '/static/js/plugins/raty/img/star-half-big.png',
		  starOff   : '/static/js/plugins/raty/img/star-off-big.png',
		  starOn    : '/static/js/plugins/raty/img/star-on-big.png'
	});
});
</script>
<!--{%endblock%}-->