<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					游戏平台				
				</h3>
				<div class="actions">
				    <form action="<!--{{url('a_game/games/search')}}-->" class="">
				    <table class="table-filter">
				        <tr>				       
				            <td><a href="<!--{{url('a_game/platform/add',{'game_id':game_id})}}-->" class="btn btn-teal">添加平台</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <th class="col-60">平台</th>
							<th class="col-150">包名</th>
							<th class="col-80">大小</th>
							<th class="col-80">版本</th>
							<th class="col-80">下载量</th>
							<th class="col-80">编辑时间</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.platform_name}}--></td>
							<td><!--{{item.packagename}}--></td>
							<td><!--{{item.size}}--></td>
							<td><!--{{item.version}}--></td>
							<td><!--{{item.download_times}}--></td>
							<td><!--{{item.update_time|default(item.addtime)|date('Y-m-d')}}--></td>
							<td>
							    <a href="<!--{{url('a_game/platform/edit',{'id':item.id})}}-->" class="btn btn-primary">编辑</a>
							    <a href="<!--{{url('a_game/platform/delete',{'id':item.id})}}-->" class="ajax-del btn btn-primary">删除</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});
</script>
<!--{%endblock%}-->