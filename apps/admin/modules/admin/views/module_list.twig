<!--{%extends 'base-layout'%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					模块管理
				</h3>
				<div class="actions">
				    <table class="table-filter">
				        <tr>
				            <td><a href="<!--{{url('admin/module/install')}}-->" class="btn btn-teal">安装新模块</a></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
				<table class="table table-bordered table-hover">
					<tr>
						<th width="10%">ID</th>
						<th width="20%">模块类型</th>
						<th width="20%">模块名称</th>
						<th width="40%">描述</th>
						<th width="10%">操作</th>
					</tr>
					<!--{%for item in datalist%}-->
					<tr>
						<td><!--{{item.id}}--></td>
						<td><!--{{item.module_type}}--></td>
						<td><!--{{item.module_alias}}--></td>
						<td><!--{{item.module_desc}}--></td>
						<td>
							<a class="icon-edit pull-left" href="<!--{{url('admin/module/info',{'id':item.id})}}-->">查看</a>
							<!--{%if item.module_type != 'core'%}-->
							<a class="icon-remove pull-right" href="<!--{{url('admin/module/uninstall',{'id':item.id})}}-->">卸载</a>
							<!--{%endif%}-->
						</td>
					</tr>
					<!--{%endfor%}-->
				</table>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->