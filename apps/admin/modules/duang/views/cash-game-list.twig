<!--{%block footer_js%}-->
<script>
    $('a.ajax-del').bind('click',function(){
        var act_id = $(this).attr('data');
        alertify.confirm('确定删除数据么？',function(e){
            if(e){
                $.get('/duang/cash/del/'+act_id,{},function(resp){
                    if(resp.state){
                        alertify.success(resp.msg);
                        setTimeout(function(){
                            location.reload();
                        },1000);
                    }else{
                        alertify.error(resp.msg);
                    }
                },'json')
            }
        });
    });
    $(function(){
        gameselect('#gameselect');
        $('#gameselect').change(function(){
            var gamename = $('#s2id_gameselect a span').text();
            $('#game_name').val(gamename);
        });
    });
</script>
<!--{%endblock%}-->