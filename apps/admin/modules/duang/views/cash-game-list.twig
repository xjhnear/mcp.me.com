							<td><!--{{item.id}}--></td>
							<td><!--{{item.gname}}--></td>
							<td><!--{{item.phrase}}--></td>
							<td><!--{%if item.type==1%}--><span class="badge badge-success">热门</span><!--{%endif%}--><!--{%if item.type==2%}--><span class="badge badge-important">其他</span><!--{%endif%}--></td>
							<td>
                                <!--{%if item.id!=''%}-->
							    <a href="<!--{{url('duang/cash/edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>
                                <a href="javascript:void(0);" class="btn btn-primary ajax-del" data="<!--{{ item.id }}-->">删除</a>
                                <!--{%else%}-->
