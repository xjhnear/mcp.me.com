<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>添加礼包</h3>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('duang/gbdepot/add')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
					<div class="control-group">
						<label class="control-label">关联游戏</label>
						<div class="controls">
							<div class="input-append">
								<input id="selected_game_id" name="gid" type="hidden" value=""/>
								<img id="selected_game_icon" alt=""  class="add-on" src="/static/img/wu_ss.gif"/>
								<input type="text" id="selected_game_name" name="game_name" class="input-medium" value="" data-rule-required="true" data-msg-required="关联游戏不能为空" />
								<span class="add-on select-pop-game">选择游戏</span>
							</div>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span3">
							<div class="control-group">
								<label class="control-label">类型</label>
								<div class="controls">
									<input type="radio" name="type" value="1"> 商务
								</div>
							</div>
						</div>
						<div class="controls" style="padding-left: 150px;">
							<input type="radio" name="type" value="2"> 自购
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">礼包名称</label>
						<div class="controls">
							<input type="text" value="" name="name" data-rule-required="true" data-msg-required="请填写礼包名称">
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">礼包描述</label>
						<div class="controls">
							<textarea name="description" class="input-large" data-rule-required="true" data-msg-required="礼包描述不能为空"><!--{{activity.share_des}}--></textarea>
							<span class="help-inline"></span>
						</div>
					</div>

					<div class="form-actions">
						<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
	function set_selected_game(game_id,game_name,icon){
		$('#selected_game_id').val(game_id);
		$('#selected_game_icon').attr('src',icon);
		$('#selected_game_name').val(game_name);
		$("input[name='name']").val(game_name);
	};
	$(function(){
		$('input').iCheck({
			checkboxClass: 'icheckbox_square-orange',
			radioClass: 'iradio_square-orange',
			increaseArea: '20%'
		});
		$('.select-pop-game').bind('click',function(){
			$.ajax({
				url:'/a_game/api/game-search',
				dataType:'json',
				success:function(json){
					var html = '';
					html = json.html;
					$.dialog({id:'pop-game-list',title:'提示',padding:2,content:html,width:600,height:580});
				}
			});
		});
	});
</script>
<!--{%endblock%}-->