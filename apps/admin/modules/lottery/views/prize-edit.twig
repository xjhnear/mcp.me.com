<!--{%extends "sub-layout-lottery.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					编辑奖项
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('lottery/inscharge/prize-edit',prize.prize_id)}}-->" method="POST" class="form-horizontal form-validate">
					<div class="control-group">
						<label class="control-label">抽奖活动</label>
						<div class="controls">
							<select class="form-control input-sm" name="lottery_id">
								<!--{% for lot in lotteries %}-->
								<option value="<!--{{ lot.lottery_id }}-->" <!--{% if lot.lottery_id == prize.lottery_id %}-->selected<!--{% endif %}-->>（ID:<!--{{ lot.lottery_id }}-->）<!--{{ lot.title }}--></option>
								<!--{% endfor %}-->
							</select>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">奖项名称</label>
						<div class="controls">
							<input type="text" name="title" class="input" data-rule-required="true" data-msg-required="奖项名称不能为空" value="<!--{{ prize.title }}-->" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">概率</label>
						<div class="controls">
							<div class="input-append">
								<input type="text" name="probab" class="input-small" data-rule-required="true" data-msg-required="概率不能为空" value="<!--{{ prize.probab }}-->"/>
								<span class="add-on">%</span>
							</div>
							<span class="add-on text-warning">（0~100,可为整数或小数）</span>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">奖项个数</label>
						<div class="controls">
							<input type="text" name="number" value="<!--{{ prize.number }}-->" class="input-small" data-rule-required="true" data-msg-required="个数不能为空" data-rule-digits="true" data-msg-digits="请填写整数" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">描述</label>
						<div class="controls">
							<input type="text" name="des" class="input-lg" value="<!--{{ prize.des }}-->" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="确认保存" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$('input').iCheck({
		checkboxClass: 'icheckbox_square-orange',
		radioClass: 'iradio_square-orange',
		increaseArea: '20%' // optional
	});
</script>
<!--{%endblock%}-->