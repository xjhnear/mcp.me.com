<!--{%extends "sub-layout-lottery.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					编辑活动
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('lottery/inscharge/activity-edit',actinfo.activity_id)}}-->" method="POST" class="form-horizontal form-validate" enctype="multipart/form-data">
					<div class="control-group">
						<label class="control-label">Icon图片</label>
						<div class="controls">
							<div data-provides="fileupload" class="fileupload fileupload-new">
								<div style="max-width: 60px; max-height: 60px;" class="fileupload-new thumbnail"><img src="<!--{{ actinfo.icon_path }}-->"></div>
								<div style="max-width: 60px; max-height: 60px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
								<div>
									<span class="btn btn-file"><i class="icon-picture"></i>
										<span class="fileupload-new">选择图片</span><span class="fileupload-exists">Change</span>
										<input type="file" name="icon">
									</span>
									<a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
								</div>
							</div>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">抽奖方式</label>
						<div class="controls">
							<select class="form-control input-sm" name="lottery_id">
								<!--{% for lot in lotinfo %}-->
								<option value="<!--{{ lot.lottery_id }}-->" <!--{% if lot.lottery_id == actinfo.lottery_id %}-->selected<!--{% endif %}-->>（ID:<!--{{ lot.lottery_id }}-->）<!--{{ lot.title }}--></option>
								<!--{% endfor %}-->
							</select>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">活动名称</label>
						<div class="controls">
							<input type="text" name="name" class="input" data-rule-required="true" data-msg-required="活动名称不能为空" value="<!--{{ actinfo.name }}-->" />
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<div class="control-group">
								<label class="control-label">开始时间</label>
								<div class="controls">
									<div class="input-append date">
										<input name="start_time" type="text" class="input-medium datetimepicker" value="<!--{{ actinfo.start_time|date('Y-m-d H:i') }}-->" readonly="">
										<span class="add-on"><i class="icon-calendar"></i></span>
									</div>
								</div>
							</div>
						</div>
						<div class="span4">
							<div class="control-group">
								<label class="control-label">结束时间</label>
								<div class="controls">
									<div class="input-append date">
										<input name="end_time" type="text" class="input-medium datetimepicker" value="<!--{{ actinfo.end_time|date('Y-m-d H:i') }}-->" readonly="">
										<span class="add-on"><i class="icon-calendar"></i></span>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">暗语</label>
						<div class="controls">
							<input type="text" name="command" class="input-lg" data-rule-required="true" data-msg-required="请输入活动暗语" value="<!--{{ actinfo.command }}-->" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">表单设置</label>
						<div class="controls">
							<!--{% for key,fset in formset %}-->
							<input type="checkbox" name="<!--{{ key }}-->" <!--{% if actinfo.sub_info[key] %}-->checked<!--{% endif %}-->><!--{{ fset }}-->
							<!--{% endfor %}-->
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">是否开启</label>
						<div class="controls">
							<input name="is_open" data-on-color="success" data-on-text="开启" data-off-color="danger" data-off-text="关闭" class="switchbox" type="checkbox" <!--{% if actinfo.is_open == 1 %}-->checked<!--{% endif %}-->/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="确认更新" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$(function(){
		$('input').iCheck({
			checkboxClass: 'icheckbox_square-orange',
			radioClass: 'iradio_square-orange',
			increaseArea: '20%' // optional
		});
		$('.switchbox').bootstrapSwitch();
		$('input.datetimepicker').datetimepicker({format:'Y-m-d H:i',lang:'ch'});
	});
</script>
<!--{%endblock%}-->
