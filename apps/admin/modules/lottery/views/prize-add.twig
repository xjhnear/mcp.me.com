<!--{%extends "sub-layout-lottery.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					添加奖项
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('lottery/inscharge/prize-add')}}-->" method="POST" class="form-horizontal form-validate">
					<div class="control-group">
						<label class="control-label">抽奖活动</label>
						<div class="controls">
							<select class="form-control input-sm" name="lottery_id">
								<!--{% for act in activities %}-->
								<option value="<!--{{ act.lottery_id }}-->" <!--{% if act.lottery_id == actid %}-->selected<!--{% endif %}--> <!--{% if act.lottery_id == input_old('lottery_id') %}-->selected<!--{% endif %}-->>（ID:<!--{{ act.lottery_id }}-->）<!--{{ act.title }}--></option>
								<!--{% endfor %}-->
							</select>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">奖项名称</label>
						<div class="controls">
							<input type="text" name="title" class="input" data-rule-required="true" data-msg-required="奖项名称不能为空" value="<!--{{ input_old('title') }}-->" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">概率</label>
						<div class="controls">
							<div class="input-append">
								<input type="text" name="probab" class="input-small" data-rule-required="true" data-msg-required="概率不能为空" value="<!--{{ input_old('probab') }}-->"/>
								<span class="add-on">%</span>
							</div>
							<span class="add-on text-warning">（0~100,可为整数或小数）</span>
							<span class="add-on text-error">（如为定时抽奖，此处概率无效，请填 0 即可）</span>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">奖项个数</label>
						<div class="controls">
							<input type="text" name="number" value="1" class="input-small" data-rule-required="true" data-msg-required="个数不能为空" data-rule-digits="true" data-msg-digits="请填写整数" />
							<span class="add-on text-error">（如为定时抽奖，请结合中奖人数，合理设置此值）</span>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">描述</label>
						<div class="controls">
							<input type="text" name="des" class="input-lg" value="<!--{{ input_old('des') }}-->" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="确认添加" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
	$('input').iCheck({
		checkboxClass: 'icheckbox_square-orange',
		radioClass: 'iradio_square-orange',
		increaseArea: '20%' // optional
	});
</script>
<!--{%endblock%}-->