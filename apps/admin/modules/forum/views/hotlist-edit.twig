<!--{%extends "sub-layout-forum.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					新增热门游戏推荐社区
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('forum/bbs/edit-hotlist-do',home_id)}}-->" method="POST" class="form-horizontal form-validate">
					<div class="control-group">
						<label class="control-label">关联的游戏</label>
						<div class="controls">
							<div class="input-append">
								<input id="selected_game_id" name="gid" type="hidden" value="<!--{{gid}}-->" />
								<img id="selected_game_icon" alt=""  class="add-on" src="<!--{{ icon }}-->" />
								<input type="text" id="selected_game_name" name="game_name" class="input-xlarge" value="<!--{{gname}}-->" data-rule-required="true" data-msg-required="关联游戏不能为空" />
								<span class="add-on select-pop-game">选择游戏</span>
							</div>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">类型</label>
						<div class="controls">
							<input type="radio" name="s_type" value="1" <!--{% if s_type == 1 %}-->checked<!--{% endif %}-->>热门游戏&nbsp;
							<input type="radio" name="s_type" value="2" <!--{% if s_type == 2 %}-->checked<!--{% endif %}-->>推荐社区
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">排序</label>
						<div class="controls">
							<input type="text" name="sort" class="input" value="<!--{{sort}}-->" data-rule-digits="true" data-msg-digits="请填写整数" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label">是否显示</label>
						<div class="controls">
							<input name="show" data-on-color="success" data-on-text="显示" data-off-color="danger" data-off-text="不显示" class="my-checkbox" type="checkbox" <!--{% if show %}-->checked<!--{% endif %}-->/>
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="保存" class="btn btn-primary">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$('input').iCheck({
	checkboxClass: 'icheckbox_square-orange',
	radioClass: 'iradio_square-orange',
	increaseArea: '20%' // optional
});
$("[class='my-checkbox']").bootstrapSwitch();
var set_selected_game = function(game_id,game_name,icon){
	$.get('/forum/bbs/check-game-has-bbs',{'gid':game_id},function(resp){
		if(resp.state){
			$('#selected_game_id').val(game_id);
			$('#selected_game_icon').attr('src',icon);
			$('#selected_game_name').val(game_name);
		}else{
			alertify.error(resp.msg);
		}
	},'json');

};
$(function(){
    $('.select-pop-game').bind('click',function(){
        $.ajax({
            url:'/game/api/game-search',
            dataType:'json',
            success:function(json){
                var html = '';
                html = json.html;
                $.dialog({id:'pop-game-list',title:'提示',padding:2,content:html,width:600,height:580});
            }
        });
    });
});
</script>
<!--{%endblock%}-->