<!--{%extends "sub-layout-forum.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					新游远征队列表					
				</h3>
				<div class="actions">
				    <form>
				    <table class="table-filter">
				        <tr>				            				            
				            <td><a href="<!--{{url('forum/channel/expedition-edit',{'gid':gid})}}-->" class="btn btn-teal"><i class="icon-plus"></i>添加新游远征队</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th>ID</th>
							<th>游戏名称</th>
							<th>图片</th>
							<th>标题</th>
							<th>排序</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.gid}}--></td>
							<td><img src="<!--{{config('app.img_url')}}--><!--{{item.litpic}}-->" style="max-width:300px;" /></td>
							<td><!--{{item.title}}--></td>
							<td><!--{{item.sort}}--></td>
							<td>
							    <a href="<!--{{url('forum/channel/expedition-edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>							    
							    <a href="<!--{{url('forum/channel/expedition-delete',{gid:item.gid})}}-->" class="btn btn-primary">删除</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
