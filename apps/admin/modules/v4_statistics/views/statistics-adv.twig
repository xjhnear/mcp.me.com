<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					广告效果报表
				</h3>
				<div class="actions">
				    <form action="<!--{{url('v4statistics/account/adv')}}-->" method="POST">
				    <table class="table-filter">
				        <tr>
                                <td class="span3">
                                    <p class="span4" style="margin-bottom:0px">平台参数</p>
                                    <div class="input-append span4">
                                        <select name="appname" style="width:150px;">
                                            <option value="yxdjqb"
                                                <!--{% if appname == 'yxdjqb' %}-->
                                                selected
                                                <!--{% endif %}-->
                                            >游戏多</option>
                                            <option value="youxiduojiu3"
                                                <!--{% if appname == 'youxiduojiu3' %}-->
                                                selected
                                                <!--{% endif %}-->
                                            >游戏多业内版</option>
                                            <option value="glwzry"
                                                <!--{% if appname == 'glwzry' %}-->
                                                selected
                                                <!--{% endif %}-->
                                            >攻略APP</option>
                                            <option value="lionRoars"
                                                <!--{% if appname == 'lionRoars' %}-->
                                                selected
                                                <!--{% endif %}-->
                                            >狮吼</option>
                                        </select>
                                    </div>
                                </td>
				        	<!--<td><input name="is_yxd" data-on-color="success" data-on-text="游戏多4.0" data-off-color="danger" data-off-text="攻略APP" class="switchbox" <!--{{ is_yxd == 'off' ? '' : 'checked' }}--> type="checkbox"/></td>-->
				        	<td><input name="is_v4" data-on-color="success" data-on-text="V4数据" data-off-color="danger" data-off-text="V3数据" class="switchbox" <!--{{ is_v4 == 'off' ? '' : 'checked' }}--> type="checkbox"/></td>
				            <td>
								<div class="input-append date " >
									<input name="startdate" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{startTime}}-->" readonly>
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
								<div class="input-append date " >
									<input name="enddate" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{endTime}}-->" readonly>
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
							<td>广告标识<input name="aid" type="text" class="input-xlarge" value="<!--{{aid}}-->" ></td>
							<td>数量<input name="pageSize" type="text" class="input-small" value="<!--{{pageSize|default(100)}}-->" ></td>
							<td><input name="export" checked data-on-color="success" data-on-text="查看" data-off-color="danger" data-off-text="导出" class="switchbox" value="1" type="checkbox"/></td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>操作</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
							<th class="col-60">应用名</th>
							<th class="col-60">版本号</th>
							<th class="col-60">广告模块</th>
						    <th class="col-60">IDFA</th>						    
							<th class="col-80">点击量</th>
							<th class="table-btn-group">时间</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.appname}}--></td>
							<td><!--{{item.version}}--></td>
							<td><!--{{item.adv_logo}}--></td>
							<td><!--{{item.idfa}}--></td>							
							<td><!--{{item.number}}--></td>							
							<td><!--{{item.addtime|date('Y-m-d H:i:s')}}--></td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>						
	    </div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="/static/js/laydate/laydate.js"></script>
<script src="/static/js/plugins/multiselect/bootstrap-multiselect.js"></script>
<script>
$(function(){
    $('.switchbox').bootstrapSwitch();
});
</script>
<!--{%endblock%}-->