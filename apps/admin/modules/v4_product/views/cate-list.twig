<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					分类管理（友情提示:游戏币和钻石分类各添加6个）
				</h3>
				<div class="actions">	
				    <table class="table-filter">
				        <tr>			
				    		<td><a id="cate_instart" href="<!--{{url('v4product/goods/cate-add-edit')}}-->" class="btn btn-teal">添加分类</button></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-150">名称</th>
                            <th class="col-80">类型</th>
							<th class="col-180">排序</th>
							<th class="table-btn-group">操作</th>
							<th class="col-120">最后操作人</th>	
							<th class="col-120">最后操作时间</th>	
						</tr>
					</thead>
					<tbody id="add_tr">
					    <!--{%for item in datalist%}-->
						<tr>
							
							<td><!--{{item.categoryName}}--></td>
                            <td><!--{{item.currencyType==1?"钻石商城":"游币商城"}}--></td>
							<td><!--{{item.categorySort}}--></td>														
							<td>											    
							    <a href="<!--{{url('v4product/goods/cate-add-edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>
                                <!--
							    <a href="<!--{{url('v4product/goods/cate-top',{id:item.id})}}-->" class="btn btn-primary">置顶</a> -->
							    <!--<a href="<!--{{url('v4product/goods/cate-delect',{id:item.id})}}-->" class="btn btn-primary">删除</a>-->
							</td>
							<td><!--{{item.modifier}}--></td>
							<td><!--{{item.modifyTimeStr}}--></td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">

			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
   $(function(){
       var j=$("#add_tr > tr").length;
        if(j>=12){
            $("#cate_instart").remove();
        }

   });
</script>
<!--{%endblock%}-->
