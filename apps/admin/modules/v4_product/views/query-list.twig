<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					已购列表
				</h3>
				<div class="actions">
					<form action="<!--{{url('/v4product/goods/query')}}-->">
						<input type="hidden" name="productCode" value="<!--{{productCode}}-->">
						<table class="table-filter">
		        			<tr>
		        				<td>
								 	<input id="" class="input-small" type="text" value="" placeholder="账户ID" name="accountId">
								</td>
								<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
								<td><a href="<!--{{url('/v4product/goods/list')}}-->" class="btn btn-teal">返回</a></td>
							</tr>
						</table>
					</from>	
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-120">productCode/账户ID/账户名称</th>
						    <th class="col-80">商品名称</th>
							<th class="col-60">游币价格</th>
							<th class="col-80">商品类型</th>
							<th class="col-80">虚拟商品类型</th>
							<th class="col-80">购买数量</th>
							<th class="col-80">时间</th>
							<th class="col-60">交易状态</th>
							<th class="col-150">领取码</th>
						</tr>
					</thead>	
					<tbody>
						<!--{% for key,item in datalist%}--> 
						    <tr>
								<td><!--{{item.productCode}}--></br><!--{{item.accountId}}--></br><!--{{userinfo[item.accountId].nickname}}--></td>
								<td><!--{{item.productName}}--></td>
								<td><!--{{item.productGamePrice}}--></td>
								<td><!--{% if item.productType == 1 %}-->实物<!--{%else%}-->虚拟<!--{%endif%}--></td>
								<td><!--{% if item.inventedType == 1 %}-->礼包<!--{%else%}-->普通卡密<!--{%endif%}--></td>
								<td><!--{{item.productNumber}}--></td>
								<td><!--{{item.getTime}}--></td>
								<td><!--{% if item.tradeStatus == 1 %}-->已经购买<!--{%else%}-->预约<!--{%endif%}--></td>
								<td><!--{{item.productInfo}}--></td>
							</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});
</script>
<!--{%endblock%}-->