    <div class="pagelink">
        <!--{{pagelinks}}-->
    </div>
</div>    
<script>
    function searchCate()
    {
        //var keytype = $("input[name='keytype']:checked").val();
        var keyword = $('#keyword').val();
        $.ajax({
            url:'/v4product/goods/product-code',
            data:{keyword:keyword},
            dataType:'json',
            success:function(json){
                var html = '';
                html = json.html;
                $.dialog.list['pop-activity-list'].content(html);		                
            }
        });
    }
    function init_page()
    {
        $('.select-cate-id').each(function(){
            $(this).click(function(){
                var product_code = $(this).attr('data-id'),product_name = $('#product_name_'+product_code).text();
                set_selected_cate(product_code,product_name);
                $.dialog.list['pop-activity-list'].close();
            });
        });
        $('.pagelink a').each(function(){
            var url = $(this).attr('href'); 
            $(this).attr('href','javascript:void(0);');
            $(this).click(function(){
                $.ajax({
                    url:url,
                    dataType:'json',
		            success:function(json){
		                var html = '';
		                html = json.html;
		                $.dialog.list['pop-activity-list'].content(html);		                
		            }
                });
            });
            
        });
        //:
        $('.aui_main').css({"display":"inline-block"});
    }
    init_page();
</script>