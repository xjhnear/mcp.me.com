	function type_fade(check_val){
		switch(check_val){
			case '0' :
				$('#taobao').fadeOut();
				$('.virtual').fadeIn();
				break;
			case '1' :
				$('#taobao').fadeOut();
				$('.virtual').fadeOut();
				break;
			case '3' :
				$('#taobao').fadeIn();
				$('.virtual').fadeOut();
				break;
			case '4' :
				$('#taobao').fadeOut();
				$('.virtual').fadeOut();
				break;
		}
	}

	function limit_fade(check_val){
		switch(check_val){
			case '-1' :
			case '0' :
				$("input[name='limit[]']").removeClass('validate[minCheckbox[1]]');
				$('.limit').fadeOut();
				break;
			case '1' :
				$("input[name='limit[]']").addClass('validate[minCheckbox[1]]');
				$('.limit').fadeIn();
		}
	}

