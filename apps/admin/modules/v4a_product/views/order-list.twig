<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					订单管理				
				</h3>
				<div class="actions">
					<form action="<!--{{url('/v4aproduct/goods/product-order-list')}}-->">
						<table class="table-filter">
		        			<tr>
								 <td>
								 	<input id="" class="input-small" type="text" value="" placeholder="下单人" name="biller">
								 </td>
								 <td>
								 	<select name="orderStatus" style="width:280px;margin-bottom:0px">
								 		<option value=""></option>
										<option value="0">买家未付款</option>
										<option value="1">买家已付款，卖家未发货 </option>
										<option value="2">买家已付款，卖家已经发货 （确认收货)</option>
										<option value="3">买家已收货</option>
										<option value="4">交易取消</option>
										<option value="5">买家发起退款，等待卖家受理</option>
										<option value="6">卖家受理</option>
										<option value="7">卖家进行退款</option>
										<option value="8">交易完成</option>
									</select>
								 </td>
                                <td>
                                    <select name="orderDesc" style="width:100px;margin-bottom:0px">
                                        <option value=""></option>
                                        <option value="task_consume">任务</option>
                                        <option value="wheel_consume">大转盘</option>
                                        <option value="mall_consume">商城渠道</option>

                                    </select>
                                </td>
                                <td>
		           				 	<!--
									<select name="orderby" style="width:80px;margin-bottom:0px">
										<option value="true">倒序</option>
										<option value="false">正序</option>
									</select>
									-->
	                   			 </td>
								<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
							</tr>
						</table>
					</form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-120">订单号</th>
							<th class="col-100">下单人</th>
							<th class="col-60">订单总额</th>
							<th class="col-60">游戏币</th>
                            <th class="col-60">支付方式</th>
							<th class="col-80">下单/支付时间</th>
                            <th class="col-80">渠道</th>
							<th class="col-150">订单信息</th>
							<th class="col-150">状态</th>
							<th class="col-120">操作</th>
						</tr>
					</thead>	
					<tbody>
						<!--{% for key,item in datalist%}--> 
					    <tr>
							<td style="width:8%"><!--{{item.orderId}}--></td>
							<td>
								<span class="label label-success"><!--{{item.biller}}--></span><br/>
                                <span class="label label-primary"><!--{{userinfo[item.biller].nickname}}--></span><br/>
                                <span class="label label-warning"><!--{{userinfo[item.biller].mobile}}--></span><br/>
                                <span class="label label-primary">Lv.<!--{{item.level_name?item.level_name:'1'}}--></span>
							</td>
							<td><!--{{item.amount}}--></td>
							<td><!--{{item.gameAmount}}--></td>

							<td style="width:8%"><!--{% if item.payType == 0 %}-->游币支付<!--{%else%}-->现金支付<!--{%endif%}--></td>
							<td style="width:20%">
								<!--{{item.billTimeStr|date('y-m-d H:i')}}--><br/>
								<!--{{item.payTimeStr|date('y-m-d H:i')}}--></td>
                            <td>
                                <!--{% if item.orderDesc == 'mall_consume' %}-->
                                商城渠道
                                <!--{% elseif item.orderDesc == 'wheel_consume' %}-->
                                转盘渠道
                                <!--{% elseif item.orderDesc == 'task_consume' %}-->
                                任务渠道
                                <!--{%endif%}-->
                            </td>
							<td><!--{{item.orderSmsInfo}}--></td>
							<td style="width:15%">
								<!--{% if item.orderStatus == 0 %}-->
									买家未付款
								<!--{% elseif item.orderStatus == 1 %}-->
									买家已付款，卖家未发货 
								<!--{% elseif item.orderStatus == 2 %}-->
									买家已付款，卖家已经发货
								<!--{% elseif item.orderStatus == 3 %}-->
									买家已收货
								<!--{% elseif item.orderStatus == 4 %}-->
									交易取消
								<!--{% elseif item.orderStatus == 5 %}-->
									买家发起退款，等待卖家受理
								<!--{% elseif item.orderStatus == 6 %}-->
									卖家受理 
								<!--{% elseif item.orderStatus == 7 %}-->
									卖家进行退款
								<!--{% elseif item.orderStatus == 8 %}-->
									交易完成
								<!--{%endif%}-->
							</td>   
							<td >
							    <a href="<!--{{url('v4aproduct/goods/order-add-edit',{id:item.orderId})}}-->" class="btn btn-primary">编辑</a>
							    <!--{% if item.address%}-->
							    	<a href="javascript:;" data-info='<!--{{item.address}}-->' class="btn btn-primary select">查看信息</a>
							    <!--{% endif %}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>


<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" 
               data-dismiss="modal" aria-hidden="true">
                  &times;
            </button>
            <h4 class="modal-title" id="myModalLabel">
               表单信息
            </h4>
         </div>
         <div class="modal-body">
            <div class="box-content">
                <table class="table"  id="table_from">
               	</table>
            </div>              
         </div>
         <div id="modal-footer" class="modal-footer">
            <button type="button" class="btn btn-default" 
               data-dismiss="modal">关闭
            </button>
         </div>
      </div><!-- /.modal-content -->
</div><!-- /.modal -->
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});
$('a.select').bind('click',function(){
	$("#myModal").modal("show");
	var data=$(this).attr('data-info'),
		data=jQuery.parseJSON(data),
		html='<body>';
	$.each(data,function(idx,item){
		html+="<tr><td>"+idx+":</td><td>"+item+"</td></tr>";
	});
	html+='</body>';
	$("#table_from").html(html);
});
</script>
<!--{%endblock%}-->