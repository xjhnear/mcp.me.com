<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    卡密管理
                </h3>
                <div class="actions">
                    <form id="myform2" action="<!--{{url('/v4aproduct/goods/card-download')}}-->"></form>
                    <form id="myform2" action="<!--{{url('/v4aproduct/goods/card-list')}}-->">
                    <table class="table-filter">
                        <tr>
                            <td>
                                <input id="" class="input-small" type="text" value="" placeholder="卡密描述" name="cardDesc">
                            </td>
                            <td>  
                                <select name='onOrOff' style="width:80px;margin-bottom:0px">
                                    <option value="1">上架</option>
                                    <option value="0">下架</option>
                                </select>
                             </td>
                             <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
                            <td><a href="<!--{{url('v4aproduct/goods/card-add-edit')}}-->" class="btn btn-teal">添加卡密种类</button></td>
                        </tr>
                    </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-150">卡密编号</th>
                        <th class="col-60">卡密库存</th>
                        <th class="col-60">卡密使用量</th>
                        <th class="col-60">卡密类型</th>
                        <th class="col-120">卡密描述</th>
                        <th class="col-60">卡密状态</th>
                        <th class="col-180">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{% for key,item in datalist%}-->
                    <tr>
                    <td><!--{{item.cardCode}}--></td>
                    <td><!--{{item.cardStock}}--></td>
                    <td><!--{{item.cardUsedStock}}--></td>
                    <td>
                        <!--{%if item.cardType==1%}-->
                        礼包码
                        <!--{%else %}-->
                        普通卡密
                        <!--{%endif %}-->
                    </td>
                    <td><!--{{item.cardDesc}}--></td>
                    <td><!--{%if item.onOrOff==1%}--><span class="badge badge-success">上架</span><!--{%else%}--><span class="badge badge-important">下架</span><!--{%endif%}--></td>
                    <td>
                     <a href="<!--{{url('v4aproduct/goods/import',{id:item.cardCode,type:'txt'})}}-->" class="btn btn-primary">导入卡号</a>
                     <a href="<!--{{url('v4aproduct/goods/card-add-edit',{id:item.cardCode})}}-->" class="btn btn-primary">编辑</a>
                     <!--{%if item.onOrOff==1%}-->
                        <a href="<!--{{url('v4aproduct/goods/card-status',{id:item.id,'onOrOff':'false'})}}-->" class="btn btn-primary">下架</a>
                     <!--{%else%}-->
                        <a href="<!--{{url('v4aproduct/goods/card-status',{id:item.id,'onOrOff':'true'})}}-->" class="btn btn-primary">上架</a>
                     <!--{%endif%}-->
                        <div class="btn-group">
                                <a data-toggle="dropdown" href="#" class="btn btn-primary dropdown-toggle">卡密操作<span class="caret"></span></a>
                                  <ul class="dropdown-menu dropdown-primary">
                                    <li>
                                        <a href="<!--{{url('v4aproduct/goods/card-code-list',{id:item.cardCode})}}-->" >卡密列表</a>
                                    </li>
                                    <li>
                                        <a href="javascript:;" class="daochu" cardcode="<!--{{item.cardCode}}-->" id="daochu">卡密导出</a>
                                    </li>
                                    
                                </ul>
                        </div>        


                      </td>
                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
               <div class="pagelink">
                    <!--{{pagelinks}}-->
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" 
               data-dismiss="modal" aria-hidden="true">
                  &times;
            </button>
            <h4 class="modal-title" id="myModalLabel">
               导出
            </h4>
         </div>
         <div class="modal-body">
            <div class="box-content">
                <div class="control-group">
                    <label class="control-label">导出状态</label>
                    <div class="controls">
                        <select id="my_status" name="status">
                            <option value="0">未使用(库存中) </option>
                            <option value="1">已使用(平台已发放）</option>
                        </select>
                     </div>

                </div>
                <div class="control-group">
                    <label class="control-label">导出卡密数量</label>
                    <div class="controls">
                       <input type="text" name="cardNumber" id="cardNumber" >
                    </div>

                </div>
               
            </div>              
         </div>
         <div id="modal-footer" class="modal-footer">
            <button type="button" class="btn btn-default" 
               data-dismiss="modal">关闭
            </button>
            <a href="javascript:;" id="go_" class="btn btn-primary"> 确定</a>
         </div>
      </div><!-- /.modal-content -->
</div><!-- /.modal -->
<!--{%endblock%}-->

<!--{%block footer_js%}-->


<script>
    $(function(){
        $("a.daochu").bind('click',function(){
             $("#myModal").modal("show");
             var cardcode=$(this).attr('cardcode');
             $("#go_").bind('click',function(){
                var my_status=$("#my_status").val(),
                    cardNumber=$("#cardNumber").val();
                if(my_status && cardNumber){ 
                    window.location.href=$("#myform2").attr("action")+'?status='+my_status+'&cardNumber='+cardNumber+'&cardCode='+cardcode;
                }else if(!cardNumber){
                    window.location.href=$("#myform2").attr("action")+'?status='+my_status+'&cardcode='+cardcode;
                }else{
                    window.location.href=$("#myform2").attr("action");
                }
                $("#myModal").modal("hide");
             });
         });
    });
</script>
<!--{%endblock%}-->