<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					钻石操作记录
					<span class="badge badge-warning"><!--{{totalcount}}--></span>
				</h3>
				<div class="actions">
				    <form action="<!--{{url('v4user/users/operation-list')}}-->">
				    <table class="table-filter">
				        <tr>
							<td><!--{{form_select('keytype',{uid:'用户UID'},search.keytype,{'style':'width:80px;margin-bottom:0px'})}}--></td>
							<td><input type="text" name="keyword" id="keyword" class="input-medium" placeholder="用户UID" value="<!--{{search.keyword}}-->"/> </td>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="startdate" type="text" class="input-small" value="<!--{{search.startdate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="enddate" type="text" class="input-small" value="<!--{{search.enddate}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
				            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-50">钻石操作时间</th>
							<th class="col-100">用户</th>
							<th class="col-60">钻石数量</th>
							<th class="col-60">剩余钻石</th>
							<th class="col-60">描述</th>
							<th class="col-60">操作人</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in data%}-->
						<tr>
							<td><!--{{item.operationTime}}--></td>
							<td>
								<a href="<!--{{url('v4user/users/edit',{'id':item.accountId})}}-->" target="_blank"><!--{{item.accountId}}--></a><br/>
							</td>
							<td><!--{{item.balanceChange}}--></td>
							<td><!--{{ios_diamond[item.real_accountId]}}--></td>
							<td><!--{{item.operationDesc}}--></td>
							<td><!--{{item.operator}}--></td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
$(function(){
    $(".baocun").click(function(){
        var uids = "";
        $("input:checked").each(function(){
            uids += $(this).attr("uid")+",";
        })
        if(uids){
            $("#uids").val(uids);
        }else{
            alert("无选中用户");
            return false;
        }


    })
});

</script>
<!--{%endblock%}-->
