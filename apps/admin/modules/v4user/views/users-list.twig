							            <!--{%if allow_ban==true%}--><li><a href="<!--{{url('user/users/unban',{'uid':item.uid})}}-->">解除禁言</a></li><!--{%endif%}-->
							            <!--{%if allow_clear==true%}--><li><a href="<!--{{url('user/users/clear-post',{'uid':item.uid})}}-->">删除用户所有发言</a></li><!--{%endif%}-->
							            <!--{%if allow_android_money==true%}--><li><a href="<!--{{url('user/users/open-android-money',{'uid':item.uid})}}-->">开通安卓游币账号</a></li><!--{%endif%}-->
							            <!--{%if item.mobile%}--><li><a href="<!--{{url('user/users/add-mobile-to-blacklist',{'mobile':item.mobile})}}-->">加入手机黑名单</a></li><!--{%endif%}-->
							            <li><a href="<!--{{url('user/users/force-out',{'uid':item.uid})}}-->">强制下线</a></li>
							        </ul>
							    </div>
							    <!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.select-uid-ajax').bind('click',function(){
        var uid = $(this).attr('data-uid');
        var nickname = $(this).attr('data-nickname');
        $.get('<!--{{url('user/users/add-select-user')}}-->',{'uid':uid,'nickname':nickname},function(data){
            var html = '<li><a href="javascript:void(0)" data-uid="'+uid+'" class="delete-selected-uid-ajax">'+nickname+'<i class="icon-trash"></i></a></li>';
            $('#selected-pop-ul').prepend(html);
            $('#selected-uids-count').text($('.delete-selected-uid-ajax').length);
        });
        
    });
    $('a.select-uid-ajax-all').bind('click',function(){
        var uids = $(this).attr('data-all_users');
        $.get('<!--{{url('v4user/users/add-all-user')}}-->',{'uids':uids},function(data){
            var html = data;
            $('#selected-pop-ul').prepend(html);
            $('#selected-uids-count').text($('.delete-selected-uid-ajax').length);
        });
        
    });
});   
    $("#daochu").bind('click',function(){
        window.location.href=$("#myform2").attr("action")+"?"+$("#myform").serialize();
    }) 
</script>
<!--{%endblock%}-->
