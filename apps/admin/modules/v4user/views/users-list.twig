							<td><!--{{item.email}}--></td>
							<!--{%if allow_android_money==true%}-->
							<!--{%endif%}-->
							<!--{%if allow_ios_money==true%}-->
							<td><a href="<!--{{url('v4user/users/currency-history',{'uid':item.uid})}}-->"><!--{{ios_money[item.uid]|default(0)}}--></a></td>
							<td><a href="<!--{{url('v4user/users/diamonds-history',{'uid':item.uid})}}-->"><!--{{ios_diamond[item.uid]|default(0)}}--></a></td>
