							<td><!--{%if item.client == 'android'%}--><span class="cus-android"></span><!--{%else%}--><span class="cus-ios"></span><!--{%endif%}--></td>
							<td><!--{%if in_array(item.uid,bans)%}--><span class="label">禁用中</span><!--{%endif%}--><!--{%if item.vuser==1%}-->robot<!--{%endif%}--></td>
							<td>
