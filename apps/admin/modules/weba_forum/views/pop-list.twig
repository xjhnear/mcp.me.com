		<tbody>
		    <!--{%for item in list%}-->
			<tr>
				<td class="user-avatar"><!--{{item.tid}}--></td>
				<td><!--{{item.subject}}--></td>
				<td>
				    <a href="javascript:void(0);" data-id="<!--{{item.tid}}-->" data-title="<!--{{item.subject}}-->"  class="btn btn-primary select-id">选择</a>
