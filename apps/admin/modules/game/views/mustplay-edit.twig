<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>经典必玩</h3>
            </div>
            <div class="box-content">
                <form action="<!--{{url('game/mustplay/edit')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
                    <input name="id" type="hidden" value="<!--{{mustplay.id}}-->" />
                    <div class="control-group">
                        <label class="control-label">标题<i class="tip-star">*</i></label>
                        <div class="controls">
                            <div class=" input-append">
                                <input type="text" name="title" class="input-xxlarge" value="<!--{{mustplay.title}}-->" />
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">关联IOS游戏</label>
                        <div class="controls">
                            <input id="gameselect" name="gid" data-from="ios" type="hidden" value="<!--{{mustplay.gid}}-->" class="bigdrop select2-offscreen" style="width:200px" tabindex="-1">
                        </div>
                    </div>
                    <!--{%if mustplay.pic%}-->
                    <div class="control-group">
                        <label class="control-label">大图<i class="tip-star">*</i></label>
                        <div class="controls">
                            <a href="#bigimg" data-toggle="modal"><img src="<!--{{mustplay.pic}}-->" width="150px" /></a>
                        </div>
                    </div>
                    <!--{%endif%}-->
                    <div class="control-group">
                        <label class="control-label">上传图片</label>
                        <div class="controls">
                            <input name="pic" type="hidden" value="<!--{{mustplay.pic}}-->"/>
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="input-append">
                                    <input type="file" name="filedata" class="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">排序</label>
                        <div class="controls">
                            <input type="text" name="sort" class="input-small" value="<!--{{mustplay.sort|default('0')}}-->" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
    $(function(){
        gameselect('#gameselect');
    });
</script>

<!--{%endblock%}-->