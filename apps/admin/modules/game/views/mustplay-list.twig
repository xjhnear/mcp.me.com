<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					游戏平台				
				</h3>
				<div class="actions">
				    <form action="<!--{{url('a_game/games/search')}}-->" class="">
				    <table class="table-filter">
				        <tr>				       
				            <td>
							<a href="<!--{{url('game/mustplay/edit')}}-->" class="btn btn-teal">添加经典必玩</a>
				            </td>
				        </tr>
				    </table>	
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">游戏ID</th>
						    <th class="col-60">游戏</th>
							<th class="col-150">应用类型</th>
							<th class="col-80">图片</th>
							<th class="col-80">游戏标题</th>
							<th class="col-80">编辑时间</th>
							<th class="col-80">排序值</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.gid}}--></td>
							<td><!--{{item.gname}}--></td>
							<td><!--{% if item.gid > 0 and item.agid > 0 %}-->IOS/安卓<!--{% else %}-->IOS<!--{%endif%}--></td>
							<td><img src="http://img.youxiduo.com/<!--{{item.pic}}-->" width="150px" ></td>
							<td><!--{{item.title}}--></td>
							<td><!--{{item.addtime|default(item.addtime)|date('Y-m-d G:i:s')}}--></td>
							<td id="<!--{{item.id}}-->_sort"><!--{{item.sort}}--></td>
							<td>
							    <a id="sort_" class="btn btn-primary sort_" href="javascript:;" data-val='<!--{{item.sort}}-->' data-id="<!--{{item.id}}-->">设置排序值</a>
								<a href="<!--{{url('game/mustplay/edit',{id:item.id})}}-->" class="btn btn-primary">修改</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" 
   aria-labelledby="myModalLabel" aria-hidden="true">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" 
               data-dismiss="modal" aria-hidden="true">
                  &times;
            </button>
            <h4 class="modal-title" id="myModalLabel">
               设置排序值
            </h4>
         </div>
         <div class="modal-body">
         	<div class="box-content">
         		<div class="control-group">
					<label class="control-label">排序数</label>
					<div class="controls">
						<input type="text" id="sort" name="sort" class="input-xlarge" value=""  />
					</div>
				</div>
			</div>				
         </div>
         <div id="modal-footer" class="modal-footer">
            <button type="button" class="btn btn-default" 
               data-dismiss="modal">关闭
            </button>
            <a href="javascript:;" id="go_version_" class="btn btn-primary"> 提交更改</a>
         </div>
      </div><!-- /.modal-content -->
</div><!-- /.modal -->
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>

$(function(){
		$("a.sort_").bind('click',function(){
			 $("#myModal").modal('show');
			 var dataval=$(this).attr('data-val'),id=$(this).attr('data-id');
			 $("#sort").val(dataval);
			 $("#go_version_").bind('click',function(){
			 		var sort_=$("#sort").val();
			 		$.post('/a_game/mustplay/setsort',{'sort':sort_,'id':id},function(data){
			 			if(data.ok == 1){
			 				$('#myModal').modal('hide');
			 				$("#"+id+"_sort").html(data.sort);
						}else{
							$('#myModal').modal('hide');
						    alert("数据出错");
						}
			 		});
			 })
		});
		$('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
	})
</script>
<!--{%endblock%}-->