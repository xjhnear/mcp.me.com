<!--{%extends "sub-layout-game.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					游戏版本设置				
				</h3>
				<div class="actions">
				<table class="table-filter">
				        <tr>				            
				            <td><a href="<!--{{url('game/games/game-control',{id:0,gid:gid})}}-->" class="btn btn-teal">添加游戏设置</button></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">游戏</th>
							<th class="col-80">版本</th>
							<th class="col-80">状态</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.game_name}}--></td>
							<td><!--{{item.version}}--></td>
							<td><!--{%if item.option.checked==1%}-->已通过<!--{%else%}-->审核中<!--{%endif%}--></td>
							<td>							    						   
							    <a href="<!--{{url('game/games/game-control',{'id':item.id,gid:item.game_id})}}-->" class="btn btn-primary">编辑</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->