<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					消息列表					
				</h3>
				<div class="actions">
				    <form action="<!--{{url('v4message/push/list')}}-->">
				    <table class="table-filter">
				        <tr>	
				            <td>
								<input name="toUid" type="text" class="input-medium" placeholder="UID" value="<!--{{search.toUid}}-->">
							</td>		            
				            <td>
				                <div class="input-append date " >
									<input name="startdate" type="text" class="input-small" value="<!--{{search.startdate}}-->" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date " >
									<input name="enddate" type="text" class="input-small" value="<!--{{search.enddate}}-->" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <td><a href="<!--{{url('v4message/push/add')}}-->" class="btn btn-teal">发布消息</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th>ID</th>
							<th>内容</th>
							<th>类型</th>
							<th>发送对象</th>
							<th>平台</th>
							<th>添加时间</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.logId}}--></td>
							<td>
								<!--{{item.messages.alert}}-->
							</td>
							<td>
								<!--{% if item.type==1%}-->单推<!--{%endif%}-->
								<!--{% if item.type==2%}-->组推<!--{%endif%}-->
								<!--{% if item.type==3%}-->全推<!--{%endif%}-->
							</td>
							<td>
								<!--{%if item.type == 3%}-->全体用户<!--{%endif%}-->
								<!--{%if item.type == 1%}--><a href="<!--{{url('v4user/users/edit',{id:item.toUid})}}-->" class="btn btn-primary"><!--{{item.toUid}}--></a><!--{%endif%}-->
							</td>
							<td><!--{{item.platform}}--></td>
							<td><!--{{item.createTime}}--></td>
							<td>
							    <!--{#<a href="<!--{{url('message/push/edit',{id:item.logId})}}-->" class="btn btn-primary">编辑</a>#}-->							    
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

