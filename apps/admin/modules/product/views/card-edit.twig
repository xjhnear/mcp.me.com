<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>卡密导入</h3>
            </div>
            <div class="box-content">
                <form action="<!--{{url('product/goods/import')}}-->" method="POST" id="card_from" class='form-horizontal' enctype="multipart/form-data">
                    <input type="hidden" name="editor" value="<!--{{editor}}-->">

                   <div class="control-group">
                        <label class="control-label">卡密导入说明</label>
                        <div class="controls">
                            <span class="label">EXCLE文件导入</span>
                            <p>请将要导入的卡密号写入一个EXCLE文件！</p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">卡密文件</label>
                        <div class="controls">
                            <div class="uploader" id="uniform-fileInput"><input name="importFile" class="input-file uniform_on" id="file_upload" type="file" size="19" style="opacity: 0; "></div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>导入</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="/static/js/jquery.uniform.min.js"></script>
<script>
    $(function(){
        $("input:file").uniform({'fileBtnText':'选择文件'});
    });

</script>
<!--{%endblock%}-->