<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>编辑视频类型</h3>
			</div>
			<div class="box-content">
				<form action="<!--{{url('cms/vtype/edit')}}-->" method="POST" class="form-horizontal form-validate" enctype="multipart/form-data" id="videoForm">
					<input type="hidden" name="type_id" value="<!--{{ info.type_id }}-->">
					<div class="tab-content padding tab-content-inline tab-content-bottom">
						<div class="control-group">
							<label class="control-label">类型名称</label>
							<div class="controls">
								<input type="text" name="type_name" value="<!--{{ info.type_name }}-->" data-msg-required="类型名称不能为空" data-rule-required="true" class="input-large"/>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label">排序</label>
							<div class="controls">
								<input type="text" name="sort" value="<!--{{ info.sort }}-->" data-msg-required="排序不能为空" data-rule-required="true" class="input-large"/>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label">是否置顶</label>
							<div class="controls">
								<input data-on-color="success" data-on-text="是" name="is_top" data-off-color="danger" data-off-text="否" class="my-checkbox" type="checkbox" <!--{{ info.is_top ? 'checked' : '' }}-->/>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label">平台</label>
							<div class="controls">
								<select name="platform">
									<option value="all" <!--{{ info.platform == 'all' ? 'selected' : '' }}-->>双平台</option>
									<option value="ios" <!--{{ info.platform == 'ios' ? 'selected' : '' }}-->>IOS</option>
									<option value="android" <!--{{ info.platform == 'android' ? 'selected' : '' }}-->>Android</option>
								</select>
							</div>
						</div>
						<div class="form-actions">
							<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
						</div>
					</div>
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$("[class='my-checkbox']").bootstrapSwitch();
</script>
<!--{% endblock %}-->
