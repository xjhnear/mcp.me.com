<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					资讯				
				</h3>
				<div class="actions">
				    <form action="<!--{{url('cms/article/search')}}-->" class="">
				    <table class="table-filter">
				        <tr>				            
				            <td>
				            
				            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <td><a href="<!--{{url('cms/article/add')}}-->" class="btn btn-teal">添加文章</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <th class="col-60">标题</th>
							<th class="col-80">类型</th>
							<th class="col-80">作者</th>
							<th class="col-80">编辑时间</th>							
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>							
							<td><a href="<!--{{item.id}}-->"><!--{{item.title}}--></a></td>
							<td><!--{{item.type}}--></td>
							<td><!--{{item.writer}}--></td>
							<td><!--{{item.addtime|date(Y-m-d)}}--></td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

