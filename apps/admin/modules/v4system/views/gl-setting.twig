<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>系统设置</h3>
            </div>
            <div class="box-content">
                <form action="<!--{{url('v4system/config/gl-setting')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
                    <div class="control-group">
                        <label for="textfield" class="control-label">官方网站</label>
                        <div class="controls">
                            <input name="aboutUsUrl" type="text" class="input-xlarge" value="<!--{{setting.aboutUsUrl}}-->" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label">新手引导</label>
                        <div class="controls">
                            <input name="aboutUsNewHand" type="text" class="input-xlarge" value="<!--{{setting.aboutUsNewHand}}-->" />
                        </div>
                    </div>
                    <!--{%if setting.aboutUsImg%}-->
                    <div class="control-group">
                        <label class="control-label">微信二维码</label>
                        <div class="controls">
                            <a href="#bigimg" data-toggle="modal"><img src="<!--{{setting.aboutUsImg}}-->" width="150px" /></a>
                        </div>
                    </div>
                    <!--{%endif%}-->
                    <div class="control-group">
                        <label class="control-label">上传图片</label>
                        <div class="controls">
                            <input name="aboutUsImg" type="hidden" value="<!--{{setting.aboutUsImg}}-->"/>
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="input-append">
                                    <input type="file" name="filedata" class="" />
                                </div>
                            </div>
                        </div>
                    </div>

					<div class="control-group">
						<label for="textfield" class="control-label">用户注册说明</label>
						<div class="controls">
							<script id="userAgreement" name="userAgreement" type="text/plain"><!--{{ setting.userAgreement }}--></script>
						</div>
					</div>
					
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="<!--{{asset('/static/js/ueditor/ueditor.config.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/ueditor.all.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/lang/zh-cn/zh-cn.js')}}-->"></script>
<script>
	$(function(){
		UE.getEditor('userAgreement',{initialFrameHeight:100});
	});

</script>
<!--{%endblock%}-->