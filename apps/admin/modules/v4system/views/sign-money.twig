<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>签到奖励</h3>
            </div>
            <div class="box-content">
                <form action="<!--{{url('v4system/config/sign-money')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
                    <div class="control-group">
                        <label class="control-label">初始签到奖励</label>
                        <div class="controls">
                            <input name="initPrize" type="text" class="input-small" value="<!--{{setting.initPrize}}-->" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">每天奖励增加值</label>
                        <div class="controls">
                            <input name="addValue" type="text" class="input-small" value="<!--{{setting.addValue}}-->" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">签到奖励上限</label>
                        <div class="controls">
                            <input name="maxValue" type="text" class="input-small" value="<!--{{setting.maxValue}}-->" />
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

