<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>系统设置</h3>
            </div>
            <div class="box-content">
                <form action="<!--{{url('v4system/config/share-setting')}}-->" method="POST" class='form-horizontal' enctype="multipart/form-data">
                    <div class="control-group">
                        <label for="textfield" class="control-label">分享标题</label>
                        <div class="controls">
                            <input name="shareTitle" type="text" class="input-xlarge" value="<!--{{setting.shareTitle}}-->" />
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label">分享内容</label>
                        <div class="controls">
                            <textarea name="shareContent" class="input-xlarge"><!--{{setting.shareContent}}--></textarea>
                        </div>
                    </div>
                    <!--{%if setting.aboutUsImg%}-->
                    <div class="control-group">
                        <label class="control-label">分享图标</label>
                        <div class="controls">
                            <a href="#bigimg" data-toggle="modal"><img src="<!--{{setting.shareImg}}-->" width="150px" /></a>
                        </div>
                    </div>
                    <!--{%endif%}-->
                    <div class="control-group">
                        <label class="control-label">上传图片</label>
                        <div class="controls">
                            <input name="shareImg" type="hidden" value="<!--{{setting.shareImg}}-->"/>
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="input-append">
                                    <input type="file" name="filedata" class="" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label">跳转链接</label>
                        <div class="controls">
                            <input name="shareUrl" type="text" class="input-xlarge" value="<!--{{setting.shareUrl}}-->" />
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

