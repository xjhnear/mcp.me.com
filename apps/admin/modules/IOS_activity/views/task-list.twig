                            <th class="col-80">查看任务</th>
                            <!--{%endif%}-->
                            <th class="col-80">审核</th>
                            <th class="col-120">待/完成/总数</th>
                            <th class="col-60">排序值</th>
                            <th class="col-60">状态</th>
                            <th class="col-60">是否互斥</th>
