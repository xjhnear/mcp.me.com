<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(confirm('确定要删除数据吗？')){
            var id = $(this).attr('id');
            obj = $(this);
            $.post('<!--{{url('yxvl_eSports/VltvLive/ajax-del')}}-->',{accountId:id,api:"RemoveAppAccount"},function(data){
                if(data.success){
                    obj.parent().parent().hide();
                }else{
                    alert(data.error);
                }
            },"json")
        }
    });

    $('a.ajax-update').bind('click',function(){
        var notice = "";
        var enable = "";
        var val = "";
        var isOpen = "";
        if($(this).html()=="开启"){
            notice = "确定开启？";
            enable = "0";
            val = "关闭";
            isOpen = "开启"
        }else{
            notice = "确定关闭？";
            enable = "1";
            val = "开启";
            isOpen = "关闭"
        }
        if(confirm(notice)){
            var id = $(this).attr('id');
            obj = $(this);
            $.post('<!--{{url('yxvl_eSports/VltvLive/ajax-update')}}-->',{accountId:id,status:enable,api:"UpdateAppAccount"},function(data){
                if(data.success){
                    obj.html(val);
                    obj.parent().siblings(".isOpen").html(isOpen);
                }else{
                    alert(data.error);
                }
            },"json")
        }
    });
});    
</script>
<!--{%endblock%}-->