<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<link rel="stylesheet" href="/static/css/plugins/tagsinput/jquery.tagsinput.css">
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>描述</h3>
			</div>
			<div class="box-content">
			    <form id="form_sports" action="<!--{{url('yxvl_eSports/home/page-desc')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
				<div class="control-group">
					<label class="control-label">标题<i class="tip-star"></i></label>
					<div class="controls">
					    <div class=" input-append">
							<input type="text" name="title" id="title" class="input-xxlarge" value="<!--{{data.title}}-->"  data-msg-required="请填写标题" />
						</div>
					</div>
				</div>

                <div class="control-group">
                    <label class="control-label">关键字<i class="tip-star"></i></label>
                    <div class="controls">
                        <div class=" input-append">
                            <input type="text" name="keywords" id="keywords" class="input-xxlarge" value="<!--{{data.keywords}}-->"  data-msg-required="请填写标题" />
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">描述<i class="tip-star"></i></label>
                    <div class="controls">
                        <textarea name="description" id="description" class="input-xxlarge"><!--{{data.description}}--></textarea>
                    </div>
                </div>
			    <div class="form-actions">
                    <input type="hidden" name="id" id="id" value="<!--{{data.id}}-->"/>
					<button type="button" class="btn btn-primary sub"><i class="icon-ok"></i>保存</button>
				</div> 
			    </form>
			</div>
		</div>
    </div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="<!--{{asset('/static/js/ueditor/ueditor.config.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/ueditor.all.js')}}-->"></script>
<script src="<!--{{asset('/static/js/ueditor/lang/zh-cn/zh-cn.js')}}-->"></script>
<script src="<!--{{asset('/static/js/plugins/tagsinput/jquery.tagsinput.min.js')}}-->"></script>
<script src="<!--{{asset('/static/js/plugins/jquery-ui/jquery-ui-1.9.2.custom.min.js')}}-->"></script>
<script>
$(function(){
    var editor = UE.getEditor('container',{initialFrameWidth:800});
    $('input.datetimepicker').datetimepicker({format:'Y-m-d',lang:'ch'});
    $(".sub").click(function(){
        var id = $("#id").val();
        var title = $("#title").val();
        var keywords = $("#keywords").val();
        var description = $("#description").val();
        $.post('<!--{{url('yxvl_eSports/home/add-page-desc')}}-->',{id:id,title:title,keywords:keywords,description:description},function(data){
            if(data.success){
                alert("保存成功");
            }else{
                alert(data.error);
            }
        },"json")
    })

});
</script>
<!--{%endblock%}-->