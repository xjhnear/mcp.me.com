<!--{%block footer_js%}-->
<script>
    $(function(){
        $('a.ajax-del').bind('click',function(){
            if(confirm('确定要删除数据吗？')){
                var id = $(this).attr('id');
                obj = $(this);
                $.post('<!--{{url('yxvl_eSports/home/ajax-del')}}-->',{id:id},function(data){
                    if(data.success){
                        obj.parent().parent().hide();
                    }else{
                        alert(data.error);
                    }
                },"json")
            }
        });
    });
</script>
<!--{%endblock%}-->