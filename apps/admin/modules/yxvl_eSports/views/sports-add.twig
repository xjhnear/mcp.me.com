<!--{%extends "base-layout.twig"%}-->
<!--{%block header_css%}-->
<link rel="stylesheet" href="/static/css/plugins/tagsinput/jquery.tagsinput.css">
<!--{%endblock%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>发布赛事</h3>
			</div>
			<div class="box-content">
			    <form id="form_sports" action="<!--{{url('yxvl_eSports/sports/add')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
				<div class="control-group">
					<label class="control-label">标题<i class="tip-star">*</i></label>
					<div class="controls">
					    <div class=" input-append">
							<input type="text" name="title" class="input-xxlarge" value="<!--{{data.title}}-->" data-rule-required="true" data-msg-required="请填写标题" />
						</div>
					</div>
				</div>
                <div class="control-group">
                    <label class="control-label"></label>
                    <div class="controls">
                        <div class="input-prepend">
                            <span class="add-on">副标题<i class="tip-star">*</i></span><input type="text" name="subTitle" class="input-xlarge" value="<!--{{data.subTitle}}-->" data-rule-required="true" data-msg-required="请填写副标题" />
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">图片地址</label>
                    <div class="controls">
                        <div data-provides="fileupload" class="fileupload fileupload-new">
                            <div style="max-width: 60px; max-height: 60px;" class="fileupload-new thumbnail">
                                <img id="selected_game_icon" src="<!--{{data.picUrl|default('/static/img/wu_ss.gif')}}-->">
                            </div>
                            <div style="max-width: 60px; max-height: 60px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
                            <span class="btn btn-file"><i class="icon-picture"></i>
                                <span class="fileupload-new">选择照片</span><span class="fileupload-exists">Change</span>
                                <input id="task_img" name="img" type="hidden" value="<!--{{data.picUrl}}-->"/>
                                <input type="file"  name="picUrl" >
                            </span>
                            <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">Remove</a>
                            <span style="color: rgb(185, 74, 72);" class="img_note" hidden="hidden">图片不能为空且限于png,gif,jpeg,jpg格式</span>
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">赛事时间<i class="tip-star">*</i></label>
                    <div class="controls">
                        <div class=" input-append">
                            <input type="text" name="time" class="input-xxlarge" value="<!--{{data.time}}-->" data-rule-required="true" data-msg-required="请填写时间" />
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">发布时间</label>
                    <div class="controls">
                        <div class="input-append date">
                            <input name="publishTime" type="text" class="input-medium datetimepicker" value="<!--{{data.publishTime|date('Y-m-d H:i:s')}}-->">
                            <span class="add-on"><i class="icon-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">跳转链接<i class="tip-star">*</i></label>
                    <div class="controls">
                        <div class=" input-append">
                            <input type="text" name="url" class="input-xxlarge" value="<!--{{data.url}}-->"  />
                        </div>
                    </div>
                </div>
				<div class="control-group">
					<label class="control-label">摘要<i class="tip-star">*</i></label>
					<div class="controls">
					    <textarea name="summary" class="input-xxlarge"><!--{{data.summary}}--></textarea>
					</div>
				</div>
			    <div class="form-actions">
                    <input type="hidden" name="id" value="<!--{{data.id}}-->"/>
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div> 
			    </form>
			</div>
		</div>
    </div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
