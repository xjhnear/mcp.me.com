<!--{%extends "sub-layout-other.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					添加发现
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('other/discovery/save')}}-->" method="POST" class="form-horizontal form-validate" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<!--{{dis.id}}-->">
                    <input type="hidden" name="subType" value="<!--{{subType}}-->">
					<div class="control-group">
						<label class="control-label">标题</label>
						<div class="controls">
							<input type="text" name="title" class="input" data-rule-required="true" value="<!--{{dis.title}}-->" data-msg-required="请填写发现名称"/>
						</div>
					</div>
                    <div class="control-group">
                        <label class="control-label">介绍</label>
                        <div class="controls">
                            <input type="text" name="description" class="input" data-rule-required="true" value="<!--{{dis.description}}-->" data-msg-required="请填写描述"/>
                        </div>
                    </div>

					<div class="control-group">
						<label class="control-label">icon</label>
						<div class="controls">
							<div data-provides="fileupload" class="fileupload fileupload-new"><input type="hidden">
								<div style="max-width: 60px; max-height: 60px;" class="fileupload-new thumbnail"><img src="<!--{%if dis.pic %}--> <!--{{dis.pic}}--> <!--{% else %}--> /static/img/wu_ss.gif <!--{%endif%}-->" /></div>
								<div style="max-width: 60px; max-height: 60px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
								<span class="btn btn-file"><i class="icon-picture"></i>
									<span class="fileupload-new">选择图片</span><span class="fileupload-exists">变更</span>
									<input type="file" name="pic" value="<!--{{dis.pic}}-->">
								</span>
								<span class="add-on text-warning">默认为游戏图片</span>
								<a data-dismiss="fileupload" class="btn fileupload-exists" href="#">移除</a>
							</div>
						</div>
					</div>

                    <div class="control-group hid">
                        <label class="control-label">排序</label>
                        <div class="controls">
                            <input type="text" name="top" class="input" data-rule-required="true" value="<!--{{dis.top}}-->" data-msg-required="请填写发现名称"/>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">跳转类型</label>
                        <div class="controls">
							<!--{% if dis.linkType==0 %}-->
							<!--{{form_select('linkType',linkType,dis.linkId,{'id':'linkType'})}}-->
							<!--{%else%}-->
							<!--{{form_select('linkType',linkType,dis.linkType,{'id':'linkType'})}}-->
							<!--{%endif%}-->
                            <select id="linkSel">
                                <option value="1">首页</option>
                                <option value="2">商品</option>
                                <option value="3">系列商品</option>
                            </select>
                        </div>
                    </div>

					<div class="control-group hid" id="isautologindiv" <!--{% if dis.linkType!=1 and dis.linkType!=2 %}--> style="display:none" <!--{%endif%}-->>
						<div class="row-fluid">
							<div class="span3">
								<div class="control-group">
									<label class="control-label">是否自动登录</label>
									<div class="controls">
										<input type="radio" name="isAutoLogin" value=1 <!--{% if dis.isAutoLogin is sameas(true) %}-->checked<!--{% endif  %}-->>是
									</div>
								</div>
							</div>
							<div class="span3">
								<div class="control-group">
									<div class="controls">
										<input type="radio" name="isAutoLogin" value=2 <!--{% if dis.isAutoLogin is sameas(false) %}-->checked<!--{%elseif dis.isAutoLogin is null %}-->checked<!--{% endif  %}-->>否
									</div>
								</div>
							</div>
						</div>
					</div>

                    <div class="control-group id">
                        <label class="control-label url">URL地址</label>
                        <div class="controls">
                            <input type="text" name="linkValue" class="input" value="<!--{{dis.linkValue}}-->" data-msg-required="请填写发现名称"/>
                        </div>
                    </div>

					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="确认保存" class="btn btn-primary sub">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>

$(function(){
	var select_type_val = $("#linkType").val();
	if(select_type_val == 1 || select_type_val == 2 ){
		$("#isautologindiv").fadeIn();
	}else{
		$("#isautologindiv").fadeOut();
	}
    var linkType = $("#linkType").val();

    $('#linkType').change(function(){
        var type = $(this).val();
        set_type(type);
    });

    $("#linkSel").change(function(){
        if($(this).val()=="1"){
         alert("ok");
        }
    });

    function set_type(type){
        if(type == 1 || type == 2){
            $(".url").html("URL地址");
			$('#isautologindiv').fadeIn();
        }else{
            $(".url").html("ID");
			$('#isautologindiv').fadeOut();
        }
    }
})
</script>
<!--{%endblock%}-->