<!--{%block footer_js%}-->
<script>
    $(function(){
        $(".del").click(function(){
            if(confirm("确定删除数据吗？")){
                var id = $(this).attr("bid");
                var obj =  $(this);
                $.post("<!--{{url('other/discovery/del')}}-->",{'id':id},function(data){
                    if(data.success==true){
                        obj.parent().parent().hide();
                    }else{
                        alert(data.mess);
                    }
                },"json")
            }
        })
    })
</script>
