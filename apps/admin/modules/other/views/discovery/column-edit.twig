<!--{%extends "sub-layout-other.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3>
					<i class="icon-edit"></i>
					添加发现
				</h3>
				<div class="actions">
				</div>
			</div>
			<div class="box-content">
				<form id="form-activity" action="<!--{{url('other/discovery/column-edit')}}-->" method="POST" class="form-horizontal form-validate" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<!--{{dis.id}}-->">
                    <input type="hidden" name="subType" value="<!--{{subType}}-->">
					<div class="control-group">
						<label class="control-label">标题</label>
						<div class="controls">
							<input type="text" name="title" class="input" data-rule-required="true" value="<!--{{dis.title}}-->" data-msg-required="请填写发现名称"/>
						</div>
					</div>


					<div class="control-group">
						<label class="control-label">灰图</label>
						<div class="controls">
							<div data-provides="fileupload" class="fileupload fileupload-new"><input type="hidden">
								<div style="max-width: 60px; max-height: 60px;" class="fileupload-new thumbnail"><img src="<!--{%if dis.pic.grayPic %}--> <!--{{dis.pic.grayPic}}--> <!--{% else %}--> /static/img/wu_ss.gif <!--{%endif%}-->" /></div>
								<div style="max-width: 60px; max-height: 60px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
								<span class="btn btn-file"><i class="icon-picture"></i>
									<span class="fileupload-new">选择图片</span><span class="fileupload-exists">变更</span>
									<input type="file" name="pic" value="<!--{{dis.pic.grayPic}}-->">
                                    <input type="hidden" name="img" value="<!--{{dis.pic.grayPic}}-->"/>
								</span>
								<span class="add-on text-warning">默认为游戏图片</span>
								<a data-dismiss="fileupload" class="btn fileupload-exists" href="#">移除</a>
							</div>
						</div>
					</div>

                    <div class="control-group">
                        <label class="control-label">亮图</label>
                        <div class="controls">
                            <div data-provides="fileupload" class="fileupload fileupload-new"><input type="hidden">
                                <div style="max-width: 60px; max-height: 60px;" class="fileupload-new thumbnail"><img src="<!--{%if dis.pic.brightPic %}--> <!--{{dis.pic.brightPic}}--> <!--{% else %}--> /static/img/wu_ss.gif <!--{%endif%}-->" /></div>
                                <div style="max-width: 60px; max-height: 60px; line-height: 20px;" class="fileupload-preview fileupload-exists thumbnail"></div>
								<span class="btn btn-file"><i class="icon-picture"></i>
									<span class="fileupload-new">选择图片</span><span class="fileupload-exists">变更</span>
									<input type="file" name="pic2" value="<!--{{dis.pic.brightPic}}-->">
                                    <input type="hidden" name="img2" value="<!--{{dis.pic.brightPic}}-->"/>
								</span>
                                <span class="add-on text-warning">默认为游戏图片</span>
                                <a data-dismiss="fileupload" class="btn fileupload-exists" href="#">移除</a>
                            </div>
                        </div>
                    </div>



					<div class="control-group">
						<label class="control-label"></label>
						<div class="controls">
							<input type="submit" value="确认保存" class="btn btn-primary sub">
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
