<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>游戏信息</h3>
			</div>
			<div class="box-content">
			    <form id="form-activity" action="<!--{{url('union/cash/edit')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
			    <input id="id" name="id" type="hidden" value="<!--{{cashgame.id}}-->" />
				<div class="control-group">
					<label class="control-label">游戏短语</label>
					<div class="controls">
						<input type="text" name="phrase" class="input-xxlarge" value="<!--{{cashgame.phrase}}-->" />
						<span class="help-inline">可为空(如果此项为空的话则展示游戏Tag) 请填写10字以内的游戏短语</span>
					</div>
				</div>
                <div class="control-group">
                    <label class="control-label">类别</label>
                    <div class="controls">
                        <!--{{form_select('type',cond.types,cond.type,{'style':'margin-bottom:0px;width:80px;'})}}-->
                    </div>
                </div>
				<div class="control-group">
                    <label class="control-label">平台</label>
                    <div class="controls">
	                    <input name="device" data-on-color="success" <!--{{cashgame.id ? 'readonly' : ''}}--> data-on-text="Android" data-off-color="danger" data-off-text="Ios" class="switchbox" type="checkbox" <!--{{ cashgame.device == 2 ? 'checked' : '' }}-->/>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">所属游戏</label>
                    <div class="controls">
                        <input id="gameselect" data-from="android" name="gid" type="hidden" value="<!--{{cashgame.gid}}-->" class="bigdrop select2-offscreen" style="width:200px;" tabindex="-1">
                        <input id="game_name" name="game_name" type="hidden" value="<!--{{cashgame.game_name}}-->" >
	                    <div class="input-append">
							<input id="selected_game_id" name="gid" type="hidden" value="<!--{{ cashgame.gid }}-->"/>
							<img id="selected_game_icon" alt=""  class="add-on" src="<!--{{ cashgame.ico ? cashgame.ico : '/static/img/wu_ss.gif' }}-->"/>
							<input type="text" id="selected_game_name" name="game_name" class="input-medium" value="<!--{{ cashgame.gname }}-->" data-rule-required="true" data-msg-required="关联游戏不能为空" />
							<span class="add-on select-pop-game">选择游戏</span>
		                    <span class="add-on text-error">游戏搜索结果依平台而定</span>
						</div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">排序</label>
                    <div class="controls">
                        <input type="text" name="sort" class="input-small" value="<!--{{cashgame.sort|default(0)}}-->" />
                        <span class="help-inline">填写数字</span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">折扣</label>
                    <div class="controls">
                        <input type="text" name="discount" class="input-small" value="<!--{{cashgame.discount}}-->" data-rule-required="true" data-msg-required="折扣不能为空" />
                        <span class="help-inline">填写数字</span>
                    </div>
                </div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div> 
			    </form>
			</div>
		</div>
    </div>
</div>			
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
	function set_selected_game(game_id,game_name,icon){
		$('#selected_game_id').val(game_id);
		$('#selected_game_icon').attr('src',icon);
		$('#selected_game_name').val(game_name);
		$("input[name='name']").val(game_name);
	};
	function set_selected_agame(game_id,game_name,icon){
		$('#selected_game_id').val(game_id);
		$('#selected_game_icon').attr('src',icon);
		$('#selected_game_name').val(game_name);
		$("input[name='name']").val(game_name);
	};
	$(function(){
		$('.switchbox').bootstrapSwitch();
		$('.select-pop-game').bind('click',function(){
			if($("input[name='device']:checked").val()){
				var url = '/a_game/api/game-search';
			}else{
				var url = '/game/api/game-search';
			}
			$.ajax({
				url:url,
				dataType:'json',
				success:function(json){
					$.dialog({id:'pop-game-list',title:'提示',padding:2,content:json.html,width:600,height:580});
				}
			});
		});
	});
</script>
<!--{%endblock%}-->