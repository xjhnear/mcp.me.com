<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>分成设置</h3>
			</div>
			<div class="box-content">
			    <form id="form_column" action="<!--{{url('')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">



                <div class="control-group">
                    <label class="control-label"><b>最低提现钻石数：</b></label>
                    <div class="controls">
                        <input type="text" id="cash" class="input-small" value="<!--{{cash}}-->" />
                        <input type="button" CLASS="btn-primary tijiao_cash" value="保存" />
                    </div>
                </div>


			    <div class="form-actions">
                    <input type="hidden" name="id" value="<!--{{data.id}}-->"/>
