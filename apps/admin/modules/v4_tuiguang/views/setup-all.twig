<script>
    var img_path;
$(function(){

    $(".tijiao_cash").click(function(){
        var cash = $("#cash").val();
        if(!cash){
            alert("金额不能传空！");return false;
        }
        $.post('<!--{{url('tuiguang/home/ajax-cash-setup')}}-->',{confKey:"diamondCashLimit",confValue:cash},function(data){
            if(data.success){
                alert("修改成功！");
            }else{
                alert(data.data);
            }
        },"json")
    })
});
$('input').iCheck({
    checkboxClass: 'icheckbox_square-orange',
    radioClass: 'iradio_square-orange',
    increaseArea: '20%' // optional
});
$('.switchbox').bootstrapSwitch();
</script>
