<!--{%block footer_js%}-->
<script src="/static/js/ajaxfileupload.js"></script>
<script>
$(function(){
    $(".ajax-open").click(function(){
        var obj = $(this);
        var id = $(this).attr('id');
        var type = $(this).html()=="开启"?"true":"false";

        if($(this).html() == "开启"){
            if(!confirm("是否确定开启？")){
                return false;
            }
        }else if($(this).html() == "冻结"){
            if(!confirm("是否确定冻结？")){
                return false;
            }
        }
        $.post('<!--{{url('v4_tuiguang/home/ajax-open')}}-->',{promoterId:id,isActive:type},function(data){
            if(data.success){
                if(type == "true"){
                    obj.html("冻结");
                }else{
                    obj.html("开启");
                }
            }
        },"json")
    })
});    
     $(document).on('change','#file_upload',function(){
             $.ajaxFileUpload({
				url:'/v4agiftbag/package/file-count',
				type : 'post',
				secureuri :false,
				fileElementId :'file_upload',
				dataType : 'JSON',
				success : function (data){	
				var dataObj=eval("("+data+")");		
                  $('#file_url').val(dataObj.file.tmp);
				}

			});
        });
   
</script>
<script src="/static/js/laydate/laydate.js"></script>
