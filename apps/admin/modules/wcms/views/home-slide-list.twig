<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i><!--{{nav_bar_title}}-->
				</h3>
				<div class="actions">
				    <table class="table-filter">
				        <tr>				            
							<td><a href="<!--{{url('wcms/home/add-slide',{position:position})}}-->" class="btn btn-teal"><i class="icon-plus"></i>添加<!--{{nav_bar_title}}--></a></td>
				        </tr>
				    </table>
				</div>
			</div>
			<div class="box-content nopadding">
				<form action="<!--{{url('wcms/home/slide-sort')}}-->" method="POST">
					<input name="position" type="hidden" value="<!--{{position}}-->"/>
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">位置顺序</th>
							<th>标题</th>
							<th class="col-150">图片</th>
							<!--{%if position=='third'%}--><th class="col-120">新位置</th><!--{%endif%}-->
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.idx}}--></td>
							<td>
								<!--{{item.title}}-->
							</td>
							<td class="table-list-img"><a href="#bigimg" data-toggle="modal"><img src="<!--{{item.picUrl}}-->" /></a></td>
							<!--{%if position=='third'%}-->
							<td>
								<input name="idx_<!--{{item.idx}}-->" type="text" class="input-small" value="<!--{{item.idx}}-->" />
							</td>
							<!--{%endif%}-->
							<td>
							    <a href="<!--{{url('wcms/home/slide-edit',{position:position})}}-->?idx=<!--{{item.idx}}-->" class="btn btn-primary">编辑</a>
								<!--{%if position=='one'%}-->
								<a href="<!--{{url('wcms/home/slide-delete',{position:position})}}-->?idx=<!--{{item.idx}}-->" class="btn btn-primary ajax-del">删除</a>
								<!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
				<!--{%if position=='third'%}-->
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存排序</button>
					<a class="btn btn-primary" href="<!--{{url('wcms/home/recovery-slide',{'position':position})}}-->">恢复数据</a>
				</div>
				<!--{%endif%}-->
				</form>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){    
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});    
</script>
<!--{%endblock%}-->