<div class="box">
    <div class="actions">
        <table class="table-filter">
	        <tr>				            
	            <td>
	                <label>标题</label>				                
	            </td>
	            <td>
					<input id="keyword" type="text" class="input-medium" placeholder="" value="<!--{{search.keyword}}-->">
				</td>
				<td>
				    <a href="javascript:searchPicture();" class="btn btn-teal">按条件搜索</a>
				</td>
			</tr>
		</table>
    </div>    
    <table class="table table-hover table-nomargin">
        <thead>
			<tr>
			    <th class="col-60">ID</th>
			    <th>标题</th>
				<th class="col-150">时间</th>				
				<th class="table-btn-group col-60">操作</th>
			</tr>
		</thead>
		<tbody>
		    <!--{%for item in datalist%}-->
			<tr>
				<td><!--{{item.id}}--></td>
				<td><!--{{item.title}}--></td>
				<td><!--{{item.publishTime|date('Y-m-d H:i')}}--></td>
				<td>
				    <a href="javascript:void(0);" data-id="<!--{{item.id}}-->" class="btn btn-primary select-picture-id">选择</a>				    							    
				</td>
			</tr>
			<!--{%endfor%}-->
		</tbody>
    </table>
    <div class="pagelink">
        <!--{{pagelinks}}-->
    </div>
</div>    
    <script>
    function searchPicture()
    {
        var keyword = $('#keyword').val();
        $.ajax({
            url:'/wcms/api/pop-picture-search',
            data:{keyword:keyword},
            dataType:'json',
            success:function(json){
                var html = '';
                html = json.html;
                $.dialog.list['pop-picture-list'].content(html);
            }
        });
    }
    function init_page()
    {
        //
        $('.select-picture-id').each(function(){
            $(this).click(function(){
                var data_id = $(this).attr('data-id');                
                set_selected_picture(data_id);
                $.dialog.list['pop-picture-list'].close();
            });
        });
        //
        $('.pagelink a').each(function(){
            var url = $(this).attr('href');            
            $(this).attr('href','javascript:void(0);');
            $(this).click(function(){
                $.ajax({
                    url:url,
                    dataType:'json',
		            success:function(json){
		                var html = '';
		                html = json.html;
		                $.dialog.list['pop-picture-list'].content(html);		                
		            }
                });
            });
            
        });
    }
    init_page();
    </script>