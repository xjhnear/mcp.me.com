<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					视频管理
				</h3>
				<div class="actions">
				    <form action="<!--{{url('wcms/video/index')}}-->" class="">
				    <table class="table-filter">
				        <tr>	
				            <td>标题关键词</td>
				            <td>
								<input name="keyword" type="text" class="input-medium" placeholder="ID/关键字" value="<!--{{search.keyword}}-->">								
							</td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>   			            
							<td><a href="<!--{{url('wcms/video/add')}}-->" class="btn btn-teal"><i class="icon-plus"></i>添加视频</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th>标题</th>
							<th class="col-80">图片</th>
							<th class="col-80">发布时间</th>							
							<th class="col-80">属性</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td>
								<!--{{item.title}}-->
							</td>
							<td class="table-list-img"><a href="#bigimg" data-toggle="modal"><img src="<!--{{item.titlePic}}-->" /></a></td>
							<td><!--{{item.publishTime|date('Y-m-d H:i')}}--></td>
							<td></td>
							<td>
							    <a href="<!--{{url('wcms/video/edit')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">编辑</a>	
							    <a href="<!--{{url('wcms/video/delete')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary ajax-del">删除</a>
								<a href="http://video.youxiduo.com/content/<!--{{item.id}}-->.html" class="btn btn-primary" target="_blank">查看</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    gameselect('#gameselect');    
    $('.switchbox').bootstrapSwitch();
    $('.switchbox').on('switchChange.bootstrapSwitch',function(event,stat){
        var atid = $(this).attr('data-tid');
        var field = $(this).attr('data-field');
        var status = stat ? 1 : 0;
        $.get('/a_activity/activity/do-status',{'atid':atid,'field':field,'status':status});
    });
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});    
</script>
<!--{%endblock%}-->