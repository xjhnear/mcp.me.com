<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					评论列表
					<span class="badge badge-warning"><!--{{total_count}}--></span>
				</h3>
				<div class="actions">
					<table class="table-filter">
						<tr>
							<td><a class="btn btn-teal" href="<!--{{ url('v4gamecmt/comment/sub-comment-add',{'id':rid}) }}-->">添加评论</a></td>
						</tr>
					</table>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-40">
						        <input type="checkbox" name="all" value="" /><div class="btn-group">
							        <a data-toggle="dropdown" class="btn dropdown-toggle"><span class="caret"></span></a>
							        <ul class="dropdown-menu">
							            <li><a href="javascript:void(0);" data-act="del" class="ajax-del">删除</a></li>
							        </ul>
							    </div>
							</th>
						    <th class="col-40">ID</th>
							<th>内容</th>
							<th class="col-150">评论人</th>
							<th class="col-150">发布时间</th>
							<th class="table-btn-group col-100">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in comment_list%}-->
						<tr>
						    <td><input type="checkbox" name="ids" value="<!--{{item.cid}}-->" /></td>
						    <td><!--{{item.cid}}--></td>
							<td><!--{{item.content}}--></td>
							<td><span class="badge badge-info"><!--{{item.uid}}--></span><a href="<!--{{url('v4user/users/edit',{'id':item.uid})}}-->" target="_blank"><!--{{ item.name }}--></a></td>
							<td><!--{{item.add_time}}--></td>
							<td>
								<!--{%if item.is_active %}-->
								<a href="<!--{{url('v4gamecmt/comment/del-comment',{'cid':item.cid,'uid':item.uid})}}-->" class="btn btn-primary ajax-del">删除</a>
								<!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{paginator}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
        if($(this).attr('data-act')=='del'){
            var ids = [];
            $('input[name="ids"]:checked').each(function(){
                ids.push($(this).val());
            });
            if(ids.length==0) return false;
            $.ajax({
                url:'<!--{{url('comment/comments/del')}}-->',
                type:'POST',
                data:{'ids':ids},
                dataType:'json',
                success:function(data){
                    if(data.status==200){
                        window.location.href = window.location.href;
                    }else{
                        
                    }
                }
            });
        }
    });


    $('input[name="all"]').bind('click',function(){
        if($(this).prop('checked')==true){
            $('input[name="ids"]').prop('checked',true);
        }else{
            $('input[name="ids"]').prop('checked',false);
        }
    });
});
</script>
<!--{%endblock%}-->    