<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					模板列表					
				</h3>
				<div class="actions">	
				<a href="<!--{{url('system/share/add-tpl')}}-->" class="btn btn-success">添加模板</a>			    
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th>名称</th>
							<th>标识</th>
							<th>内容</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td class="col-100"><!--{{item.title}}--></td>
							<td class="col-100"><!--{{item.ename}}--></td>
							<td>
							   <label class="label badge-info"> 微信</label><label class="badge badge-success"><!--{{item.content.weixin}}--></label>
							   <label class="label badge-info">微博</label><label class="badge badge-success"><!--{{item.content.weibo}}--></label>
							</td>
							<td>
							    <a href="<!--{{url('system/share/add-tpl',{id:item.id})}}-->" class="btn btn-primary">编辑</a>
							    <!--{%if item.ename=='share_tpl_activity_info'%}-->
							    <a href="<!--{{url('system/share/adv-list',{id:item.ename})}}-->" class="btn btn-primary">分享活动</a>
							    <!--{%endif%}-->							    
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

