<!--{%extends "sub-layout-system.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>积分等级设置</h3>
			</div>
			<div class="box-content">
				<form action="<!--{{url('system/grade/save')}}-->" method="POST" class='form-horizontal'>
				<input name="id" type="hidden" value="<!--{{level.id}}-->" />				
				<div class="control-group">
					<label for="textfield" class="control-label">名称</label>
					<div class="controls">
					    <input name="name" id="name" type="text" class="input-xlarge" value="<!--{{level.name}}-->" />
					</div>
				</div>				
				<div class="control-group">
					<label for="textfield" class="control-label">图标</label>
					<div class="controls">
					    <input name="img" id="img" type="text" class="input-small" value="<!--{{level.img}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label for="textfield" class="control-label">上限</label>
					<div class="controls">
					    <input name="start" id="start" type="text" class="input-small" value="<!--{{level.start}}-->" />
					</div>
				</div>
				<div class="control-group">
					<label for="textfield" class="control-label">下限</label>
					<div class="controls">
					    <input name="end" id="end" type="text" class="input-small" value="<!--{{level.end}}-->" />
					</div>
				</div>
				
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->