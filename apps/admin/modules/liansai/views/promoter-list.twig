<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					推广员列表
				</h3>
				<div class="actions">
				    <form action="<!--{{url('yxvl_eSports/VltvLive/live')}}-->" class="">
				    <table class="table-filter">				        
				        <tr>
				            <td>
                                <input name="keyword" type="text" class="input-medium" placeholder="推广员手机" value="<!--{{search.keyword}}-->">
                            </td>
				            <td>
								<input name="keyword" type="text" class="input-medium" placeholder="推广员ID" value="<!--{{search.keyword}}-->">
							</td>
                            <td><span class="label label-blue">开始时间</span>
