        <!--{{pagelinks}}-->
    </div>
</div>    
    <script>
    function searchTask()
    {
        var keytype = $("input[name='keytype']:checked").val();
        var keyword = $('#keyword').val();
        var platformType = $('#platformType').val();
        var offline = $("input[name='offline']").val();
        var lineId = $("input[name='lineId']").val();
        $.ajax({
            url:'/v4_task/task/subtask-pop-list',
            data:{keytype:keytype,keyword:keyword,lineId:lineId,offline:offline,platformType:platformType},
            dataType:'json',
            success:function(json){
                var html = '';
                html = json.html;
                $.dialog.list['pop-subtask-list'].content(html);		                
            }
        });
    }
    function init_page()
    {
        //
        $('.select-subtask-id').each(function(){
            $(this).click(function(){
                var task_id = $(this).attr('data-id');
                var task_name = $('#task_name_'+task_id).text();
                set_selected_subtask(task_id,task_name);
                $.dialog.list['pop-subtask-list'].close();
            });
        });
        //
        $('.pagelink a').each(function(){
            var url = $(this).attr('href');            
            $(this).attr('href','javascript:void(0);');
            $(this).click(function(){
                $.ajax({
                    url:url,
                    dataType:'json',
		            success:function(json){
		                var html = '';
		                html = json.html;
		                $.dialog.list['pop-subtask-list'].content(html);		                
		            }
                });
            });
            
        });
    }
    init_page();
    </script>