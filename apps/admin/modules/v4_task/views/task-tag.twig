<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<link href="/static/css/app.css" rel="stylesheet" type="text/css"/>
<div class="row-fluid">
    <div class="span12">
		<div class="box">
            <div class="box-title">
                <h3>任务标签排序</h3>
            </div>

			<div class="box-content">
			    <form id="activity-task" class='form-horizontal form-validate' >

			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
                            <th class="col-100">任务标签</th>
                            <th class="col-100">排序值</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in data%}-->
						<tr>
							<td><!--{{item.id}}--><input type="hidden" name="id[]" value="<!--{{item.id}}-->" /></td>
                            <td><!--{{item.name}}--></td>
                            <td><input type="text" name="sortValue[]" class="input-large" value="<!--{{item.sortValue}}-->" /></td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
		    
			</div>
			    </form>
                <div class="span1"></div>
                <div class="form-actions">
                    <button id="subFrom" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                </div>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>

    $('#subFrom').click(function(){
        var data = $('#activity-task').serialize();
        if (window.confirm('你确定要修改吗？')) {
            $.ajax({
                type: "POST",
                url: '<!--{{url('v4_task/task/task-tag-update')}}-->',
                data: data,
                dataType: "json",
                success: function(res){
                    if(res.success == 'true') {
                        alertify.success(res.msg);
                    } else {
                        alertify.error(res.msg);
                    }
                }

            });
        } else {
            return false;
        }

    });
</script>
<!--{%endblock%}-->