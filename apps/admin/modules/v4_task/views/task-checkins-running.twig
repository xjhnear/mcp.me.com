<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					连续签到列表
				</h3>
				<div class="actions">
				    <table class="table-filter">
				        <tr>				            
				            <td><a href="<!--{{url('a_activity/atask/do-checkins')}}-->?type=running" class="btn btn-teal">新建连续签到</a></td>
				        </tr>
				    </table>
				
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">标题</th>
							<th class="col-80">连续天数</th>
							<th class="col-80">游币奖励</th>
							<th class="col-80">开始时间</th>
							<th class="col-80">结束时间</th>
							<th class="col-60">显示</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>							
							<td><!--{{item.title}}--></td>
							<td><!--{{item.reward_days}}--></td>
							<td><!--{{item.reward_value}}--></td>
							<td><!--{{item.start_time|date('Y-m-d')}}--></td>
							<td><!--{{item.end_time|date('Y-m-d')}}--></td>
							<td>
							    <!--{%if item.is_show==1%}--><span class="badge badge-success">显示</span><!--{%else%}--><span class="badge badge-important">隐藏</span><!--{%endif%}-->
							</td>
							<td>
							    <a href="<!--{{url('a_activity/atask/do-checkins')}}-->?id=<!--{{item.id}}-->" class="btn btn-primary">编辑</a>
							    <a href="<!--{{url('a_activity/atask/query-checkins')}}-->?ctid=<!--{{item.id}}-->" class="btn btn-primary">查询</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			
			<div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    gameselect('#gameselect');    
    
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});    
</script>
<!--{%endblock%}-->