<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					任务链管理
				</h3>
				<div class="actions">	
				    <form action="<!--{{url('a_activity2/task/task-chain-list')}}-->" method="GET">
				    <input name="action_type" type="hidden" value="<!--{{action_type}}-->" />		
				    <table class="table-filter">				        
				        <tr>		
                            <td><input name="title" type="text" class="input-xlarge" value="<!--{{title}}-->" /></td>
				            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <td><a href="<!--{{url('a_activity2/task/do-statistic')}}-->" class="btn btn-teal">手动统计</a></td>
				            <td><a href="<!--{{url('a_activity2/task/task-chain-add')}}-->" class="btn btn-teal">新建任务线</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <!--{%if action_type==1%}-->
						    <th class="col-80">活动类型</th>
						    <!--{%endif%}-->
							<th class="col-150">活动标题</th>
                            <th class="col-100">游戏</th>
							<th class="col-80">开始时间</th>
							<th class="col-80">结束时间</th>
							<th class="col-100">待/完成/总数</th>
							<th class="col-60">属性</th>
							<th class="col-60">奖励</th>
                            <th class="col-60">奖励发放</th>
                            <th class="col-60">任务书</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>

						    <td>连续</td>

							<td>
								<!--{{item.taskName}}-->
							</td>
							<td><!--{{item.typeCondition['gameName']}}--></td>
							<td><!--{{item.startTime|date('Y-m-d')}}--></td>
							<td><!--{{item.endTime|date('Y-m-d')}}--></td>
							<td>
							<<!--{{(item.maxUsers-item.usedUsers)}}-->/<!--{{item.usedUsers}}-->/<!--{{item.maxUsers}}-->
							</td>
							<td>
							    <!--{%if item.isOpen==1%}--><span class="badge badge-success">显示</span><!--{%else%}--><span class="badge badge-important">隐藏</span><!--{%endif%}-->
							</td>
							<td><!--{{item.money}}--></td>
                            <td><!--{{item.money}}--></td>
                            <td><!--{{item.money}}--></td>
							<td>
                                <a href="<!--{{url('a_activity2/task/task-list')}}-->?lineId=<!--{{item.taskId}}-->" class="btn btn-primary">查看子任务</a>
                                <a href="<!--{{url('a_activity2/task/task-add')}}-->?lineId=<!--{{item.taskId}}-->&lineName=<!--{{item.taskName}}-->&lineType=<!--{{item.lineType}}-->" class="btn btn-primary">添加子任务</a>
							    <a href="<!--{{url('a_activity2/task/task-add')}}-->?id=<!--{{item.taskId}}-->" class="btn btn-primary">编辑</a>
                                <!--{%if item.status>0 %}-->
                                <a href="<!--{{url('a_activity2/task/do-del',{'id':item.taskId})}}-->" class="btn btn-drop ajax-del">开启</a>
                                <!--{%else%}-->
                                <a href="<!--{{url('a_activity2/task/do-del',{'id':item.taskId})}}-->" class="btn btn-drop ajax-del">关闭</a>
                                <!--{%endif%}-->
                                <!--{#<a href="#" class="btn" rel="popover" data-trigger="hover" data-placement="left" title="参与用户统计" data-content="">查看统计</a>#}-->
							    <a href="<!--{{url('a_activity2/task/do-del',{'id':item.taskId})}}-->" class="btn btn-drop ajax-del">删除</a>
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>			    
			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

