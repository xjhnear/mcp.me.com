<!--{%extends "sub-layout-message.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					消息列表					
				</h3>
				<div class="actions">
				    <form action="<!--{{url('a_message/push/list')}}-->">
				    <table class="table-filter">
				        <tr>
							<td>
								<!--{{form_select('pushPlatform',{'1':'百度','2':'个推'},search.pushPlatform,{'style':'width:100px;margin-bottom:0px;'})}}-->
							</td>
				            <td>
				                <div class="input-append date datepick" id="dpStart" data-date="">
									<input name="begin_time" type="text" class="input-small" value="<!--{{search.begin_time}}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
				            </td>
				            <td>
				                <div class="input-append date datepick" id="dpEnd" data-date="">
									<input name="end_time" type="text" class="input-small" value="<!--{{ search.end_time }}-->" readonly="">
									<span class="add-on"><i class="icon-calendar"></i></span>
								</div>
							</td>
							<td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <td><a href="<!--{{url('a_message/push/add')}}-->" class="btn btn-teal">发布消息</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
							<th class="col-60">标题</th>
							<th class="col-60">类型</th>
							<th class="col-60">发送对象</th>
							<th class="col-40">添加时间</th>
							<th class="col-80">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.messages.title}}--></td>
							<td>
								<!--{% if item.pushType==1%}-->单推<!--{%endif%}-->
								<!--{% if item.pushType==2%}-->组推<!--{%endif%}-->
								<!--{% if item.pushType==3%}-->全推<!--{%endif%}-->
							</td>
							<td>
								<!--{%if item.pushType == 3%}-->全体用户<!--{%endif%}-->
								<!--{%if item.pushType == 1%}-->
								<!--{{item.messages.description.toUid}}-->
								<!--{%endif%}-->
							</td>
							<td><!--{{item.createTime}}--></td>
							<td>
								<!--{% if item.pushAmount>0%}-->成功<!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
$(function(){
    $('a.ajax-del').bind('click',function(){
        if(!confirm('确定要删除数据吗？')){
            return false;
        }
    });
});
</script>
<!--{%endblock%}-->