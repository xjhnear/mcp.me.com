<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					专属用户列表				
				</h3>
				<div class="actions">
				    <form action="<!--{{url('a_giftbag/giftcard/list')}}-->">
				    <table class="table-filter">
				        <tr>				            
				            <td>用户ID<input type="text" name="uid" id="" class="input-small" placeholder="uid" value="<!--{{search.uid}}-->"/></td>				          				            
				            <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
				            <td><a href="<!--{{url('a_giftbag/gift/add-appoint-user',{'giftbag_id':giftbag_id})}}-->" class="btn ">批量发卡号</a></td>
				        </tr>
				    </table>
				    </form>
				</div>
			</div>
            <div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
							<th class="col-150">卡号</th>
							<th>领取人</th>
							<th class="col-80">领取时间</th>														
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.cardno}}--></td>
							<td><span class="label label-success"><!--{{item.uid}}--></span></td>
							<td><!--{%if item.add_time%}--><!--{{item.add_time|date('Y-m-d H:i:s')}}--><!--{%endif%}--></td>
							<td>
							    <!--{%if item.is_send==0%}-->
							    <a href="<!--{{url('a_giftbag/gift/push-appoint',{'id':item.id})}}-->" class="btn">发送消息</a>
							    <!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>
