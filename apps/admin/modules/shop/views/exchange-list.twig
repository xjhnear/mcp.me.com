<!--{%extends "sub-layout-shop.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					兑换管理				
				</h3>
				<div class="actions">
				
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">ID</th>
						    <th class="col-60">图片</th>
							<th class="col-150">奖品名称</th>
							<th class="col-80">奖品类型</th>
							<th class="col-80">所需游币</th>
							<th class="col-80">兑换者</th>
							<th class="col-80">兑换时间</th>
							<th class="col-180">信息</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in datalist%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td class="user-avatar"><img src="http://img.youxiduo.com<!--{{item.listpic}}-->" class="" /></td>
							<td><!--{{item.name}}--></td>
							<td><!--{% if item.goods_type == 1%}-->实物奖品<!--{%elseif item.goods_type == 2%}-->虚拟奖品<!--{%endif%}--></td>
							<td><!--{{item.score}}--></td>
							<td><a href="<!--{{url('user/users/edit',{'id':item.uid})}}-->" target="_blank"><span class="badge badge-info"><!--{{item.uid}}--></span><span class="badge badge-success"><!--{{item.user.nickname}}--></span></a></td>
							<td><!--{{item.addtime|date('Y-m-d')}}--></td>							
							<td><!--{% if item.goods_type == 1%}--><!--{{item.expense}}--><!--{%else%}--><!--{{item.cardno}}--><!--{%endif%}--></td>
							<td>
								<!--{%if item.status == 0%}-->
									<input id="<!--{{item.id}}-->" data-on-color="danger" data-on-text="已发放" data-off-color="success" data-off-text="未发放" class="my-checkbox" type="checkbox" />
								<!--{%else%}-->
									<input id="<!--{{item.id}}-->" data-on-color="danger" data-on-text="已发放" data-off-color="success" data-off-text="未发放" class="my-checkbox" type="checkbox" checked/>
								<!--{%endif%}-->
							</td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->
<!--{%block footer_js%}-->
<script>
	$("[class='my-checkbox']").bootstrapSwitch();
	$('input[class="my-checkbox"]').on('switchChange.bootstrapSwitch', function(event, state) {
		$.get("/shop/exchange/change-status",{"id":this.id,"status":state?1:0},function(data){
			if(data.status == 1){
				alertify.success(data.msg);
			}else{
				alertify.error(data.msg);
			}
    	});
	});
</script>
<!--{%endblock%}-->