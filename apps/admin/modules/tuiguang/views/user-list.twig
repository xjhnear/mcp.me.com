<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					推广用户列表
				</h3>
				<div class="actions">
				    <form action="<!--{{url('tuiguang/home/user')}}-->" class="">
				    <table class="table-filter">				        
				        <tr>
				            <td>
                                <input name="pMobile" type="text" class="input-medium" placeholder="推广员手机号" value="<!--{{search.pMobile}}-->">
                            </td>
				            <td>
								<input name="pUserMobile" type="text" class="input-medium" placeholder="推广用户手机号" value="<!--{{search.pUserMobile}}-->">
							</td>

                            <td><span class="label label-blue">开始时间</span>
                                <div class="input-append date " >
