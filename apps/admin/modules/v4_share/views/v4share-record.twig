                            </tr>
                        </table>
                    </form>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                    <tr>
                        <th class="col-60">老用户</th>
                        <th class="col-60">老用户奖励</th>
                        <th class="col-60">老用户完成时间</th>
                        <th class="col-60">新用户完成时间</th>
                        <th class="col-60">新用户</th>
                        <th class="col-60">新用户奖励</th>
                        <th class="col-150">参与时间</th>
                        <th class="col-100">老用户完成状态</th>
                        <th class="col-100">新用户完成状态</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!--{% for item in data %}-->
                    <tr>
                        <td>
                            <span class="badge badge-info"><!--{{item.upperUid}}--></span>
                            <br/>
                            <a href="<!--{{url('v4user/users/edit',{'id':item.upperUid})}}-->" target="_blank">
                                <!--{{users[item.upperUid]['nickname']}}--><br>
                                <!--{{users[item.upperUid]['mobile']}}-->
                            </a>

                        </td>
                        <td class="user-avatar">
                            <!--{{ item.upperRewardName }}-->
                        </td>
                        <td>
                            <!--{%if item.uFinishTime %}-->
                            <!--{{ item.uFinishTime|date('Y-m-d H:i:s') }}-->
                            <!--{%endif%}-->
                        </td>
                        <td>
                            <!--{%if item.lFinishTime %}-->
                            <!--{{ item.lFinishTime|date('Y-m-d H:i:s') }}-->
                            <!--{%endif%}-->
                        </td>
                        <td><!--{{ item.lowerMobile }}--></td>
                        <td class="user-avatar">
                            <!--{{ item.lowerRewardName }}-->
                        </td>
                        <td><!--{{ item.joinTime|date('Y-m-d H:i:s') }}--></td>
                        <td>
                            <!--{{ finishType[item.uSendRewardStatus] }}-->
                        </td>
                        <td>
                            <!--{{ finishTypeNew[item.lSendRewardStatus] }}-->
                        </td>
                    </tr>
                    <!--{%endfor%}-->
                    </tbody>
                </table>
                <div class="pagelink">
                    <!--{{ pagelinks }}-->
                </div>
            </div>
        </div>
    </div>
</div>
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script src="/static/js/laydate/laydate.js"></script>
<script>
    $(function(){
        $('a.ajax-clear').bind('click',function(){
            var depot_id = $(this).attr('data');
            alertify.confirm('确定清空所有（未领取）卡号么？',function(e){
                if(e){
                    $.get('/duang/gbdepot/clear',{'depot_id':depot_id},function(resp){
                        if(resp.state){
                            alertify.success(resp.msg);
                            setTimeout(function(){
                                location.reload();
                            },1000);
                        }else{
                            alertify.error(resp.msg);
                        }
                    },'json')
                }
            });
        });
        $('a.ajax-del').bind('click',function(){
            var depot_id = $(this).attr('data');
            alertify.confirm('确定礼包么？（礼包卡及活动关联都会被删除）',function(e){
                if(e){
                    $.get('/duang/gbdepot/delete',{'depot_id':depot_id},function(resp){
                        if(resp.state){
                            alertify.success(resp.msg);
                            setTimeout(function(){
                                location.reload();
                            },1000);
                        }else{
                            alertify.error(resp.msg);
                        }
                    },'json')
                }
            });
        });
    });
    $("#daochu").bind('click',function(){
    	if ($("#myform").serialize()) {
    		window.location.href=$("#myform2").attr("action")+"?"+$("#myform").serialize();
    	} else {
    		window.location.href=$("#myform2").attr("action")+location.search;
    	}
    }) 
</script>
<!--{%endblock%}-->