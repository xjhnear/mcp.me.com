<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    奖励记录
                </h3>
                <div class="actions">
                	<form id="myform2" action="<!--{{url('v4_share/home/data-download')}}-->"></form>
                    <form action="<!--{{url('v4_share/home/v4share-record')}}-->">
