<!--{%extends "sub-layout-activity.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
<div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>厂商管理</h3>
			</div>
			<div class="box-content">
			    <form id="form-activity" action="<!--{{url('zt_activity/chinajoy/save-manufacturers')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
			    <input id="id" name="id" type="hidden" value="<!--{{id}}-->" />
				<div class="control-group">
					<label class="control-label">厂商名</label>
					<div class="controls">
						<input type="text" name="title" class="input-large" value="<!--{{title}}-->" data-rule-required="true" data-msg-required="厂商名不能为空" />
						<span class="help-inline"></span>
					</div>
				</div>
                <div class="control-group">
                    <label class="control-label">调用关键词</label>
                    <div class="controls">
                        <input type="text" name="keyword" class="input-large" value="<!--{{keyword}}-->" data-rule-required="true" data-msg-required="调用关键词不能为空" />
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">排序</label>
                    <div class="controls">
                        <input type="text" name="sort" class="input-small" value="<!--{{sort|default(100)}}-->" data-rule-number="true" data-msg-number="只能填写数字" />
                        <span class="help-inline"></span>
                    </div>
                </div>
                <div class="control-group">
					<label class="control-label">ICON</label>
					<div class="controls">
						<div class="fileupload fileupload-new" data-provides="fileupload">
							<div class="fileupload-new thumbnail" style="max-width: 60px; max-height: 60px;"><img src="<!--{{icon|default('/static/img/nopic.gif')}}-->" /></div>
							<div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 60px; max-height: 60px; line-height: 20px;"></div>
							<div>
								<span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择照片</span><span class="fileupload-exists">重新选择</span><input type="file" name='icon' /></span>
							</div>
						</div>
						<span class="help-inline">图片最佳尺寸：604*173</span>
					</div>
				</div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
                </div>
			    </form>
			</div>
		</div>
    </div>
</div>			
<!--{%endblock%}-->

<!--{%block footer_js%}-->
<script>
    $('input.datetimepicker').datetimepicker({format:'Y-m-d',lang:'ch'});
</script>
<!--{%endblock%}-->
