<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					百炼成仙月儿海选管理
				</h3>
				<div class="actions">

				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-60">姓名</th>
							<th class="col-120">宣言</th>
							<th class="col-80">照片</th>
                            <th class="col-80">QQ</th>
                            <th class="col-80">Email</th>
                            <th class="col-80">电话</th>
                            <th class="col-40">票数</th>
                            <th class="col-80">提交时间</th>
							<th class="col-150 table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in preson%}-->
						<tr>
							<td><!--{{item.name}}--></td>
							<td><!--{{item.declaration}}--></td>
                            <td><!--{%if item.pics%}--><img width="100" src="<!--{{item.pics}}-->" /><!--{%endif%}--></td>
                            <td><!--{{item.qq}}--></td>
                            <td><!--{{item.email}}--></td>
                            <td><!--{{item.tel}}--></td>
                            <td><!--{{item.votes}}--></td>
							<td><!--{{item.addtime|date('Y-m-d')}}--></td>
							<td>
                            <!--{%if item.audit==1%}-->
                            <a href="<!--{{url('zt_activity/blcx/list-close',{id:item.id})}}-->" class="btn btn-primary">已通过</a>
                            <!--{%else%}-->
                            <a href="<!--{{url('zt_activity/blcx/list-open',{id:item.id})}}-->" class="btn btn-primary">未通过</a>
                            <!--{%endif%}-->
                            <!--{%if item.singlepic==''%}-->
                            <a href="<!--{{url('zt_activity/blcx/move',{id:item.id})}}-->" class="btn btn-primary">移动图片</a>
                            <!--{%endif%}-->
                            <a href="<!--{{url('zt_activity/blcx/edit',{id:item.id})}}-->" class="btn btn-primary">编辑</a>
							</td>

						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

