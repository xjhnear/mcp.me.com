<!--{%extends "sub-layout-activity.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
	<div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					ChinaJoy弹幕管理
				</h3>
				<div class="actions">
                    <form action="<!--{{url('zt_activity/chinajoy/barrage')}}-->" class="">
                        <table class="table-filter">
                            <tr>
                                <td>
                                    弹幕内容  <input name="keyword" type="text" class="input-medium" placeholder="" value="<!--{{cond.keyword}}-->">
                                </td>
                                <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
                            </tr>
                        </table>
                    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-20">ID</th>
							<th class="col-120">弹幕内容</th>
							<th class="col-80">时间</th>
							<th class="col-40">IP</th>
							<th class="col-60">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for item in result%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.content}}--></td>
							<td><!--{{item.addtime|date('Y-m-d H:i:s')}}--></td>
							<td><!--{{item.ip}}--></td>
							<td>
                                <a href="<!--{{url('zt_activity/chinajoy/barrage-del',{id:item.id})}}-->" class="btn btn-primary">删除</a>
							</td>

						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>
			</div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

