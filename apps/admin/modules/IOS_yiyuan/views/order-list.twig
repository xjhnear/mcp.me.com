<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
	    <div class="box box-color box-bordered">
			<div class="box-title">
				<h3>
					<i class="icon-table"></i>
					订单管理
				</h3>
				<div class="actions">
				    <form action="<!--{{url('IOS_yiyuan/order/list')}}-->" class="">
                        <table class="table-filter">
                            <tr>
                                <td><span class="label label-blue">开始时间</span>
                                    <div class="input-append date " >
                                        <input name="startDate" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker" id="date_timepicker_start" value="<!--{{search.startDate}}-->" readonly>
                                        <span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </td>
                                <td>结束时间
                                    <div class="input-append date "  data-date="">
                                        <input name="endDate" onclick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" type="text" class="input-medium datetimepicker"  value="<!--{{search.endDate}}-->" id="date_timepicker_end" readonly>
                                        <span class="add-on"><i class="icon-calendar"></i></span>
                                    </div>
                                </td>
                                <td>
                                    <input type="text" class="input-small" name="userId" placeholder="用户UID" value="<!--{{ search.userId }}-->">
                                </td>
                                <td>
                                <!--{{form_select('status',statusArr,search.status,{'style':'margin-top:10px;width:100px'})}}-->
                                </td>
                                <input type="hidden" name="shareConfigId" value="<!--{{ search.shareConfigId }}-->"/>
                                <td><button class="btn btn-teal"><i class="icon-search"></i>搜索</button></td>
                            </tr>
                        </table>
				    </form>
				</div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-hover table-nomargin">
			        <thead>
						<tr>
						    <th class="col-120">订单号</th>
						    <th class="col-120">商品名称</th>
							<th class="col-120">订单时间</th>
							<th class="col-120">玩家信息</th>
                            <th class="col-120">收获地址</th>
                            <th class="col-120">状态</th>
							<th class="table-btn-group">操作</th>
						</tr>
					</thead>
					<tbody>
					    <!--{%for key,item in list%}-->
						<tr>
							<td><!--{{item.id}}--></td>
							<td><!--{{item.merchandiseName}}--></td>
                            <td><!--{{item.createTime|date('Y-m-d H:i:s')}}--></td>
                            <td><!--{{item.userhtml}}--></td>
                            <td><a href="#nogo" <!--{%if item.addressInfo%}-->  data-target="#myModal"  data-toggle="modal"  <!--{%else%}-->disabled="disabled" <!--{%endif%}-->  class="add btn btn-primary"  add_add='<!--{{item.addressInfo}}-->'  class="btn btn-primary ajax-del">查看地址</a></td>
                            <td><!--{{statusArr[item.status]}}--> </td>
							<td>
                                <!--{%if item.status=="0"%}-->
                                <a href="<!--{{url('IOS_yiyuan/order/add')}}-->?id=<!--{{item.id}}-->&createTime=<!--{{item.createTime}}-->&userName=<!--{{item.nickname}}-->&receiveaddId=<!--{{item.receiveaddId}}-->&status=<!--{{item.status}}-->&logisticsNumber=<!--{{item.logisticsNumber}}-->&logisticsComName=<!--{{item.logisticsComName}}-->" class="btn btn-primary">发货</a>
                                <!--{%else%}-->
                                <a href="<!--{{url('IOS_yiyuan/order/add')}}-->?id=<!--{{item.id}}-->&createTime=<!--{{item.createTime}}-->&userName=<!--{{item.nickname}}-->&receiveaddId=<!--{{item.receiveaddId}}-->&status=<!--{{item.status}}-->&logisticsNumber=<!--{{item.logisticsNumber}}-->&logisticsComName=<!--{{item.logisticsComName}}-->" class="btn btn-primary">查看</a>
                                <!--{%endif%}-->
                            </td>
						</tr>
						<!--{%endfor%}-->
					</tbody>
			    </table>
			    <div class="pagelink">
			        <!--{{pagelinks}}-->
			    </div>

                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title" id="myModalLabel">地址</h4>
                            </div>
                            <div class="modal-body">
                                <p><span id="add_add">正在加载数据...</span></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                            </div>
                        </div>
                    </div>
                </div>

			</div>
		</div>
	</div>
</div>
<!--{%endblock%}-->

