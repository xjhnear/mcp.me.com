<!--{%block header_css%}-->
<link rel="stylesheet" href="/static/css/plugins/multiselect/bootstrap-multiselect.css">

<link rel="stylesheet" href="/static/css/plugins/jqfileupload/bootstrap.min.css">
<link rel="stylesheet" href="/static/css/plugins/jqfileupload/jquery.fileupload.css">
<link rel="stylesheet" href="/static/css/plugins/jqfileupload/jquery.fileupload-ui.css">
