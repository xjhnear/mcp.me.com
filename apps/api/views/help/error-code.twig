<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>错误码</h3>
				<div class="actions"><a href="javascript:window.history.go(-1);" class="btn btn-beal">返回</a></div>
			</div>
			<div class="box-content nopadding">
			    <table class="table table-bordered">
	                <tbody>
	                <!--{%for group in errorlist%}-->	                
	                    <tr>
	                        <td colspan="3"><!--{{group.name}}--></td>
	                    </tr>
	                    <tr>
	                        <th class="col-100">代号</th>
	                        <th class="col-150">错误信息</th>
	                        <th>描述</th>
	                    </tr>
	                    <!--{%for item in group.items%}-->	                    
	                    <tr>
	                        <td><!--{{item.code}}--></td>
	                        <td><!--{{item.error_code}}--></td>
	                        <td><!--{{item.error_description}}--></td>
	                    </tr>
	                    <!--{%endfor%}-->
	                <!--{%endfor%}-->    	                    
	                </tbody>
			    </table>											
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->